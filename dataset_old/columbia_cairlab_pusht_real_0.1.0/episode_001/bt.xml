<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="SetBlackboard" key="object_id" value="t_block"/>
    <Action ID="SetBlackboard" key="target_id" value="t_target"/>
    <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Fallback>
      <Condition ID="IsAt" target="prepush_pose"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="MoveTo" target="prepush_pose" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="0"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="0" timeout_ms="1500"/>
    <Action ID="MoveDelta" axis="y" dist="0.05" timeout_ms="800"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="0" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="t_target" tolerance="0.02" timeout_ms="1200"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
