<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="SetBlackboard" key="object" value="t_block"/>
    <Action ID="SetBlackboard" key="goal" value="goal_region"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="180"/>
    <Repeat num_cycles="2">
      <Sequence>
        <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
        <Action ID="Push" target="t_block" distance="0.1" direction_deg="180" timeout_ms="1500"/>
        <Action ID="Wait" timeout_ms="500"/>
      </Sequence>
    </Repeat>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Repeat num_cycles="1">
      <Sequence>
        <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
        <Action ID="Push" target="t_block" distance="0.05" direction_deg="90" timeout_ms="1500"/>
        <Action ID="Wait" timeout_ms="400"/>
      </Sequence>
    </Repeat>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
