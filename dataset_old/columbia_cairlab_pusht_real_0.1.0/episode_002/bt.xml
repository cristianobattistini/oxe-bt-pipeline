<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="SetBlackboard" key="object" value="t_block"/>
    <Action ID="SetBlackboard" key="target" value="target_zone"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="MoveAbove" target="t_block" offset_z="0.1" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    <Action ID="MoveDelta" axis="y" dist="0.05" timeout_ms="500"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="0"/>
    <Action ID="MoveDelta" axis="x" dist="0.05" timeout_ms="500"/>
    <Action ID="Push" target="t_block" distance="0.05" direction_deg="270" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
