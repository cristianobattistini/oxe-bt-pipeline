<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="raise_white_carton">
      <!-- Approach Phase with Recovery Fallback -->
      <Fallback name="approach_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="white_carton"/>
        </RetryUntilSuccessful>
        <!-- Recovery: Try navigating again -->
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="white_carton"/>
        </RetryUntilSuccessful>
      </Fallback>
      
      <!-- Grasp Phase with Recovery Fallback -->
      <Fallback name="grasp_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="white_carton"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_grasp">
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="NAVIGATE_TO" obj="white_carton"/>
          </RetryUntilSuccessful>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="GRASP" obj="white_carton"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>
      <!-- The robot is now holding (raising) the white carton -->
    </Sequence>
  </BehaviorTree>
</root>