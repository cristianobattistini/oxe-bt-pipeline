<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="put_down_blue_can">
      <!-- Approach blue can -->
      <Fallback name="approach_blue_can_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="blue_can"/>
        </RetryUntilSuccessful>
        <!-- Recovery: try again after a short wait -->
        <Sequence name="recovery_approach_blue_can">
          <Action ID="NAVIGATE_TO" obj="blue_can"/>
        </Sequence>
      </Fallback>

      <!-- Grasp with fallback and retry -->
      <Fallback name="grasp_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="blue_can"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_grasp">
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="NAVIGATE_TO" obj="blue_can"/>
          </RetryUntilSuccessful>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="GRASP" obj="blue_can"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>

      <!-- Navigate to table with fallback and retry -->
      <Fallback name="approach_table_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="table"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_approach_table">
          <Action ID="NAVIGATE_TO" obj="table"/>
        </Sequence>
      </Fallback>

      <!-- Place on table with fallback and retry -->
      <Fallback name="place_on_table_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="table"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_place_on_table">
          <Action ID="PLACE_ON_TOP" obj="table"/>
        </Sequence>
      </Fallback>

      <!-- Release with retry -->
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="RELEASE"/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>