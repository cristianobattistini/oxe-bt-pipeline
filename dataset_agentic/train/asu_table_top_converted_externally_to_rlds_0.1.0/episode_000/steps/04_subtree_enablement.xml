<root main_tree_to_execute="MainTree">

  <!-- MainTree refactored to use SubTrees -->
  <BehaviorTree ID="MainTree">
    <Sequence name="put_down_blue_can">
      <SubTree ID="T_Navigate" target="blue_can"/>
      <SubTree ID="T_Manipulate_Grasp" target="blue_can"/>
      <SubTree ID="T_Navigate" target="table"/>
      <SubTree ID="T_Manipulate_Place" target="table"/>
    </Sequence>
  </BehaviorTree>

  <!-- Standard SubTree: Navigation -->
  <BehaviorTree ID="T_Navigate">
    <Fallback name="navigate_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="NAVIGATE_TO" obj="{target}"/>
      </RetryUntilSuccessful>
      <Sequence name="recovery_navigate">
        <Action ID="NAVIGATE_TO" obj="{target}"/>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- Standard SubTree: Grasp with retries and recovery -->
  <BehaviorTree ID="T_Manipulate_Grasp">
    <Fallback name="grasp_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="GRASP" obj="{target}"/>
      </RetryUntilSuccessful>
      <Sequence name="recovery_grasp">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="{target}"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="{target}"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- Standard SubTree: Place with retries and recovery, then release -->
  <BehaviorTree ID="T_Manipulate_Place">
    <Sequence name="place_and_release">
      <Fallback name="place_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="{target}"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_place">
          <Action ID="PLACE_ON_TOP" obj="{target}"/>
        </Sequence>
      </Fallback>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="RELEASE"/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>

  <!-- Standard SubTree: Open -->
  <BehaviorTree ID="T_Open">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="OPEN" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- Standard SubTree: Close -->
  <BehaviorTree ID="T_Close">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="CLOSE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- Standard SubTree: Toggle -->
  <BehaviorTree ID="T_Toggle">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="TOGGLE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

</root>