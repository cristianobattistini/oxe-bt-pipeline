<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="place_down_brown_object">
      <!-- Approach brown object -->
      <Action ID="NAVIGATE_TO" obj="brown_object"/>
      
      <!-- Grasp with recovery -->
      <Fallback name="grasp_phase">
        <Action ID="GRASP" obj="brown_object"/>
        <Sequence name="recovery_grasp">
          <Action ID="NAVIGATE_TO" obj="brown_object"/>
          <Action ID="GRASP" obj="brown_object"/>
        </Sequence>
      </Fallback>
      
      <!-- Move to placement area (assume table as default) -->
      <Action ID="NAVIGATE_TO" obj="table"/>
      
      <!-- Place and release -->
      <Action ID="PLACE_ON_TOP" obj="table"/>
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>