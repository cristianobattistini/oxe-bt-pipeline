<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="put_down_white_carton">
      <!-- Approach white carton with retry -->
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="NAVIGATE_TO" obj="white_carton"/>
      </RetryUntilSuccessful>
      
      <!-- Grasp with retry and fallback recovery -->
      <Fallback name="grasp_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="white_carton"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_grasp">
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="NAVIGATE_TO" obj="white_carton"/>
          </RetryUntilSuccessful>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="GRASP" obj="white_carton"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>
      
      <!-- Put down (release) the white carton with retry -->
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="RELEASE" obj="white_carton"/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>