<root main_tree_to_execute="MainTree">
  <!-- MainTree using modular SubTrees -->
  <BehaviorTree ID="MainTree">
    <Sequence name="put_down_white_carton">
      <SubTree ID="T_Navigate" target="white_carton"/>
      <SubTree ID="T_Manipulate_Grasp" target="white_carton"/>
      <SubTree ID="T_Manipulate_Place" target="white_carton"/>
    </Sequence>
  </BehaviorTree>

  <!-- Standard SubTree Definitions -->

  <!-- T_Navigate: Navigate to target -->
  <BehaviorTree ID="T_Navigate">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="NAVIGATE_TO" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- T_Manipulate_Grasp: Grasp with retry and fallback recovery -->
  <BehaviorTree ID="T_Manipulate_Grasp">
    <Fallback name="grasp_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="GRASP" obj="{target}"/>
      </RetryUntilSuccessful>
      <Sequence name="recovery_grasp">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="{target}"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="{target}"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- T_Manipulate_Place: Place and release with retry -->
  <BehaviorTree ID="T_Manipulate_Place">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="RELEASE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- T_Open: Open target (placeholder for standardization) -->
  <BehaviorTree ID="T_Open">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="OPEN" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- T_Close: Close target (placeholder for standardization) -->
  <BehaviorTree ID="T_Close">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="CLOSE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- T_Toggle: Toggle target (placeholder for standardization) -->
  <BehaviorTree ID="T_Toggle">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="TOGGLE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>
</root>