<root main_tree_to_execute="MainTree">

  <!-- MainTree refactored to use SubTrees -->
  <BehaviorTree ID="MainTree">
    <Sequence name="seq_01">
      <!-- Approach phase -->
      <SubTree name="subtree_01" ID="T_Navigate" target="green_bottle"/>

      <!-- Grasp phase with retry and recovery -->
      <Fallback name="fallback_01">
        <!-- Primary grasp with retry -->
        <SubTree name="subtree_02" ID="T_Manipulate_Grasp" target="green_bottle"/>
        <!-- Recovery: re-navigate and retry grasp -->
        <Sequence name="seq_02">
          <SubTree name="subtree_03" ID="T_Navigate" target="green_bottle"/>
          <SubTree name="subtree_04" ID="T_Manipulate_Grasp" target="green_bottle"/>
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>

  <!-- SubTree Definitions -->

  <!-- Navigation SubTree -->
  <BehaviorTree ID="T_Navigate">
    <Fallback name="fallback_02">
      <Action name="nav_01" ID="NAVIGATE_TO" obj="{target}"/>
      <Action name="nav_02" ID="NAVIGATE_TO" obj="{target}"/>
    </Fallback>
  </BehaviorTree>

  <!-- Grasp SubTree with retry -->
  <BehaviorTree ID="T_Manipulate_Grasp">
    <RetryUntilSuccessful name="retry_01" num_attempts="3">
      <Action name="grasp_01" ID="GRASP" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- Place SubTree (standard, not used in MainTree but defined for completeness) -->
  <BehaviorTree ID="T_Manipulate_Place">
    <Sequence name="seq_03">
      <Action name="place_01" ID="PLACE_OBJECT" obj="{target}"/>
      <Action name="release_01" ID="RELEASE" obj="{target}"/>
    </Sequence>
  </BehaviorTree>

  <!-- Open SubTree (standard) -->
  <BehaviorTree ID="T_Open">
    <Action name="open_01" ID="OPEN" obj="{target}"/>
  </BehaviorTree>

  <!-- Close SubTree (standard) -->
  <BehaviorTree ID="T_Close">
    <Action name="close_01" ID="CLOSE" obj="{target}"/>
  </BehaviorTree>

  <!-- Toggle SubTree (standard) -->
  <BehaviorTree ID="T_Toggle">
    <Action name="toggle_01" ID="TOGGLE" obj="{target}"/>
  </BehaviorTree>

</root>