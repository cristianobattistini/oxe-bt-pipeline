<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="pick_green_bottle">
      <!-- Approach with recovery fallback -->
      <Fallback name="approach_phase">
        <Action ID="NAVIGATE_TO" obj="green_bottle"/>
        <Action ID="NAVIGATE_TO" obj="green_bottle"/>
      </Fallback>
      
      <!-- Grasp with retry and recovery -->
      <Fallback name="grasp_phase">
        <!-- Primary: Retry grasp up to 3 times -->
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="green_bottle"/>
        </RetryUntilSuccessful>
        <!-- Recovery: Re-navigate and retry grasp -->
        <Sequence name="recovery_grasp">
          <Fallback name="recovery_approach">
            <Action ID="NAVIGATE_TO" obj="green_bottle"/>
            <Action ID="NAVIGATE_TO" obj="green_bottle"/>
          </Fallback>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="GRASP" obj="green_bottle"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>