<root main_tree_to_execute="MainTree">

  <!-- MainTree refactored to use SubTrees -->
  <BehaviorTree ID="MainTree">
    <Sequence name="move_brown_object">
      <!-- Approach brown object -->
      <SubTree ID="T_Navigate" target="brown_object"/>
      
      <!-- Grasp with retry and recovery -->
      <SubTree ID="T_Manipulate_Grasp" target="brown_object"/>
      
      <!-- Move to table -->
      <SubTree ID="T_Navigate" target="table"/>
      
      <!-- Place on table -->
      <SubTree ID="T_Manipulate_Place" target="table"/>
      
      <!-- Release -->
      <SubTree ID="T_Manipulate_Release"/>
    </Sequence>
  </BehaviorTree>

  <!-- SubTree: Navigation to a target -->
  <BehaviorTree ID="T_Navigate">
    <Fallback name="navigate_phase">
      <Action ID="NAVIGATE_TO" obj="{target}"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="NAVIGATE_TO" obj="{target}"/>
      </RetryUntilSuccessful>
    </Fallback>
  </BehaviorTree>

  <!-- SubTree: Grasp with retry and recovery -->
  <BehaviorTree ID="T_Manipulate_Grasp">
    <Fallback name="grasp_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="GRASP" obj="{target}"/>
      </RetryUntilSuccessful>
      <Sequence name="recovery_grasp">
        <SubTree ID="T_Navigate" target="{target}"/>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="{target}"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- SubTree: Place with retry and recovery -->
  <BehaviorTree ID="T_Manipulate_Place">
    <Fallback name="place_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="PLACE_ON_TOP" obj="{target}"/>
      </RetryUntilSuccessful>
      <Sequence name="recovery_place">
        <SubTree ID="T_Navigate" target="{target}"/>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="{target}"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- SubTree: Release with retry (not parameterized) -->
  <BehaviorTree ID="T_Manipulate_Release">
    <Fallback name="release_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="RELEASE"/>
      </RetryUntilSuccessful>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="RELEASE"/>
      </RetryUntilSuccessful>
    </Fallback>
  </BehaviorTree>

  <!-- Standard SubTrees (stubs, as requested) -->
  <BehaviorTree ID="T_Open">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="OPEN" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <BehaviorTree ID="T_Close">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="CLOSE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <BehaviorTree ID="T_Toggle">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="TOGGLE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

</root>