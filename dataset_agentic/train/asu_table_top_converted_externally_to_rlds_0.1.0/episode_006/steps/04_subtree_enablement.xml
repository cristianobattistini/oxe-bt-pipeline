<root main_tree_to_execute="MainTree">

  <!-- MainTree refactored to use SubTrees -->
  <BehaviorTree ID="MainTree">
    <Sequence name="place_down_blue_bottle">
      <SubTree ID="T_Navigate" target="blue_bottle"/>
      <SubTree ID="T_Manipulate_Grasp" target="blue_bottle"/>
      <SubTree ID="T_Navigate" target="table"/>
      <SubTree ID="T_Manipulate_Place" target="table"/>
    </Sequence>
  </BehaviorTree>

  <!-- Standard SubTree Definitions -->

  <!-- T_Navigate: Retry navigation to target -->
  <BehaviorTree ID="T_Navigate">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="NAVIGATE_TO" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- T_Manipulate_Grasp: Grasp with fallback and retries -->
  <BehaviorTree ID="T_Manipulate_Grasp">
    <Fallback name="grasp_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="GRASP" obj="{target}"/>
      </RetryUntilSuccessful>
      <Sequence name="recovery_grasp">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="{target}"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="{target}"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- T_Manipulate_Place: Place on top and release with fallback and retries -->
  <BehaviorTree ID="T_Manipulate_Place">
    <Fallback name="place_phase">
      <Sequence name="place_on_target">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="{target}"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="RELEASE"/>
        </RetryUntilSuccessful>
      </Sequence>
      <Sequence name="recovery_place">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="{target}"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="{target}"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="RELEASE"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- T_Open: Open target with retries -->
  <BehaviorTree ID="T_Open">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="OPEN" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- T_Close: Close target with retries -->
  <BehaviorTree ID="T_Close">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="CLOSE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- T_Toggle: Toggle target with retries -->
  <BehaviorTree ID="T_Toggle">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="TOGGLE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

</root>