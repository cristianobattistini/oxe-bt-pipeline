<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="pick_up_brown_object">
      <!-- Approach with recovery fallback -->
      <Fallback name="approach_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="{target}"/>
        </RetryUntilSuccessful>
        <!-- Recovery: try navigating again after a short wait (could add WAIT if available) -->
      </Fallback>
      
      <!-- Grasp with retry and recovery -->
      <Fallback name="grasp_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="{target}"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_grasp">
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="NAVIGATE_TO" obj="{target}"/>
          </RetryUntilSuccessful>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="GRASP" obj="{target}"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
  <!-- Example of calling this tree as a SubTree -->
  <!--
  <BehaviorTree ID="PickUpBrownObject">
    <SubTree ID="MainTree" target="brown_object"/>
  </BehaviorTree>
  -->
</root>