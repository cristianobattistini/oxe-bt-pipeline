<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="put_down_red_bottle">
      <!-- Approach red bottle with retry -->
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="NAVIGATE_TO" obj="red_bottle"/>
      </RetryUntilSuccessful>
      
      <!-- Grasp with retry and fallback recovery -->
      <Fallback name="grasp_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="red_bottle"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_grasp">
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="NAVIGATE_TO" obj="red_bottle"/>
          </RetryUntilSuccessful>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="GRASP" obj="red_bottle"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>
      
      <!-- Put down (place on top of table) with retry and fallback recovery -->
      <Fallback name="place_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="table"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_place">
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="NAVIGATE_TO" obj="table"/>
          </RetryUntilSuccessful>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="PLACE_ON_TOP" obj="table"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>
      
      <!-- Release with retry -->
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="RELEASE"/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>