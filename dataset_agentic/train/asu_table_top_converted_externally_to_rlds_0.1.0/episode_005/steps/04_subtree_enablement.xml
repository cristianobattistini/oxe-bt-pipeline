<root main_tree_to_execute="MainTree">

  <!-- MainTree refactored to use SubTrees -->
  <BehaviorTree ID="MainTree">
    <Sequence name="put_down_red_bottle">
      <SubTree ID="T_Navigate" target="red_bottle"/>
      <SubTree ID="T_Manipulate_Grasp" target="red_bottle"/>
      <SubTree ID="T_Manipulate_Place" target="table"/>
    </Sequence>
  </BehaviorTree>

  <!-- Standard SubTree Definitions -->

  <!-- Navigation to a target -->
  <BehaviorTree ID="T_Navigate">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="NAVIGATE_TO" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- Grasping an object with retry and fallback recovery -->
  <BehaviorTree ID="T_Manipulate_Grasp">
    <Fallback name="grasp_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="GRASP" obj="{target}"/>
      </RetryUntilSuccessful>
      <Sequence name="recovery_grasp">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="{target}"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="{target}"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>
  </BehaviorTree>

  <!-- Placing an object on a target and releasing, with retry and fallback recovery -->
  <BehaviorTree ID="T_Manipulate_Place">
    <Fallback name="place_phase">
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="PLACE_ON_TOP" obj="{target}"/>
      </RetryUntilSuccessful>
      <Sequence name="recovery_place">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="{target}"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="{target}"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="RELEASE"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- Open, Close, Toggle standard subtrees (empty templates) -->
  <BehaviorTree ID="T_Open">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="OPEN" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <BehaviorTree ID="T_Close">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="CLOSE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <BehaviorTree ID="T_Toggle">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="TOGGLE" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

</root>