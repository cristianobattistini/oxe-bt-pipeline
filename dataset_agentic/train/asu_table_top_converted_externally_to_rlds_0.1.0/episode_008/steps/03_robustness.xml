<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="raise_bread">
      <!-- Approach bread -->
      <Action ID="NAVIGATE_TO" obj="bread"/>

      <!-- Grasp bread with retry and recovery -->
      <Fallback name="grasp_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="bread"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_grasp">
          <Action ID="NAVIGATE_TO" obj="bread"/>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="GRASP" obj="bread"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>

      <!-- Raise bread: Place on top of an elevated object (choose "red_cup" as a suitable platform) -->
      <Action ID="NAVIGATE_TO" obj="red_cup"/>
      <Fallback name="place_on_top_phase">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="red_cup"/>
        </RetryUntilSuccessful>
        <Sequence name="recovery_place_on_top">
          <Action ID="NAVIGATE_TO" obj="red_cup"/>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="PLACE_ON_TOP" obj="red_cup"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="RELEASE"/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>