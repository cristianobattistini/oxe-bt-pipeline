<root main_tree_to_execute="MainTree">
  <!-- MainTree refactored to use modular SubTrees -->
  <BehaviorTree ID="MainTree">
    <Sequence name="put_down_blue_can">
      <!-- Approach: Move to placement location on table -->
      <SubTree ID="T_Navigate" target="table"/>

      <!-- Place blue_can on table with fallback for recovery -->
      <Fallback name="place_phase">
        <SubTree ID="T_Manipulate_Place" target="table"/>
        <Sequence name="recovery_place">
          <SubTree ID="T_Manipulate_Grasp" target="blue_can"/>
          <SubTree ID="T_Navigate" target="table"/>
          <SubTree ID="T_Manipulate_Place" target="table"/>
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>

  <!-- SubTree: Navigate to target -->
  <BehaviorTree ID="T_Navigate">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="NAVIGATE_TO" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- SubTree: Grasp target (with retries) -->
  <BehaviorTree ID="T_Manipulate_Grasp">
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="GRASP" obj="{target}"/>
    </RetryUntilSuccessful>
  </BehaviorTree>

  <!-- SubTree: Place on top and release (with retries) -->
  <BehaviorTree ID="T_Manipulate_Place">
    <Sequence>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="PLACE_ON_TOP" obj="{target}"/>
      </RetryUntilSuccessful>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="RELEASE"/>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
</root>