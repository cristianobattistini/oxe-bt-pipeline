<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="put_down_blue_can">
      <!-- Approach: Move to placement location on table (center, between gray_cup and red_can) -->
      <Action ID="NAVIGATE_TO" obj="table"/>

      <!-- Place blue_can on table with fallback for recovery -->
      <Fallback name="place_phase">
        <Sequence name="primary_place">
          <Action ID="PLACE_ON_TOP" obj="table"/>
          <Action ID="RELEASE"/>
        </Sequence>
        <Sequence name="recovery_place">
          <!-- If placement fails (e.g., can tips or rolls), re-grasp and retry -->
          <Action ID="GRASP" obj="blue_can"/>
          <Action ID="NAVIGATE_TO" obj="table"/>
          <Action ID="PLACE_ON_TOP" obj="table"/>
          <Action ID="RELEASE"/>
        </Sequence>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>