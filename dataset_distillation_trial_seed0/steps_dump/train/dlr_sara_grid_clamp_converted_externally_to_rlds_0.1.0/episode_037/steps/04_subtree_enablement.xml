<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent stuck navigation to grid clamp -->
      <Timeout msec="10000">
        <SubTree ID="T_Navigate" target="grid clamp"/>
      </Timeout>
      <!-- Fallback: Robust grasp with retry if collision/interference -->
      <SubTree ID="T_Manipulate_Grasp" target="grid clamp"/>
      <!-- Timeout: Prevent stuck navigation to wooden grid table -->
      <Timeout msec="10000">
        <SubTree ID="T_Navigate" target="wooden grid table"/>
      </Timeout>
      <!-- Fallback: Robust placement with retry if unstable/cluttered -->
      <SubTree ID="T_Manipulate_Place_OnTop" target="wooden grid table"/>
      <!-- Release after placement -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
  <BehaviorTree ID="T_Navigate">
    <Sequence>
      <Action ID="NAVIGATE_TO" obj="{target}"/>
    </Sequence>
  </BehaviorTree>
  <BehaviorTree ID="T_Manipulate_Grasp">
    <Fallback>
      <Action ID="GRASP" obj="{target}"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="GRASP" obj="{target}"/>
      </RetryUntilSuccessful>
    </Fallback>
  </BehaviorTree>
  <BehaviorTree ID="T_Manipulate_Place_OnTop">
    <Fallback>
      <Action ID="PLACE_ON_TOP" obj="{target}"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="PLACE_ON_TOP" obj="{target}"/>
      </RetryUntilSuccessful>
    </Fallback>
  </BehaviorTree>
</root>