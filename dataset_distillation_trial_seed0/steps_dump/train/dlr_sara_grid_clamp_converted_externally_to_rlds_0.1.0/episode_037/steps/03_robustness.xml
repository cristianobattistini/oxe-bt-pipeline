<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent stuck navigation to grid clamp -->
      <Timeout msec="10000">
        <Action ID="NAVIGATE_TO" obj="grid clamp"/>
      </Timeout>
      <!-- Fallback: Robust grasp with retry if collision/interference -->
      <Fallback>
        <Action ID="GRASP" obj="grid clamp"/>
        <!-- Retry: Grasp grid clamp up to 3 times -->
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="grid clamp"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Timeout: Prevent stuck navigation to wooden grid table -->
      <Timeout msec="10000">
        <Action ID="NAVIGATE_TO" obj="wooden grid table"/>
      </Timeout>
      <!-- Fallback: Robust placement with retry if unstable/cluttered -->
      <Fallback>
        <Action ID="PLACE_ON_TOP" obj="wooden grid table"/>
        <!-- Retry: Place on top up to 3 times -->
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="wooden grid table"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Release after placement -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>