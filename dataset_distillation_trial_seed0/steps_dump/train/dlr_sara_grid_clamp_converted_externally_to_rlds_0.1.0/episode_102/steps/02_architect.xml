<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Check: Navigate to grid clamp first (Robotic Common Sense: Proximity) -->
      <Action ID="NAVIGATE_TO" obj="grid clamp"/>
      <!-- Risk: Possible collision with black objects during grasp, using Fallback for robust grasp -->
      <Fallback>
        <!-- Primary attempt: Grasp grid clamp -->
        <Action ID="GRASP" obj="grid clamp"/>
        <!-- Risk: If grasp fails due to obstacle, retry after adjusting placement area -->
        <RetryUntilSuccessful>
          <!-- Risk: Semantic State recovery hint: adjust placement area -->
          <Action ID="NAVIGATE_TO" obj="grid clamp"/>
          <Action ID="GRASP" obj="grid clamp"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Check: Navigate to wooden table before placement (Robotic Common Sense: Proximity) -->
      <Action ID="NAVIGATE_TO" obj="wooden table"/>
      <!-- Risk: Unstable placement or obstacle, using Fallback for robust placement -->
      <Fallback>
        <!-- Primary attempt: Place grid clamp on top of wooden table -->
        <Action ID="PLACE_ON_TOP" obj="wooden table"/>
        <!-- Risk: If placement fails (unstable or obstacle), retry after clearing/adjusting area -->
        <RetryUntilSuccessful>
          <!-- Risk: Semantic State recovery hint: clear obstacles if needed -->
          <Action ID="NAVIGATE_TO" obj="wooden table"/>
          <Action ID="PLACE_ON_TOP" obj="wooden table"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Check: Release after placement for stable termination (Robotic Common Sense: Termination) -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>