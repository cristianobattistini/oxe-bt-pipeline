<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Check: Navigate to target first (Robotic Common Sense: must be near to manipulate) -->
      <Action ID="NAVIGATE_TO" obj="white plate"/>
      <!-- Risk: Gripper misalignment or plate slippage possible, use Fallback for robust grasp -->
      <Fallback>
        <Action ID="GRASP" obj="white plate"/>
        <!-- Risk: Retry grasp if initial attempt fails (Semantic State: retry grasp, adjust approach angle) -->
        <RetryUntilSuccessful>
          <Action ID="GRASP" obj="white plate"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Check: Navigate to destination (red plate) before placement -->
      <Action ID="NAVIGATE_TO" obj="red plate"/>
      <!-- Risk: Collision with red plate possible, use Fallback for robust placement -->
      <Fallback>
        <Action ID="PLACE_ON_TOP" obj="red plate"/>
        <!-- Risk: Retry placement if collision or instability detected (Semantic State: check plate stability) -->
        <RetryUntilSuccessful>
          <Action ID="PLACE_ON_TOP" obj="red plate"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Check: Release after placement to terminate manipulation -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>