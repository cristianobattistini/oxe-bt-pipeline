<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent stuck navigation to white plate -->
      <Timeout msec="10000">
        <Action ID="NAVIGATE_TO" obj="white plate"/>
      </Timeout>
      <!-- Fallback: Retry grasp if initial attempt fails -->
      <Fallback>
        <Action ID="GRASP" obj="white plate"/>
        <!-- Retry: Up to 2 more grasp attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="white plate"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Timeout: Prevent stuck navigation to red plate -->
      <Timeout msec="10000">
        <Action ID="NAVIGATE_TO" obj="red plate"/>
      </Timeout>
      <!-- Fallback: Retry placement if initial attempt fails -->
      <Fallback>
        <Action ID="PLACE_ON_TOP" obj="red plate"/>
        <!-- Retry: Up to 2 more placement attempts -->
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="PLACE_ON_TOP" obj="red plate"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Release: Finalize manipulation -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>