<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent stuck navigation to fridge door -->
      <Timeout msec="10000">
        <Action ID="NAVIGATE_TO" obj="fridge door"/>
      </Timeout>
      <!-- Fallback: Robust grasp with retry and recovery navigation -->
      <Fallback>
        <!-- Retry: Grasp fridge door handle up to 3 times -->
        <RetryUntilSuccessful num_attempts="3">
          <Timeout msec="7000">
            <Action ID="GRASP" obj="fridge door handle"/>
          </Timeout>
        </RetryUntilSuccessful>
        <!-- Recovery: Re-navigate to handle if grasp fails -->
        <Timeout msec="7000">
          <Action ID="NAVIGATE_TO" obj="fridge door handle"/>
        </Timeout>
      </Fallback>
      <!-- Fallback: Robust open with retry and recovery grasp -->
      <Fallback>
        <!-- Retry: Open fridge door up to 3 times -->
        <RetryUntilSuccessful num_attempts="3">
          <Timeout msec="8000">
            <Action ID="OPEN" obj="fridge door"/>
          </Timeout>
        </RetryUntilSuccessful>
        <!-- Recovery: Retry grasp if open fails -->
        <Timeout msec="7000">
          <Action ID="GRASP" obj="fridge door handle"/>
        </Timeout>
      </Fallback>
      <!-- Release: Stable termination after manipulation -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>