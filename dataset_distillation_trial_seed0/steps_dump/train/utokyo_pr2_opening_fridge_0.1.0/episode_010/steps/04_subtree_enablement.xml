<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent getting stuck during navigation -->
      <Timeout msec="10000">
        <SubTree ID="T_Navigate" target="fridge door"/>
      </Timeout>
      <!-- Fallback: Robust grasp with retry and recovery navigation -->
      <Fallback>
        <!-- Retry: Attempt grasp up to 3 times -->
        <RetryUntilSuccessful num_attempts="3">
          <SubTree ID="T_Manipulate_Grasp" target="fridge door handle"/>
        </RetryUntilSuccessful>
        <!-- Recovery: Re-navigate and retry grasp -->
        <Sequence>
          <Timeout msec="8000">
            <SubTree ID="T_Navigate" target="fridge door"/>
          </Timeout>
          <SubTree ID="T_Manipulate_Grasp" target="fridge door handle"/>
        </Sequence>
      </Fallback>
      <!-- Timeout: Prevent blocking during door opening -->
      <Timeout msec="7000">
        <SubTree ID="T_Manipulate_Open" target="fridge door"/>
      </Timeout>
      <!-- Release: Ensure stable termination -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
  <BehaviorTree ID="T_Navigate">
    <Sequence>
      <Action ID="NAVIGATE_TO" obj="{target}"/>
    </Sequence>
  </BehaviorTree>
  <BehaviorTree ID="T_Manipulate_Grasp">
    <Sequence>
      <Action ID="GRASP" obj="{target}"/>
    </Sequence>
  </BehaviorTree>
  <BehaviorTree ID="T_Manipulate_Open">
    <Sequence>
      <Action ID="OPEN" obj="{target}"/>
    </Sequence>
  </BehaviorTree>
</root>