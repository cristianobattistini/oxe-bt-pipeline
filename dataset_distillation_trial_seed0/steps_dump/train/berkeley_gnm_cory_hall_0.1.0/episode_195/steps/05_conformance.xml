<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Retry navigation up to 3 times for robustness -->
      <RetryUntilSuccessful num_attempts="3">
        <!-- Timeout to prevent getting stuck during navigation -->
        <Timeout msec="10000">
          <SubTree ID="T_Navigate_Recovery" target="goal" recovery="hallway_floor"/>
        </Timeout>
      </RetryUntilSuccessful>
    </Sequence>
  </BehaviorTree>
  <BehaviorTree ID="T_Navigate_Recovery">
    <Fallback>
      <Action ID="NAVIGATE_TO" obj="{target}"/>
      <Action ID="NAVIGATE_TO" obj="{recovery}"/>
    </Fallback>
  </BehaviorTree>
</root>