<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Check: Navigate to towel before attempting grasp (Proximity rule) -->
      <Action ID="NAVIGATE_TO" obj="towel"/>
      <!-- Risk: Towel may shift, gripper may miss edge; use Fallback for robust grasp -->
      <Fallback>
        <!-- Primary attempt: Grasp towel -->
        <Action ID="GRASP" obj="towel"/>
        <!-- Risk: If grasp fails, adjust approach and retry as per recovery hints -->
        <RetryUntilSuccessful>
          <!-- Risk: Retry grasp in case of failure (Semantic State: recovery_hints) -->
          <Action ID="GRASP" obj="towel"/>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Check: Task termination not required for 'reach' instruction; no RELEASE needed -->
    </Sequence>
  </BehaviorTree>
</root>