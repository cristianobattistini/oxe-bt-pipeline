<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent stuck navigation to lid -->
      <Timeout msec="10000">
        <RetryUntilSuccessful num_attempts="3">
          <SubTree ID="T_Navigate" target="lid"/>
        </RetryUntilSuccessful>
      </Timeout>
      <!-- Fallback: Robust grasp of lid -->
      <Fallback>
        <!-- Retry: Attempt to grasp lid up to 3 times -->
        <RetryUntilSuccessful num_attempts="3">
          <SubTree ID="T_Manipulate_Grasp" target="lid"/>
        </RetryUntilSuccessful>
        <SubTree ID="T_Manipulate_Grasp" target="lid"/>
      </Fallback>
      <!-- Retry: Opening lid may fail, try up to 2 times -->
      <RetryUntilSuccessful num_attempts="2">
        <SubTree ID="T_Manipulate_Open" target="lid"/>
      </RetryUntilSuccessful>
      <!-- Fallback: Ensure lid release is robust -->
      <Fallback>
        <Action ID="RELEASE"/>
        <!-- Retry: Attempt to release lid up to 2 times -->
        <RetryUntilSuccessful num_attempts="2">
          <Action ID="RELEASE"/>
        </RetryUntilSuccessful>
      </Fallback>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="T_Navigate">
    <Sequence>
      <Action ID="NAVIGATE_TO" obj="{target}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="T_Manipulate_Grasp">
    <Sequence>
      <Action ID="GRASP" obj="{target}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="T_Manipulate_Open">
    <Sequence>
      <Action ID="OPEN" obj="{target}"/>
    </Sequence>
  </BehaviorTree>
</root>