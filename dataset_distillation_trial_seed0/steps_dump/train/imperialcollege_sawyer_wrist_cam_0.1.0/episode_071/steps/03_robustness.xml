<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent stuck navigation to lid -->
      <Timeout msec="10000">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="lid"/>
        </RetryUntilSuccessful>
      </Timeout>
      <!-- Fallback: Robust grasp of lid -->
      <Fallback>
        <!-- Retry: Attempt to grasp lid up to 3 times -->
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="GRASP" obj="lid"/>
        </RetryUntilSuccessful>
        <Action ID="GRASP" obj="lid"/>
      </Fallback>
      <!-- Retry: Opening lid may fail, try up to 2 times -->
      <RetryUntilSuccessful num_attempts="2">
        <Action ID="OPEN" obj="lid"/>
      </RetryUntilSuccessful>
      <!-- Fallback: Ensure lid release is robust -->
      <Fallback>
        <Action ID="RELEASE"/>
        <!-- Retry: Attempt to release lid up to 2 times -->
        <RetryUntilSuccessful num_attempts="2">
          <Action ID="RELEASE"/>
        </RetryUntilSuccessful>
      </Fallback>
    </Sequence>
  </BehaviorTree>
</root>