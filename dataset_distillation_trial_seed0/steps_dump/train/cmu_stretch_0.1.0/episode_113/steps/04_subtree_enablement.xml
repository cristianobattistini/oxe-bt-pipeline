<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent getting stuck navigating to lid -->
      <Timeout msec="8000">
        <RetryUntilSuccessful num_attempts="3">
          <SubTree ID="T_Navigate" target="lid"/>
        </RetryUntilSuccessful>
      </Timeout>
      <!-- Fallback: Robust grasp with retry on failure -->
      <Fallback>
        <!-- Primary attempt: Grasp the lid handle -->
        <RetryUntilSuccessful num_attempts="2">
          <SubTree ID="T_Manipulate_Grasp" target="lid"/>
        </RetryUntilSuccessful>
        <!-- Recovery: Try grasp again after re-navigating to lid -->
        <Sequence>
          <!-- Timeout: Prevent stuck navigation during recovery -->
          <Timeout msec="8000">
            <SubTree ID="T_Navigate" target="lid"/>
          </Timeout>
          <RetryUntilSuccessful num_attempts="2">
            <SubTree ID="T_Manipulate_Grasp" target="lid"/>
          </RetryUntilSuccessful>
        </Sequence>
      </Fallback>
      <!-- Sequence: Safe lift trajectory before placement -->
      <Sequence>
        <!-- Timeout: Prevent stuck navigation when lifting lid -->
        <Timeout msec="7000">
          <RetryUntilSuccessful num_attempts="2">
            <SubTree ID="T_Navigate" target="lid"/>
          </RetryUntilSuccessful>
        </Timeout>
        <RetryUntilSuccessful num_attempts="2">
          <SubTree ID="T_Manipulate_Place_OnTop" target="lid"/>
        </RetryUntilSuccessful>
      </Sequence>
      <!-- Release: Final stable placement -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="T_Navigate">
    <Sequence>
      <Action ID="NAVIGATE_TO" obj="{target}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="T_Manipulate_Grasp">
    <Sequence>
      <Action ID="GRASP" obj="{target}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="T_Manipulate_Place_OnTop">
    <Sequence>
      <Action ID="PLACE_ON_TOP" obj="{target}"/>
    </Sequence>
  </BehaviorTree>
</root>