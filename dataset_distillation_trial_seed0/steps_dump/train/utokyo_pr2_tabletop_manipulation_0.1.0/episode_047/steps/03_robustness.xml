<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence name="root">
      <!-- Timeout: Prevent getting stuck during navigation -->
      <Timeout msec="10000">
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NAVIGATE_TO" obj="grape"/>
        </RetryUntilSuccessful>
      </Timeout>
      <!-- Fallback: Robust grasp with retry if grape moves -->
      <Fallback>
        <!-- Primary grasp attempt -->
        <Timeout msec="5000">
          <Action ID="GRASP" obj="grape"/>
        </Timeout>
        <!-- Retry grasp up to 2 times if initial fails -->
        <RetryUntilSuccessful num_attempts="2">
          <Timeout msec="5000">
            <Action ID="GRASP" obj="grape"/>
          </Timeout>
        </RetryUntilSuccessful>
      </Fallback>
      <!-- Release: Ensure object is released at end -->
      <Action ID="RELEASE"/>
    </Sequence>
  </BehaviorTree>
</root>