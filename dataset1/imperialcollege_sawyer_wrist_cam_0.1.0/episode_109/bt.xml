<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bottle"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="bottle" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="bottle" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="bottle" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="bottle" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="bottle" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="bottle"/>
  </Sequence>
</BehaviorTree>