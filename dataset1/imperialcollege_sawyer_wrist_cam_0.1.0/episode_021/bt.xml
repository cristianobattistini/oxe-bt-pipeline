<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="dustpan" timeout_ms="800"/>
    <Action ID="DetectObject" target="particle" timeout_ms="800"/>
    <Action ID="MoveAbove" target="particle" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="particle" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Push" target="dustpan" distance="0.20" direction_deg="270" timeout_ms="1500"/>
    <Condition ID="IsObjectVisible" target="particle"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>