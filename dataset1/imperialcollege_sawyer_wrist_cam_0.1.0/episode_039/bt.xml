<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="shoe"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="shoe" pattern="grid" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="shoe" timeout_ms="800"/>
    <Action ID="MoveAbove" target="shoe" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="shoe" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="shoe" strategy="top" result_key="std_top"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="shoe"/>
    <Action ID="RaiseHeld" target="shoe" distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>