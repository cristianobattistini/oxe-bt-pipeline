<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="apple"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="apple" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="apple" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="apple" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="apple" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="apple" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="apple"/>
    <Action ID="HoldObject" target="apple" duration_ms="500"/>
  </Sequence>
</BehaviorTree>