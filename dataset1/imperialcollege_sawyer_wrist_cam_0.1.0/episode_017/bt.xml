<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_object"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="white_object" pattern="line" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="white_object" timeout_ms="800"/>
    <Action ID="MoveAbove" target="white_object" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="white_object" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="SlideAlongSurface" target="white_object" area_id="blue_surface" distance="0.10" direction_deg="0" pattern="line" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>