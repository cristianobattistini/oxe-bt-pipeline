<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="lid"/>
      <Action ID="ScanForTarget" target="lid" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="lid" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="lid" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenContainer" target="lid" container_type="lid" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="lid"/>
  </Sequence>
</BehaviorTree>