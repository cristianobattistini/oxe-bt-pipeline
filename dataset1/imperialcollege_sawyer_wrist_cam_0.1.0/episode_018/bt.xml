<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="mug" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="mug" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="Pour" source="spout" target="mug" amount="null" tilt_angle="45" pour_rate="normal" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>