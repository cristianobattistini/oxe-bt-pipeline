<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cup" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="cup" strategy="top" result_key="grasp_cup"/>
    <Action ID="GraspAtPose" pose_key="grasp_cup" strategy="top" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="dishwasher"/>
      <Action ID="DetectObject" target="dishwasher" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="dishwasher" offset_z="0.10" timeout_ms="1000"/>
    <Action ID="PlaceOnSurface" target="cup" area_id="dishwasher" yaw_deg="0" press_force="5" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>