<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="apple"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="apple" pattern="circle" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="apple" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="apple" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="apple" strategy="top" result_key="grasp_apple"/>
    <Action ID="ApproachAndAlign" target="apple" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1000"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pot"/>
      <Action ID="DetectObject" target="pot" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="pot" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="PlaceDown" target="pot" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>