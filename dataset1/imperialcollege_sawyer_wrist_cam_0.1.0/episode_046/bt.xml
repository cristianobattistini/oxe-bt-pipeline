<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="can"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="can" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="can" timeout_ms="800"/>
    <Action ID="MoveAbove" target="can" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="can" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="can" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="can"/>
  </Sequence>
</BehaviorTree>