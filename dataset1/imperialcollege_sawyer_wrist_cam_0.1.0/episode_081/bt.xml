<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="toast"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="toast" pattern="grid" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="toast" timeout_ms="800"/>
    <Action ID="Grasp" target="toast" strategy="top" force="5" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="toast"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="toaster_slot"/>
      <RetryUntilSuccessful num_attempts="2">
        <Action ID="ScanForTarget" target="toaster_slot" pattern="grid" max_attempts="2" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="toaster_slot" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="toaster_slot" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="InsertInto" target="toast" slot_id="slot_1" axis="z" distance="0.10" tolerance="0.005" force_limit="5" timeout_ms="800"/>
    <Condition ID="Inserted" target="toast" slot_id="slot_1"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>