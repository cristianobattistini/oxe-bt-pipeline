<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="mug" pattern="raster" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="mug" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="mug"/>
  </Sequence>
</BehaviorTree>