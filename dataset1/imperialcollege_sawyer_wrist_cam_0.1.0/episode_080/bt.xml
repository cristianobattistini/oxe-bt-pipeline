<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bottle"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="bottle" pattern="circle" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="bottle" timeout_ms="800"/>
    <Action ID="MoveAbove" target="bottle" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="bottle" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="OpenContainer" target="bottle" container_type="bottle" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="bottle"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>