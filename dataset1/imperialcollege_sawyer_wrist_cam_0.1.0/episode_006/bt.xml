<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cup" pattern="grid" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="cup" strategy="top" result_key="grasp_cup"/>
    <Action ID="ApproachAndAlign" target="cup" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="std_top" timeout_ms="2000"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="dishwasher"/>
      <Action ID="DetectObject" target="dishwasher" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="dishwasher" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="PlaceDown" target="dishwasher" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>