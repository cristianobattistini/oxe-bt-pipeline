<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_disk"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="white_disk" pattern="line" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="white_disk" timeout_ms="800"/>
    <Action ID="MoveAbove" target="white_disk" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="white_disk" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="Push" target="white_disk" distance="0.15" direction_deg="180" timeout_ms="1000"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>