<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="ball" timeout_ms="800"/>
    <Action ID="MoveAbove" target="ball" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="ball" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Push" target="ball" distance="0.10" direction_deg="180" timeout_ms="1000"/>
    <Action ID="Retreat" distance="0.05" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>