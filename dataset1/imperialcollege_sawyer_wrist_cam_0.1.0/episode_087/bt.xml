<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="kettle"/>
      <Action ID="ScanForTarget" target="kettle" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="kettle" timeout_ms="800"/>
    <Action ID="MoveAbove" target="kettle" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="kettle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="kettle" strategy="top" result_key="std_top"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="kettle"/>
  </Sequence>
</BehaviorTree>