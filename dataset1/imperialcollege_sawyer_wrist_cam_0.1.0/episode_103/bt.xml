<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="apple"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="apple" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="apple" timeout_ms="800"/>
    <Action ID="MoveTo" target="apple" timeout_ms="1200"/>
    <Action ID="Grasp" target="apple" strategy="top" force="5" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="apple"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pot"/>
      <Action ID="DetectObject" target="pot" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="pot" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="PlaceDown" target="pot" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>