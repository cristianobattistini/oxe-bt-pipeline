<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="small_ball"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="small_ball" pattern="line" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="small_ball" timeout_ms="800"/>
    <Action ID="MoveAbove" target="small_ball" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="small_ball" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="CloseGripper" force="5" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveDelta" axis="x" dist="0.20" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>