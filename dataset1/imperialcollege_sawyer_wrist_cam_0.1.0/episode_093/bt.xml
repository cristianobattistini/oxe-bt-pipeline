<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bowl_top"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="bowl_top" pattern="raster" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bowl_bottom"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="bowl_bottom" pattern="raster" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="bowl_top" timeout_ms="800"/>
    <Action ID="DetectObject" target="bowl_bottom" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="bowl_top" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="bowl_top" strategy="top" result_key="grasp_bowl_top"/>
    <Action ID="ApproachAndAlign" target="bowl_top" tolerance="0.002" timeout_ms="1000"/>
    <Action ID="GraspAtPose" pose_key="grasp_bowl_top" strategy="top" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="bowl_bottom" offset_z="0.06" timeout_ms="1500"/>
    <Action ID="Stack" target="bowl_top" on_top_of="bowl_bottom" alignment="center" press_force="5" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>