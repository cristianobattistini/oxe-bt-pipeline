<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="lid"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="lid" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="lid" timeout_ms="800"/>
    <Action ID="MoveAbove" target="lid" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="lid" strategy="top" result_key="grasp_lid"/>
    <Action ID="ApproachAndAlign" target="lid" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="grasp_lid" strategy="top" timeout_ms="1000"/>
    <Action ID="OpenContainer" target="lid" container_type="lid" timeout_ms="2000"/>
    <Condition ID="ContainerOpen" target="lid"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>