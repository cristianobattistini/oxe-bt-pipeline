<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bottle"/>
      <Action ID="DetectObject" target="bottle" timeout_ms="800"/>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cap"/>
      <Action ID="DetectObject" target="cap" timeout_ms="800"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cap" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="cap" strategy="top" result_key="grasp_cap"/>
    <Action ID="ApproachAndAlign" target="cap" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="grasp_cap" strategy="top" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="bottle" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="bottle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="InsertInto" target="cap" slot_id="bottle_opening" axis="z" distance="0.05" tolerance="0.005" force_limit="5" timeout_ms="1500"/>
    <Condition ID="Inserted" target="cap" slot_id="bottle_opening"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>