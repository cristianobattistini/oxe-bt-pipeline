<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cube"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cube" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cube" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.04" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="cube" tolerance="0.002" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="cube" strategy="top" result_key="std_top"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>