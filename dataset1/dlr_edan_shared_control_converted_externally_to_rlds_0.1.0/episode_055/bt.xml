<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="die"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="die" pattern="grid" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="die" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="die" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="die" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="5" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Condition ID="ObjectInGripper" target="die"/>
  </Sequence>
</BehaviorTree>