<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="disk"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="disk" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="disk" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="disk" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="disk" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="disk" strategy="top" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>