<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="tube"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="tube" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="tube" timeout_ms="800"/>
    <Action ID="MoveAbove" target="tube" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.04" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="tube" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="5" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>