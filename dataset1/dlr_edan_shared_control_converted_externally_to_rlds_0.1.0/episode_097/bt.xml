<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="disk"/>
      <Action ID="DetectObject" target="disk" timeout_ms="800"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="disk" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="disk" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="disk" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1000"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Pick" grasp_key="std_top" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>