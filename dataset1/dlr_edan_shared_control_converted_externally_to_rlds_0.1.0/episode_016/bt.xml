<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="tube"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="tube" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="tube" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="800"/>
    <Action ID="MoveAbove" target="tube" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="tube" strategy="pinch" result_key="grasp_tube"/>
    <Action ID="ApproachAndAlign" target="tube" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="10" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="RaiseHeld" target="tube" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
