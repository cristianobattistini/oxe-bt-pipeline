<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="disk"/>
      <Action ID="ScanForTarget" target="disk" pattern="grid" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="disk" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="disk" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="disk" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="disk" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="disk"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>