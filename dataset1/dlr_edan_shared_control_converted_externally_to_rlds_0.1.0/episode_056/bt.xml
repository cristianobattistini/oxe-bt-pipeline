<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="tennis_ball"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="tennis_ball" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="tennis_ball" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="tennis_ball" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="tennis_ball" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="tennis_ball" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="tennis_ball" strategy="top" force="5" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="tennis_ball"/>
  </Sequence>
</BehaviorTree>