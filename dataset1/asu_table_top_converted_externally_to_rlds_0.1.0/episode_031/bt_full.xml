<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cocacola_bottle"/>
      <Action ID="ScanForTarget" target="cocacola_bottle" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
    </Fallback>
    <Action ID="DetectObject" target="cocacola_bottle" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="cocacola_bottle" strategy="side" result_key="goal_pose"/>
    <Condition ID="PoseAvailable" key="goal_pose"/>
    <Action ID="ApproachAndAlign" target="cocacola_bottle" tolerance="0.01" timeout_ms="2000"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="cocacola_bottle"/>
    <Action ID="RaiseHeld" target="cocacola_bottle" distance="0.10" timeout_ms="1000"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
