<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="bread" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <Action ID="ComputeGraspPose" target="bread" strategy="top" result_key="goal_pose"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="2000"/>
    <Condition ID="PoseAvailable" key="goal_pose"/>
  </Sequence>
</BehaviorTree>