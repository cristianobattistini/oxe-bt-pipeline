<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="PoseAvailable" key="goal_pose"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="10" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>