<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="bread" timeout_ms="2000"/>
    <Action ID="ComputeGraspPose" target="bread" strategy="top" result_key="goal_pose"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="2000"/>
    <Condition ID="PoseAvailable" key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="10" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="RaiseHeld" target="bread" distance="0.10" timeout_ms="1500"/>
    <Action ID="HoldObject" target="bread" duration_ms="1000"/>
  </Sequence>
</BehaviorTree>
