<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="cocacola_can" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="cocacola_can" offset_z="0.10" timeout_ms="2000"/>
    <Action ID="ApproachAndAlign" target="cocacola_can" tolerance="0.01" timeout_ms="3000"/>
    <Action ID="ComputeGraspPose" target="cocacola_can" strategy="side" result_key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <Action ID="CloseGripper" force="20" timeout_ms="1500"/>
    <Action ID="RaiseHeld" target="cocacola_can" distance="0.10" timeout_ms="2000"/>
    <Condition ID="ObjectInGripper" target="cocacola_can"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="2000"/>
  </Sequence>
</BehaviorTree>
