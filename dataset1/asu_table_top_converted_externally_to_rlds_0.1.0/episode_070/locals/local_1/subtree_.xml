<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="blue_can" timeout_ms="2000"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="ApproachAndAlign" target="blue_can" tolerance="0.01" timeout_ms="3000"/>
    </RetryUntilSuccessful>
    <Action ID="Pick" grasp_key="std_side" timeout_ms="3000"/>
    <Condition ID="ObjectInGripper" target="blue_can"/>
  </Sequence>
</BehaviorTree>