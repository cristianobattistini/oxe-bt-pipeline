<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="maroon_cube"/>
    <Action ID="MoveAbove" target="place_zone" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="place_zone" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
