<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="maroon_cube"/>
    <Action ID="ApproachAndAlign" target="place_zone" tolerance="0.01" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Condition ID="ContactDetected" force_threshold="10"/>
  </Sequence>
</BehaviorTree>