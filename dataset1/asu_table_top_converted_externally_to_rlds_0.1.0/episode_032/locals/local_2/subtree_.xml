<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.10" timeout_ms="1000"/>
    <DetectObject target="red_can" timeout_ms="1500"/>
    <IsObjectVisible target="red_can"/>
    <ApproachAndAlign target="red_can" tolerance="0.01" timeout_ms="3000"/>
    <ComputeGraspPose target="red_can" strategy="pinch" result_key="goal_pose"/>
    <PoseAvailable key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <IsGraspStable/>
  </Sequence>
</BehaviorTree>