<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="green_glass_bottle" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
    <Action ID="MoveAbove" target="green_glass_bottle" offset_z="0.10" timeout_ms="2000"/>
    <Action ID="ComputeGraspPose" target="green_glass_bottle" strategy="side" result_key="goal_pose"/>
    <Condition ID="PoseAvailable" key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="side" timeout_ms="2000"/>
    <Action ID="CloseGripper" force="20" timeout_ms="1500"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="place_on_table" offset_z="0.10" timeout_ms="3000"/>
    <Action ID="PlaceDown" target="place_on_table" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
