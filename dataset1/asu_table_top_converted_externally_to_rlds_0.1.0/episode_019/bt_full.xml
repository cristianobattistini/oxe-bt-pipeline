<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Action ID="DetectObject" target="green_glass_bottle" timeout_ms="2000"/>
    <Condition ID="IsObjectVisible" target="green_glass_bottle"/>
    <Action ID="ComputeGraspPose" target="green_glass_bottle" strategy="side" result_key="goal_pose"/>
    <Condition ID="PoseAvailable" key="goal_pose"/>
    <Action ID="ApproachAndAlign" target="green_glass_bottle" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <Action ID="CloseGripper" force="15" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="RaiseHeld" target="green_glass_bottle" distance="0.10" timeout_ms="1500"/>
    <Action ID="PlaceAtTol" pose_key="place_on_table" yaw_deg="0" press_force="5" tolerance="0.02" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
