<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="red_cube" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <Fallback>
      <Condition ID="ObjectInGripper" target="red_cube"/>
      <Sequence>
        <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
        <Action ID="ApproachAndAlign" target="red_cube" tolerance="0.01" timeout_ms="2000"/>
        <Action ID="CloseGripper" force="20" timeout_ms="1000"/>
        <Condition ID="IsGraspStable"/>
      </Sequence>
    </Fallback>
  </Sequence>
</BehaviorTree>