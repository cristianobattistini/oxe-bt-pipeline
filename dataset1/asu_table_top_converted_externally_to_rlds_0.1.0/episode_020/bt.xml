<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="red_cube" timeout_ms="2000"/>
    <Fallback>
      <Condition ID="ObjectInGripper" target="red_cube"/>
      <Sequence>
        <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
        <Action ID="ApproachAndAlign" target="red_cube" tolerance="0.01" timeout_ms="2000"/>
        <Action ID="CloseGripper" force="20" timeout_ms="1000"/>
        <Condition ID="IsGraspStable"/>
      </Sequence>
    </Fallback>
    <Action ID="MoveAbove" target="place_on_table" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.08" force_threshold="10" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
