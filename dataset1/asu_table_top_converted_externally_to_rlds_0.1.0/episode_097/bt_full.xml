<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="bread" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <MoveAbove target="bread" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="bread" tolerance="0.01" timeout_ms="2000"/>
    <ComputeGraspPose target="bread" strategy="top" result_key="grasp_bread"/>
    <GraspAtPose pose_key="grasp_bread" strategy="pinch" timeout_ms="1500"/>
    <CloseGripper force="15" timeout_ms="800"/>
    <IsGraspStable/>
    <RaiseHeld target="bread" distance="0.10" timeout_ms="1000"/>
    <ObjectInGripper target="bread"/>
    <HoldObject target="bread" duration_ms="1000"/>
  </Sequence>
</BehaviorTree>
