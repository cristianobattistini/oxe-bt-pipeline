<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <Action ID="DetectObject" target="pepsi_bottle" timeout_ms="1000"/>
        <Action ID="ScanForTarget" target="pepsi_bottle" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
      </Fallback>
    </RetryUntilSuccessful>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="pepsi_bottle" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="Pick" grasp_key="std_side" timeout_ms="1500"/>
    <Condition ID="ObjectInGripper" target="pepsi_bottle"/>
    <Action ID="RaiseHeld" target="pepsi_bottle" distance="0.10" timeout_ms="1000"/>
    <Action ID="HoldObject" target="pepsi_bottle" duration_ms="2000"/>
  </Sequence>
</BehaviorTree>
