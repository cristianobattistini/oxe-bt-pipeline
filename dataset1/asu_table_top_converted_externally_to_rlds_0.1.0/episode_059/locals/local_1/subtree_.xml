<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="PoseAvailable" key="place_on_table"/>
    <Action ID="ApproachAndAlign" target="place_on_table" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="2000"/>
    <Condition ID="ContactDetected" force_threshold="5"/>
  </Sequence>
</BehaviorTree>