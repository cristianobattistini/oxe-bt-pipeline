<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="milk_box"/>
    <Action ID="MoveAbove" target="place_on_table" offset_z="0.08" timeout_ms="3000"/>
    <Action ID="ApproachAndAlign" target="place_on_table" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
