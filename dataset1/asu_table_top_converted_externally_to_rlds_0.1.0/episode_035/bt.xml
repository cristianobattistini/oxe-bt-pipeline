<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="maroon_square" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="maroon_square" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="ComputeGraspPose" target="maroon_square" strategy="top" result_key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="1500"/>
    <Condition ID="ObjectInGripper" target="maroon_square"/>
    <Action ID="RaiseHeld" target="maroon_square" distance="0.15" timeout_ms="1500"/>
    <Action ID="HoldObject" target="maroon_square" duration_ms="1000"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
