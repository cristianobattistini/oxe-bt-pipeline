<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="glass_bottle"/>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <Action ID="ApproachAndAlign" target="place_on_table" tolerance="0.01" timeout_ms="1500"/>
        <Action ID="PlaceOnSurface" target="glass_bottle" area_id="table" yaw_deg="0" press_force="5" timeout_ms="2000"/>
        <Condition ID="ContactDetected" force_threshold="5"/>
      </Sequence>
    </RetryUntilSuccessful>
  </Sequence>
</BehaviorTree>