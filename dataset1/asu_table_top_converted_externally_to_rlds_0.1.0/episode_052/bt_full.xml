<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <DetectObject target="maroon_cube" timeout_ms="2000"/>
    <MoveAbove target="maroon_cube" offset_z="0.05" timeout_ms="2000"/>
    <ApproachAndAlign target="maroon_cube" tolerance="0.01" timeout_ms="1500"/>
    <ComputeGraspPose target="maroon_cube" strategy="top" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="top" timeout_ms="2000"/>
    <CloseGripper force="20" timeout_ms="1000"/>
    <RaiseHeld target="maroon_cube" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
