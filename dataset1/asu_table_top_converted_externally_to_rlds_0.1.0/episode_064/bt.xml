<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="red_object" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <OpenGripper width="0.10" timeout_ms="400"/>
    <MoveAbove target="red_object" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="red_object" tolerance="0.01" timeout_ms="2000"/>
    <ComputeGraspPose target="red_object" strategy="top" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="top" timeout_ms="2000"/>
    <CloseGripper force="20" timeout_ms="1000"/>
    <ObjectInGripper target="red_object"/>
    <RaiseHeld target="red_object" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
