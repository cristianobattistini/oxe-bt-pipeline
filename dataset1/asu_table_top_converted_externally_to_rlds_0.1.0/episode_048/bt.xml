<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_carton"/>
      <Sequence>
        <Action ID="ScanForTarget" target="white_carton" pattern="spiral" max_attempts="3" timeout_ms="3000"/>
        <Action ID="DetectObject" target="white_carton" timeout_ms="2000"/>
      </Sequence>
    </Fallback>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Action ID="MoveAbove" target="white_carton" offset_z="0.05" timeout_ms="2000"/>
    <Action ID="ApproachAndAlign" target="white_carton" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ComputeGraspPose" target="white_carton" strategy="top" result_key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="RaiseHeld" target="white_carton" distance="0.15" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
