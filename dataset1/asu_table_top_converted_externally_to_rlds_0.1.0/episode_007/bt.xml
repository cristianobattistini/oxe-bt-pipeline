<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_carton"/>
      <Action ID="ScanForTarget" target="white_carton" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
    </Fallback>
    <Action ID="DetectObject" target="white_carton" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="white_carton" strategy="top" result_key="wc_grasp_pose"/>
    <Action ID="MoveAbove" target="white_carton" offset_z="0.05" timeout_ms="2000"/>
    <Action ID="ApproachAndAlign" target="white_carton" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="GraspAtPose" pose_key="wc_grasp_pose" strategy="top" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="20" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="RaiseHeld" target="white_carton" distance="0.15" timeout_ms="1500"/>
    <Action ID="HoldObject" target="white_carton" duration_ms="1000"/>
  </Sequence>
</BehaviorTree>
