<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="white_box" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <ComputeGraspPose target="white_box" strategy="side" result_key="white_box_grasp"/>
    <PoseAvailable key="white_box_grasp"/>
    <MoveAbove target="white_box" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="white_box" tolerance="0.01" timeout_ms="2000"/>
    <GraspAtPose pose_key="white_box_grasp" strategy="pinch" timeout_ms="1500"/>
    <CloseGripper force="40" timeout_ms="1000"/>
    <IsGraspStable/>
    <RaiseHeld target="white_box" distance="0.10" timeout_ms="1000"/>
    <ObjectInGripper target="white_box"/>
  </Sequence>
</BehaviorTree>
