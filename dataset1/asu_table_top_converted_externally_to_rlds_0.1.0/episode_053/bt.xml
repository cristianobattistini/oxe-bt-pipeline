<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="coke_can" timeout_ms="1500"/>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <MoveAbove target="coke_can" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="coke_can" tolerance="0.01" timeout_ms="2000"/>
    <ComputeGraspPose target="coke_can" strategy="top" result_key="grasp_coke"/>
    <GraspAtPose pose_key="grasp_coke" strategy="top" timeout_ms="1500"/>
    <CloseGripper force="20" timeout_ms="1000"/>
    <IsGraspStable/>
    <HoldObject target="coke_can" duration_ms="2000"/>
  </Sequence>
</BehaviorTree>
