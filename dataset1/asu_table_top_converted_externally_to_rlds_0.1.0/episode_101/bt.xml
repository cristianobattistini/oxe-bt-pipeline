<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="coke_bottle" timeout_ms="3000"/>
    </RetryUntilSuccessful>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <ApproachAndAlign target="coke_bottle" tolerance="0.01" timeout_ms="4000"/>
    <ComputeGraspPose target="coke_bottle" strategy="side" result_key="grasp_pose_coke"/>
    <GraspAtPose pose_key="grasp_pose_coke" strategy="pinch" timeout_ms="3000"/>
    <CloseGripper force="20" timeout_ms="1000"/>
    <ObjectInGripper target="coke_bottle"/>
    <RaiseHeld target="coke_bottle" distance="0.15" timeout_ms="2000"/>
    <HoldObject target="coke_bottle" duration_ms="1000"/>
    <Retreat distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
