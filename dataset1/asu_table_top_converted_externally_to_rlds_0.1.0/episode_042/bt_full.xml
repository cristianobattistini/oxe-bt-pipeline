<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="red_object" timeout_ms="3000"/>
    </RetryUntilSuccessful>
    <ApproachAndAlign target="red_object" tolerance="0.01" timeout_ms="3000"/>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <Pick grasp_key="std_top" timeout_ms="2000"/>
    <ObjectInGripper target="red_object"/>
    <IsGraspStable/>
    <HoldObject target="red_object" duration_ms="3000"/>
  </Sequence>
</BehaviorTree>
