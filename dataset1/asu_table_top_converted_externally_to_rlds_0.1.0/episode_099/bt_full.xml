<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="bread"/>
    <Action ID="MoveAbove" target="place_on_table" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="PlaceOnSurface" target="bread" area_id="table" yaw_deg="0" press_force="5" timeout_ms="2000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
