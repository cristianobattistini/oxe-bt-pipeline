<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="red_object" pattern="raster" max_attempts="3" timeout_ms="3000"/>
    <IsObjectVisible target="red_object"/>
    <ApproachAndAlign target="red_object" tolerance="0.01" timeout_ms="3000"/>
    <Push target="red_object" distance="0.15" direction_deg="270" timeout_ms="3000"/>
    <Retreat distance="0.10" timeout_ms="1500"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
