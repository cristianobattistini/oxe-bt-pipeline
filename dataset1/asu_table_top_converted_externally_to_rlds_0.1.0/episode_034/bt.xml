<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="glass_bottle" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="glass_bottle" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="glass_bottle" strategy="pinch" result_key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="RaiseHeld" target="glass_bottle" distance="0.10" timeout_ms="1000"/>
    <Action ID="PlaceOnSurface" target="glass_bottle" area_id="table" yaw_deg="90" press_force="10" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
