<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="blue_bottle" timeout_ms="2000"/>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <ApproachAndAlign target="blue_bottle" tolerance="0.01" timeout_ms="2000"/>
    <ComputeGraspPose target="blue_bottle" strategy="side" result_key="goal_pose"/>
    <PoseAvailable key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <CloseGripper force="10" timeout_ms="1000"/>
    <IsGraspStable/>
    <RaiseHeld target="blue_bottle" distance="0.10" timeout_ms="1500"/>
    <HoldObject target="blue_bottle" duration_ms="1000"/>
  </Sequence>
</BehaviorTree>
