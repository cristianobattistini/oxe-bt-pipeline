<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="maroon_square" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <Action ID="ApproachAndAlign" target="maroon_square" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Push" target="maroon_square" distance="0.10" direction_deg="270" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>