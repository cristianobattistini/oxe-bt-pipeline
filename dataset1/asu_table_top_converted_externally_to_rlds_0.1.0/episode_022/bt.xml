<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="green_bottle" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="green_bottle" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="ComputeGraspPose" target="green_bottle" strategy="top" result_key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="15" timeout_ms="800"/>
    <Action ID="RaiseHeld" target="green_bottle" distance="0.10" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="green_bottle"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>
