<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="ScanForTarget" target="white_box" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
    <Action ID="DetectObject" target="white_box" timeout_ms="1500"/>
    <Action ID="MoveAbove" target="white_box" offset_z="0.05" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="white_box" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="ComputeGraspPose" target="white_box" strategy="top" result_key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="top" timeout_ms="2000"/>
    <Action ID="CloseGripper" force="20" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="HoldObject" target="white_box" duration_ms="3000"/>
  </Sequence>
</BehaviorTree>
