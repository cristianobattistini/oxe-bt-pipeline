<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="glass_bottle"/>
    <Action ID="MoveAbove" target="place_on_table" offset_z="0.10" timeout_ms="2000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1500"/>
    <Action ID="PlaceOnSurface" target="glass_bottle" area_id="table" yaw_deg="90" press_force="10" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.10" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
