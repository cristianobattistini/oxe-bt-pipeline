<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="bread" timeout_ms="2000"/>
    <MoveAbove target="bread" offset_z="0.10" timeout_ms="2000"/>
    <ApproachAndAlign target="bread" tolerance="0.01" timeout_ms="2000"/>
    <OpenGripper width="0.06" timeout_ms="1000"/>
    <ComputeGraspPose target="bread" strategy="top" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <CloseGripper force="15" timeout_ms="1000"/>
    <IsGraspStable/>
    <RaiseHeld target="bread" distance="0.10" timeout_ms="2000"/>
    <HoldObject target="bread" duration_ms="1000"/>
    <Retreat distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
