<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.10" timeout_ms="800"/>
    <DetectObject target="pot" timeout_ms="3000"/>
    <IsObjectVisible target="pot"/>
    <ApproachAndAlign target="pot" tolerance="0.01" timeout_ms="3000"/>
    <OpenContainer target="pot" container_type="lid" timeout_ms="3000"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="side" timeout_ms="3000"/>
    <IsGraspStable/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="2000"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="3000"/>
    <OpenGripper width="0.12" timeout_ms="800"/>
    <DetectObject target="spatula" timeout_ms="3000"/>
    <ComputeGraspPose target="spatula" strategy="pinch" result_key="tool_pose"/>
    <GraspAtPose pose_key="tool_pose" strategy="pinch" timeout_ms="3000"/>
    <ApproachAndAlign target="pot" tolerance="0.02" timeout_ms="3000"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>
    <Wait timeout_ms="500"/>
    <Retreat distance="0.15" timeout_ms="1500"/>
    <OpenGripper width="0.12" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
