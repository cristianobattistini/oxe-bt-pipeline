<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="lid" timeout_ms="1500"/>
    <ApproachAndAlign target="lid" tolerance="0.01" timeout_ms="2000"/>
    <ComputeGraspPose target="lid" strategy="top" result_key="lid_grasp"/>
    <GraspAtPose pose_key="lid_grasp" strategy="pinch" timeout_ms="2000"/>
    <RaiseHeld target="lid" distance="0.10" timeout_ms="1500"/>
    <PlaceOnSurface target="lid" area_id="stove" yaw_deg="0" press_force="5" timeout_ms="2000"/>
    <OpenGripper width="0.08" timeout_ms="400"/>
    <Retreat distance="0.10" timeout_ms="1000"/>

    <DetectObject target="pot" timeout_ms="1500"/>
    <ApproachAndAlign target="pot" tolerance="0.01" timeout_ms="2000"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="pot_grasp"/>
    <GraspAtPose pose_key="pot_grasp" strategy="pinch" timeout_ms="2000"/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="1500"/>
    <DetectObject target="plate" timeout_ms="1500"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.08" timeout_ms="400"/>
    <Retreat distance="0.10" timeout_ms="1000"/>

    <DetectObject target="spatula" timeout_ms="1500"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
