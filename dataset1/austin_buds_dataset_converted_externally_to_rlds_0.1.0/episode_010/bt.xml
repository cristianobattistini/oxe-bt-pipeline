<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="2000"/>
    <DetectObject target="lid" timeout_ms="2000"/>
    <DetectObject target="plate" timeout_ms="2000"/>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <ApproachAndAlign target="lid" tolerance="0.02" timeout_ms="2000"/>
    <OpenContainer target="pot" container_type="lid" timeout_ms="2000"/>
    <ApproachAndAlign target="pot" tolerance="0.02" timeout_ms="2000"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="grasp_pot"/>
    <GraspAtPose pose_key="grasp_pot" strategy="pinch" timeout_ms="2000"/>
    <IsGraspStable/>
    <PlaceOnSurface target="plate" area_id="plate" yaw_deg="0" press_force="5" timeout_ms="2000"/>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <Retreat distance="0.05" timeout_ms="1500"/>
    <DetectObject target="spatula" timeout_ms="2000"/>
    <ApproachAndAlign target="spatula" tolerance="0.02" timeout_ms="2000"/>
    <ComputeGraspPose target="spatula" strategy="top" result_key="grasp_tool"/>
    <GraspAtPose pose_key="grasp_tool" strategy="pinch" timeout_ms="2000"/>
    <HoldObject target="spatula" duration_ms="1000"/>
    <ApproachAndAlign target="pot" tolerance="0.02" timeout_ms="2000"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="270" tool_id="spatula" timeout_ms="2000"/>
    <OpenGripper width="0.10" timeout_ms="1000"/>
    <Retreat distance="0.10" timeout_ms="1500"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
