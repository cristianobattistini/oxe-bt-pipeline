<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="2000"/>
    <OpenContainer target="pot" container_type="lid" timeout_ms="2000"/>

    <DetectObject target="pot" timeout_ms="2000"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="1500"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <Retreat distance="0.10" timeout_ms="1000"/>

    <DetectObject target="spatula" timeout_ms="2000"/>
    <ComputeGraspPose target="spatula" strategy="top" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <ApproachAndAlign target="pot" tolerance="0.02" timeout_ms="1500"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
