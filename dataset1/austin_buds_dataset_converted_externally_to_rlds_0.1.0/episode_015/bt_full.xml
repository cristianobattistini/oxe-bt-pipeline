<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="2000"/>
    <DetectObject target="lid" timeout_ms="2000"/>
    <OpenContainer target="pot_lid" container_type="lid" timeout_ms="2000"/>
    <DetectObject target="plate" timeout_ms="1000"/>
    <OpenGripper width="0.10" timeout_ms="500"/>
    <ApproachAndAlign target="pot" tolerance="0.01" timeout_ms="2000"/>
    <Pick grasp_key="std_top" timeout_ms="2000"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.10" timeout_ms="500"/>
    <DetectObject target="spatula" timeout_ms="1000"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
