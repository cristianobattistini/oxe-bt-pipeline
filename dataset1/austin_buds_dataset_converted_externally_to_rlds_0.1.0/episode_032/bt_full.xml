<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="2000"/>
    <DetectObject target="pot_lid" timeout_ms="2000"/>
    <DetectObject target="plate" timeout_ms="2000"/>
    <DetectObject target="spatula" timeout_ms="2000"/>

    <OpenContainer target="pot_lid" container_type="lid" timeout_ms="2000"/>
    <PlaceDown target="table" timeout_ms="1000"/>

    <OpenGripper width="0.10" timeout_ms="1000"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="side" timeout_ms="2000"/>
    <IsGraspStable/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="2000"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.10" timeout_ms="1000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>

    <ComputeGraspPose target="spatula" strategy="top" result_key="tool_pose"/>
    <GraspAtPose pose_key="tool_pose" strategy="top" timeout_ms="2000"/>
    <ObjectInGripper target="spatula"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>
    <PlaceDown target="spatula" timeout_ms="1000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
