<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="pot" pattern="grid" max_attempts="3" timeout_ms="2000"/>
    <ScanForTarget target="pot_lid" pattern="grid" max_attempts="3" timeout_ms="2000"/>
    <ScanForTarget target="plate" pattern="grid" max_attempts="3" timeout_ms="2000"/>
    <ScanForTarget target="spatula" pattern="grid" max_attempts="3" timeout_ms="2000"/>

    <!-- Remove lid from pot -->
    <MoveAbove target="pot_lid" offset_z="0.05" timeout_ms="1500"/>
    <OpenGripper width="0.10" timeout_ms="1000"/>
    <ComputeGraspPose target="pot_lid" strategy="top" result_key="lid_grasp"/>
    <GraspAtPose pose_key="lid_grasp" strategy="top" timeout_ms="2000"/>
    <CloseGripper force="20" timeout_ms="1500"/>
    <RaiseHeld target="pot_lid" distance="0.10" timeout_ms="1000"/>
    <PlaceOnSurface target="table" area_id="table" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.10" timeout_ms="1000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>

    <!-- Put pot on plate -->
    <MoveAbove target="pot" offset_z="0.05" timeout_ms="1500"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="pot_grasp"/>
    <GraspAtPose pose_key="pot_grasp" strategy="side" timeout_ms="3000"/>
    <CloseGripper force="40" timeout_ms="2000"/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="1000"/>
    <PlaceOnSurface target="plate" area_id="plate" yaw_deg="0" press_force="15" timeout_ms="3000"/>
    <OpenGripper width="0.10" timeout_ms="1000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>

    <!-- Use tool to push pot to front -->
    <MoveAbove target="spatula" offset_z="0.05" timeout_ms="1500"/>
    <ComputeGraspPose target="spatula" strategy="top" result_key="tool_grasp"/>
    <GraspAtPose pose_key="tool_grasp" strategy="top" timeout_ms="2000"/>
    <CloseGripper force="30" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="pot" tolerance="0.02" timeout_ms="2000"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="3000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <OpenGripper width="0.12" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
