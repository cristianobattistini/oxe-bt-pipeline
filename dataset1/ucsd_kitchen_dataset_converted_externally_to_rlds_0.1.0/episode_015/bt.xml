<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="oven_door"/>
      <Action ID="DetectObject" target="oven_door" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="oven_door_handle" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="oven_door_handle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="oven_door_handle" strategy="side" force="5" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Pull" target="oven_door_handle" distance="0.30" direction_deg="90" timeout_ms="2000"/>
    <Condition ID="ContainerOpen" target="oven_door"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.15" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>