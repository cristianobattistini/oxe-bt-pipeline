<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bowl"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="bowl" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="bowl" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="bowl" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="bowl" strategy="top" result_key="grasp_bowl"/>
    <Action ID="ApproachAndAlign" target="bowl" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="grasp_bowl" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="bowl"/>
    <Fallback>
      <Condition ID="ContainerOpen" target="kitchen_cabinet"/>
      <Action ID="OpenContainer" target="kitchen_cabinet" container_type="cabinet" timeout_ms="1500"/>
    </Fallback>
    <Action ID="MoveAbove" target="kitchen_cabinet" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="InsertInto" target="bowl" slot_id="receptacle_A" axis="z" distance="0.15" tolerance="0.005" force_limit="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>