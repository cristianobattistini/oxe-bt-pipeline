<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cabinet_handle"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cabinet_handle" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cabinet_handle" timeout_ms="800"/>
    <Action ID="MoveAbove" target="cabinet_handle" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="cabinet_handle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="cabinet_handle" strategy="side" result_key="grasp_handle"/>
    <Action ID="GraspAtPose" pose_key="grasp_handle" strategy="side" timeout_ms="1000"/>
    <Action ID="Pull" target="cabinet_door" distance="0.15" direction_deg="90" timeout_ms="2000"/>
    <Condition ID="ContainerOpen" target="cabinet_door"/>
  </Sequence>
</BehaviorTree>