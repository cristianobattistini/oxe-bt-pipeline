<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="oven_door"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="oven_door" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="oven_door" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="oven_door" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenContainer" target="oven_door" container_type="hinged_door" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="oven_door"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>