<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="faucet_knob"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="faucet_knob" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="faucet_knob" timeout_ms="800"/>
    <Action ID="MoveAbove" target="faucet_knob" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="faucet_knob" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="faucet_knob" strategy="twist" result_key="grasp_faucet"/>
    <Action ID="GraspAtPose" pose_key="grasp_faucet" strategy="twist" timeout_ms="1200"/>
    <Action ID="TurnKnob" target="faucet_knob" knob_type="knob" angle_deg="90" direction="open" force_limit="10" timeout_ms="1500"/>
    <Condition ID="ButtonPressed" target="faucet_knob"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>