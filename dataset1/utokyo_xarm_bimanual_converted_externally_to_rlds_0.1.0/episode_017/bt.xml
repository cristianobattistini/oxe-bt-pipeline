<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="towel"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="towel" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    <Action ID="MoveAbove" target="towel" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="towel" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>