<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="towel"/>
      <RetryUntilSuccessful num_attempts="2">
        <Action ID="ScanForTarget" target="towel" pattern="grid" max_attempts="2" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    <Action ID="MoveAbove" target="towel" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="towel" strategy="pinch" result_key="grasp_towel"/>
    <Action ID="GraspAtPose" pose_key="grasp_towel" strategy="pinch" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="towel"/>
    <Action ID="Unfold" target="towel" strategy="top" num_folds="2" timeout_ms="1500"/>
    <Action ID="PlaceDown" target="towel" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>