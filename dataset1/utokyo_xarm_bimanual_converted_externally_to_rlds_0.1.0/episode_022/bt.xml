<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="towel" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="towel" strategy="pinch" force="5" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Unfold" target="towel" strategy="pull" num_folds="2" timeout_ms="5000"/>
    <Action ID="PlaceOnSurface" target="towel" area_id="table" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.12" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>