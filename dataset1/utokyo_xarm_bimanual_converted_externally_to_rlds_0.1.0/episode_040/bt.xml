<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    <Action ID="MoveAbove" target="towel" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="towel" strategy="top" result_key="grasp_towel"/>
    <Action ID="GraspAtPose" pose_key="grasp_towel" strategy="top" timeout_ms="1500"/>
    <Action ID="Unfold" target="towel" strategy="pull" num_folds="2" timeout_ms="2000"/>
    <Action ID="PlaceOnSurface" target="towel" area_id="table" yaw_deg="0" press_force="5" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>