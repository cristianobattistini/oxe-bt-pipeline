<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="towel"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="towel" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="towel" strategy="top" result_key="towel_grasp"/>
    <Action ID="GraspAtPose" pose_key="towel_grasp" strategy="top" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Unfold" target="towel" strategy="pull" num_folds="2" timeout_ms="2000"/>
    <Action ID="PlaceDown" target="towel" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.15" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>