<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_object"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="red_object" pattern="raster" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="red_object" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="red_object" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="red_object" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="red_object" strategy="top" result_key="std_top"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="red_object"/>
    <Action ID="Retreat" distance="0.05" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>