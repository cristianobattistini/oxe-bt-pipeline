<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pot"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="pot" pattern="spiral" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="pot" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="pot" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="pot" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="pot" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.08" force_threshold="5" timeout_ms="1000"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="sink"/>
      <Action ID="DetectObject" target="sink" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="sink" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="PlaceOnSurface" target="pot" area_id="sink" yaw_deg="0" press_force="10" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>