<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="scissors"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="scissors" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="scissors" timeout_ms="800"/>
    <Action ID="MoveTo" target="approach_safepoint" timeout_ms="1000"/>
    <Condition ID="IsAt" target="approach_safepoint"/>
    <Action ID="MoveTo" target="scissors" timeout_ms="1000"/>
    <Condition ID="IsAt" target="scissors"/>
  </Sequence>
</BehaviorTree>