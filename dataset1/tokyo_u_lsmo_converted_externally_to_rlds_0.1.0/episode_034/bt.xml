<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="blue_pen"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="blue_pen" pattern="line" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="blue_pen" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="obstacle_block"/>
      <Action ID="DetectObject" target="obstacle_block" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveToXY" x="0.18" y="0.05" yaw_deg="0" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="blue_pen" tolerance="0.005" timeout_ms="1500"/>
    <Condition ID="IsAt" target="blue_pen"/>
  </Sequence>
</BehaviorTree>