<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="scissors"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="scissors" pattern="line" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="scissors" timeout_ms="800"/>
    <Action ID="MoveAbove" target="scissors" offset_z="0.05" timeout_ms="1500"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="obstacle"/>
      <Action ID="DetectObject" target="obstacle" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveDelta" axis="y" dist="0.10" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="scissors" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>