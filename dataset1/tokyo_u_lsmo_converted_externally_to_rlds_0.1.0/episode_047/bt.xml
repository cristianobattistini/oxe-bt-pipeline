<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="blue_pen"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="blue_pen" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="MoveAbove" target="blue_pen" offset_z="0.05" timeout_ms="1500"/>
    <Fallback>
      <Condition ID="IsAt" target="blue_pen"/>
      <Action ID="MoveDelta" axis="y" dist="0.05" timeout_ms="1000"/>
    </Fallback>
    <Action ID="ApproachAndAlign" target="blue_pen" tolerance="0.005" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>