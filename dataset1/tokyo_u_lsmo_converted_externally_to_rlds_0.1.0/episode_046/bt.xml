<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="blue_pen"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="blue_pen" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="blue_pen" timeout_ms="800"/>
    <Action ID="MoveToXY" x="0.20" y="0.10" yaw_deg="0" timeout_ms="1500"/>
    <Condition ID="IsAtXY" x="0.20" y="0.10" tolerance="0.005"/>
  </Sequence>
</BehaviorTree>