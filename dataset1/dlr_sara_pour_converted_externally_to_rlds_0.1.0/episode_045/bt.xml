<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bottle"/>
      <Action ID="DetectObject" target="bottle" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="bottle" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="bottle" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Grasp" target="bottle" strategy="side" force="10" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="bottle"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="Pour" source="bottle" target="mug" amount="null" tilt_angle="90" pour_rate="null" timeout_ms="1500"/>
    <Action ID="MoveAbove" target="bottle" offset_z="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>