<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="cup" strategy="side" result_key="std_side"/>
    <Action ID="ApproachAndAlign" target="cup" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="std_side" strategy="side" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="Pour" source="cup" target="mug" amount="null" tilt_angle="90" pour_rate="null" timeout_ms="2000"/>
    <Action ID="Wait" timeout_ms="500"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>