<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="mug" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="mug" tolerance="0.005" timeout_ms="1500"/>
    <Fallback>
      <Condition ID="ObjectInGripper" target="cup"/>
      <Sequence>
        <Fallback>
          <Condition ID="IsObjectVisible" target="cup"/>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="ScanForTarget" target="cup" pattern="grid" max_attempts="3" timeout_ms="1200"/>
          </RetryUntilSuccessful>
        </Fallback>
        <Action ID="DetectObject" target="cup" timeout_ms="800"/>
        <Action ID="ComputeGraspPose" target="cup" strategy="side" result_key="grasp_cup"/>
        <Action ID="GraspAtPose" pose_key="grasp_cup" strategy="side" timeout_ms="1000"/>
      </Sequence>
    </Fallback>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.15" timeout_ms="1500"/>
    <Action ID="Pour" source="cup" target="mug" amount="null" tilt_angle="45" pour_rate="normal" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.15" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>