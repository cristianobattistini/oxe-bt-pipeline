<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="mug" pattern="raster" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="mug" timeout_ms="1000"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="Pour" source="held_container" target="mug" amount="null" tilt_angle="75" pour_rate="normal" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
