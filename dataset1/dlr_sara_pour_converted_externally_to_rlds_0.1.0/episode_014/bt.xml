<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    </Fallback>
    <Action ID="ApproachAndAlign" target="mug" tolerance="0.005" timeout_ms="1500"/>
    <Condition ID="IsObjectVisible" target="cup"/>
    <Action ID="ComputeGraspPose" target="cup" strategy="side" result_key="grasp_cup"/>
    <Action ID="GraspAtPose" pose_key="grasp_cup" strategy="side" timeout_ms="1500"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="Pour" source="cup" target="mug" amount="null" tilt_angle="90" pour_rate="null" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>