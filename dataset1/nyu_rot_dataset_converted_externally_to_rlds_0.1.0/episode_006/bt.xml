<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="hanger"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="hanger" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="hanger" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="hanger" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="hanger" strategy="side" result_key="grasp_hanger"/>
    <Action ID="GraspAtPose" pose_key="grasp_hanger" strategy="side" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="rod"/>
      <Action ID="DetectObject" target="rod" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="rod" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="rod" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Hang" target="hanger" hook_id="rod" approach_angle="0" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>