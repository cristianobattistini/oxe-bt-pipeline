<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bag"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="bag" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="bag" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="hook"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="hook" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="hook" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="bag" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="bag" strategy="top" result_key="grasp_bag"/>
    <Action ID="ApproachAndAlign" target="bag" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="grasp_bag" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="bag"/>
    <Action ID="MoveAbove" target="hook" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="hook" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Hang" target="bag" hook_id="hook" approach_angle="0" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>