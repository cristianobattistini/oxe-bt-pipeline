<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="board"/>
      <Action ID="DetectObject" target="board" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="board" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="board" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="WipeArea" area_id="board" pattern="line" passes="2" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>