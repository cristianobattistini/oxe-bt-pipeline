<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="peg"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="peg" pattern="spiral" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="peg" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="peg" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="peg" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="peg" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="1500"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="InsertInto" target="peg" slot_id="receptacle_A" axis="z" distance="0.05" tolerance="0.002" force_limit="5" timeout_ms="1500"/>
    <Condition ID="Inserted" target="peg" slot_id="receptacle_A"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>