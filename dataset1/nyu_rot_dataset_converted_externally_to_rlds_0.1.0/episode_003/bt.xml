<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="box"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="box" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="box" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="box" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="box_lid" strategy="top" result_key="grasp_lid"/>
    <Action ID="GraspAtPose" pose_key="grasp_lid" strategy="top" timeout_ms="1000"/>
    <Action ID="OpenContainer" target="box" container_type="box_lid" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="box"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>