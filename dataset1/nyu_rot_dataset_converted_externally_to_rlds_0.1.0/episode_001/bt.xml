<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="almonds"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="almonds" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="almonds" timeout_ms="800"/>
    <Action ID="MoveAbove" target="almonds" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="almonds" strategy="top" result_key="grasp_almonds"/>
    <Action ID="GraspAtPose" pose_key="grasp_almonds" strategy="top" timeout_ms="1200"/>
    <Action ID="IsObjectVisible" target="cup"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.08" timeout_ms="1500"/>
    <Action ID="Pour" source="almonds" target="cup" amount="all" tilt_angle="90" pour_rate="normal" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>