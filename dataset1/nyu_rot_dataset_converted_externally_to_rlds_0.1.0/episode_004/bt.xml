<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="mug" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="mug" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="mug" strategy="side" force="5" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="hook"/>
      <RetryUntilSuccessful num_attempts="2">
        <Action ID="ScanForTarget" target="hook" pattern="raster" max_attempts="2" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="hook" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="hook" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Hang" target="mug" hook_id="hook" approach_angle="0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.10" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.05" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>