<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="blue_pen"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="blue_pen" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="blue_pen" timeout_ms="800"/>
    <Action ID="MoveTo" target="waypoint_1" timeout_ms="1500"/>
    <Action ID="MoveTo" target="waypoint_2" timeout_ms="1500"/>
    <Action ID="NavigateToNamed" location_id="goal" yaw_deg="0" timeout_ms="2000"/>
  </Sequence>
</BehaviorTree>