<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="blue_pen"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="blue_pen" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="blue_pen" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="obstacle"/>
      <Action ID="DetectObject" target="obstacle" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveToXY" x="0.15" y="0.20" yaw_deg="0" timeout_ms="1500"/>
    <Action ID="MoveTo" target="blue_pen" timeout_ms="1200"/>
    <Condition ID="IsAt" target="blue_pen"/>
  </Sequence>
</BehaviorTree>