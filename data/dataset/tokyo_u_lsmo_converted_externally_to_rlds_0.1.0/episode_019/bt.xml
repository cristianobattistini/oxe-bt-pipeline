<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="blue_pen"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="blue_pen" pattern="line" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="MoveTo" target="pre_approach_blue_pen" timeout_ms="1500"/>
    <Action ID="MoveDelta" axis="y" dist="0.10" timeout_ms="1000"/>
    <Action ID="MoveTo" target="goal_blue_pen" timeout_ms="1500"/>
    <Condition ID="IsAt" target="blue_pen"/>
  </Sequence>
</BehaviorTree>