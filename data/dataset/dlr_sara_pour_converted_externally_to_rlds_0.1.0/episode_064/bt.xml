<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cup" pattern="line" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="cup" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Pour" source="cup" target="mug" amount="null" tilt_angle="45" pour_rate="normal" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.15" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>