<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="mug" pattern="line" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="DetectObject" target="cup_source" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="mug" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Pour" source="cup_source" target="mug" amount="null" tilt_angle="45" pour_rate="null" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>