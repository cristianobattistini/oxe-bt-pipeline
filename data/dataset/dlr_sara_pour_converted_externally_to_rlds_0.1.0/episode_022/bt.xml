<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    </Fallback>
    <MoveAbove target="cup" offset_z="0.10" timeout_ms="1500"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    </Fallback>
    <MoveAbove target="mug" offset_z="0.10" timeout_ms="1500"/>
    <Pour source="cup" target="mug" amount="null" tilt_angle="90" pour_rate="null" timeout_ms="2000"/>
    <Retreat distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>