<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="mug" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="mug" tolerance="0.005" timeout_ms="1500"/>
    <Fallback>
      <Condition ID="ObjectInGripper" target="cup"/>
      <Sequence>
        <Fallback>
          <Condition ID="IsObjectVisible" target="cup"/>
          <Action ID="DetectObject" target="cup" timeout_ms="800"/>
        </Fallback>
        <Action ID="MoveAbove" target="cup" offset_z="0.05" timeout_ms="1500"/>
        <Action ID="ComputeGraspPose" target="cup" strategy="top" result_key="grasp_cup"/>
        <Action ID="GraspAtPose" pose_key="grasp_cup" strategy="top" timeout_ms="1000"/>
      </Sequence>
    </Fallback>
    <Action ID="Pour" source="cup" target="mug" amount="null" tilt_angle="45" pour_rate="normal" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>