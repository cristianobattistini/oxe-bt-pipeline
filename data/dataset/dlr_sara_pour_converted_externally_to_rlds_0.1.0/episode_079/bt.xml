<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="cup" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="cup" tolerance="0.005" timeout_ms="1500"/>
    <Condition ID="ObjectInGripper" target="cup"/>
    <Action ID="Pour" source="cup" target="mug" amount="null" tilt_angle="90" pour_rate="null" timeout_ms="1500"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>