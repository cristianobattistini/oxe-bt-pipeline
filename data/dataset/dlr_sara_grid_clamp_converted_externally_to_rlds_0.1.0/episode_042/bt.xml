<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="grid_board" timeout_ms="1500"/>
    <MoveAbove target="board" offset_z="0.08" timeout_ms="2000"/>
    <ApproachAndAlign target="board_markings" tolerance="0.005" timeout_ms="3000"/>
    <PlaceOnSurface target="grid_clamp" area_id="board" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.04" timeout_ms="800"/>
    <Wait timeout_ms="500"/>
    <Retreat distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
