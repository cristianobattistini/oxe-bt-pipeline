<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="board" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="MoveAbove" target="board" offset_z="0.10" timeout_ms="2000"/>
    <Action ID="ApproachAndAlign" target="board" tolerance="0.01" timeout_ms="3000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="2000"/>
    <Action ID="PlaceOnSurface" target="grid_clamp" area_id="board" yaw_deg="90" press_force="10" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="1000"/>
    <Action ID="Wait" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
