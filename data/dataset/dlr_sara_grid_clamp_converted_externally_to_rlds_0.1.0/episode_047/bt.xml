<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="grid_fixture" timeout_ms="1500"/>
    <Condition ID="IsObjectVisible" target="grid_fixture"/>
    <Condition ID="ObjectInGripper" target="clamp"/>
    <Action ID="MoveAbove" target="grid_fixture" offset_z="0.08" timeout_ms="2000"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="grid_fixture" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="2000"/>
    <Condition ID="ContactDetected" force_threshold="5"/>
    <Action ID="PlaceDown" target="grid_fixture" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
