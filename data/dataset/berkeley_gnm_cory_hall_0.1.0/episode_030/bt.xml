<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsAt" target="goal"/>
      <Sequence>
        <Action ID="NavigateToNamed" location_id="waypoint_1" yaw_deg="0" timeout_ms="5000"/>
        <Action ID="ScanForTarget" target="goal_door" pattern="line" max_attempts="3" timeout_ms="2000"/>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="NavigateToNamed" location_id="goal" yaw_deg="0" timeout_ms="7000"/>
        </RetryUntilSuccessful>
        <Condition ID="IsAt" target="goal"/>
      </Sequence>
    </Fallback>
  </Sequence>
</BehaviorTree>
