<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <ScanForTarget target="goal" pattern="arc" max_attempts="3" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <ApproachAndAlign target="goal" tolerance="0.01" timeout_ms="3000"/>
    <NavigateToNamed location_id="goal" yaw_deg="0" timeout_ms="5000"/>
    <IsAt target="goal"/>
  </Sequence>
</BehaviorTree>
