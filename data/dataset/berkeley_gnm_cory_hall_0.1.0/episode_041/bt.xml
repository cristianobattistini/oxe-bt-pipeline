<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <Condition ID="IsAt" target="goal"/>
        <Action ID="NavigateToNamed" location_id="goal" yaw_deg="0" timeout_ms="5000"/>
      </Fallback>
    </RetryUntilSuccessful>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
