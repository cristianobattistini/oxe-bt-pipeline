<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsAt" target="goal"/>
      <RetryUntilSuccessful num_attempts="3">
        <Timeout timeout_ms="5000">
          <Action ID="NavigateToNamed" location_id="goal" yaw_deg="0" timeout_ms="5000"/>
        </Timeout>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="ApproachAndAlign" target="doorway_right" tolerance="0.02" timeout_ms="2000"/>
    <Action ID="SetBlackboard" key="nav_status" value="reached_goal"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
