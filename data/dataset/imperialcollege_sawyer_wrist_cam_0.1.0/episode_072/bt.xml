<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cap"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cap" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cap" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cap" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="cap" strategy="pinch" result_key="grasp_cap"/>
    <Action ID="ApproachAndAlign" target="cap" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bottle"/>
      <Action ID="DetectObject" target="bottle" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="bottle" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="InsertInto" target="cap" slot_id="bottle_mouth" axis="z" distance="0.05" tolerance="0.005" force_limit="10" timeout_ms="1500"/>
    <Condition ID="Inserted" target="cap" slot_id="bottle_mouth"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
