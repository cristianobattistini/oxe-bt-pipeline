<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <Action ID="ScanForTarget" target="cup" pattern="grid" max_attempts="3" timeout_ms="800"/>
    </Fallback>
    <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="cup" strategy="side" result_key="grasp_cup"/>
    <Action ID="ApproachAndAlign" target="cup" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="GraspAtPose" pose_key="grasp_cup" strategy="side" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="hook" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="hook" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="Hang" target="cup" hook_id="hook" approach_angle="0" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>