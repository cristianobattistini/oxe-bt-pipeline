<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="apple"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="apple" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="apple" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="apple" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="apple" strategy="top" result_key="grasp_apple"/>
    <Action ID="GraspAtPose" pose_key="grasp_apple" strategy="top" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pot"/>
      <RetryUntilSuccessful num_attempts="2">
        <Action ID="ScanForTarget" target="pot" pattern="spiral" max_attempts="2" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="pot" timeout_ms="800"/>
    <Action ID="MoveAbove" target="pot" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="pot" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="PlaceOnSurface" target="apple" area_id="pot" yaw_deg="0" press_force="10" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>