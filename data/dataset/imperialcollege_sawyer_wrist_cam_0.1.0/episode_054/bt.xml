<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="jug"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="jug" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    <Action ID="MoveAbove" target="jug" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="jug" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="jug" strategy="top" force="5" timeout_ms="800"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="Pour" source="jug" target="mug" amount="full" tilt_angle="90" pour_rate="normal" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>