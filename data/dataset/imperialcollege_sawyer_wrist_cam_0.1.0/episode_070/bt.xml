<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="mug" pattern="line" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="mug" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="mug" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="mug" strategy="top" result_key="grasp_mug"/>
    <Action ID="GraspAtPose" pose_key="grasp_mug" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="mug"/>
  </Sequence>
</BehaviorTree>