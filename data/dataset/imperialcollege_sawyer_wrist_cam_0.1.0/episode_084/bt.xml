<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pan"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="pan" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="pan" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="pan" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="pan" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="pan" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="pan"/>
    <Action ID="RaiseHeld" target="pan" distance="0.05" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>