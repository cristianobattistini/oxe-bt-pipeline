<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bottle"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="bottle" pattern="spiral" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="bottle" timeout_ms="800"/>
    <Action ID="MoveAbove" target="bottle" offset_z="0.10" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="bottle" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="OpenContainer" target="bottle" container_type="lid" timeout_ms="2000"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>