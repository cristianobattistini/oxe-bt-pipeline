<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="mug"/>
      <RetryUntilSuccessful num_attempts="2">
        <Action ID="ScanForTarget" target="mug" pattern="grid" max_attempts="2" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="mug" timeout_ms="1000"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_cup"/>
      <RetryUntilSuccessful num_attempts="2">
        <Action ID="ScanForTarget" target="red_cup" pattern="grid" max_attempts="2" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="red_cup" timeout_ms="1000"/>
    <Action ID="MoveAbove" target="red_cup" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="mug" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Pour" source="red_cup" target="mug" amount="null" tilt_angle="45" pour_rate="null" timeout_ms="2000"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>