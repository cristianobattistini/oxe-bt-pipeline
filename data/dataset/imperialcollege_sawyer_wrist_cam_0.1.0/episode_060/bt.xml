<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="toast"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="toast" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="toast" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="toast" strategy="top" result_key="grasp_toast"/>
    <Action ID="ApproachAndAlign" target="toast" tolerance="0.002" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="grasp_toast" strategy="top" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="DetectObject" target="toaster_slot" timeout_ms="800"/>
    <Action ID="InsertInto" target="toast" slot_id="toaster_slot" axis="z" distance="0.05" tolerance="0.002" force_limit="5" timeout_ms="1200"/>
    <Condition ID="Inserted" target="toast" slot_id="toaster_slot"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>