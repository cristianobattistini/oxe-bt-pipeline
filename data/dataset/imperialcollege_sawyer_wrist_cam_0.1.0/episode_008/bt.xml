<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cup"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cup" pattern="grid" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cup" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cup" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="cup" strategy="side" result_key="grasp_cup"/>
    <Action ID="ApproachAndAlign" target="cup" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="grasp_cup" strategy="side" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="hook"/>
      <RetryUntilSuccessful num_attempts="2">
        <Action ID="ScanForTarget" target="hook" pattern="grid" max_attempts="2" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="hook" timeout_ms="800"/>
    <Action ID="MoveAbove" target="hook" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="Hang" target="cup" hook_id="hook" approach_angle="45" timeout_ms="1200"/>
    <Condition ID="Inserted" target="cup" slot_id="hook"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>