<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="toast"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="toast" pattern="grid" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="toast" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="toast" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="toast" strategy="top" result_key="grasp_toast"/>
    <Action ID="ApproachAndAlign" target="toast" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Grasp" target="toast" strategy="top" force="5" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="toast"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="slot_1"/>
      <Action ID="DetectObject" target="slot_1" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="slot_1" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="InsertInto" target="toast" slot_id="slot_1" axis="z" distance="0.05" tolerance="0.005" force_limit="5" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>