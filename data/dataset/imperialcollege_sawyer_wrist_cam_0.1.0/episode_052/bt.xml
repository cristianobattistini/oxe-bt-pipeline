<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="apple"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="apple" pattern="grid" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="apple" timeout_ms="800"/>
    <Action ID="MoveAbove" target="apple" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="apple" strategy="top" result_key="grasp_apple"/>
    <Action ID="ApproachAndAlign" target="apple" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="Pick" grasp_key="grasp_apple" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>