<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="door"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="door" pattern="raster" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="door" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="door" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="CloseContainer" target="door" container_type="door" timeout_ms="2000"/>
    <Condition ID="ContainerOpen" target="door"/>
    <Inverter>
      <Condition ID="ContainerOpen" target="door"/>
    </Inverter>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>