<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="towel"/>
      <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="towel" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="towel" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="normal" max_depth="0.05" force_threshold="5" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="towel"/>
  </Sequence>
</BehaviorTree>