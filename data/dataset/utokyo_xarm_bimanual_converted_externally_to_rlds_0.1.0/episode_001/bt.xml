<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="towel"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="towel" pattern="zigzag" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    <Action ID="MoveAbove" target="towel" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="towel" strategy="side" result_key="grasp_towel"/>
    <Action ID="GraspAtPose" pose_key="grasp_towel" strategy="side" timeout_ms="1200"/>
    <Action ID="Unfold" target="towel" strategy="pull" num_folds="2" timeout_ms="1500"/>
    <Action ID="PlaceDown" target="towel" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.10" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>