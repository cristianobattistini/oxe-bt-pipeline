<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="towel"/>
      <Action ID="ScanForTarget" target="towel" pattern="line" max_attempts="3" timeout_ms="800"/>
    </Fallback>
    <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    <Action ID="MoveTo" target="towel" timeout_ms="1000"/>
    <Condition ID="IsAt" target="towel"/>
  </Sequence>
</BehaviorTree>