<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="towel"/>
      <Action ID="ScanForTarget" target="towel" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="towel" timeout_ms="800"/>
    <Action ID="MoveAbove" target="towel" offset_z="0.10" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="towel" strategy="side" result_key="grasp_towel"/>
    <Action ID="GraspAtPose" pose_key="grasp_towel" strategy="side" timeout_ms="1500"/>
    <Action ID="Unfold" target="towel" strategy="pull" num_folds="1" timeout_ms="3000"/>
    <Action ID="PlaceDown" target="towel" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.15" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>