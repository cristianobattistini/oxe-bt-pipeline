<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_object"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="red_object" pattern="grid" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="red_object" timeout_ms="800"/>
    <Action ID="MoveAbove" target="red_object" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="red_object" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1000"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Condition ID="ObjectInGripper" target="red_object"/>
  </Sequence>
</BehaviorTree>