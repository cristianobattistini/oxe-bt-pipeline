<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_cylinder"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="red_cylinder" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="red_cylinder" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="red_cylinder" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="red_cylinder" strategy="top" result_key="grasp_red_cylinder"/>
    <Action ID="ApproachAndAlign" target="red_cylinder" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="RaiseHeld" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>