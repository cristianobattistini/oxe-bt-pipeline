<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_block"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="red_block" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="red_block" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="red_block" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="red_block" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="red_block" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Grasp" target="red_block" strategy="top" force="5" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="red_block"/>
    <Action ID="RaiseHeld" target="red_block" distance="0.05" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>