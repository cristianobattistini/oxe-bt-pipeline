<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_object"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="red_object" pattern="grid" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="red_object" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="red_object" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ApproachAndAlign" target="red_object" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="CloseGripper" force="5" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="red_object"/>
    <Action ID="RaiseHeld" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>