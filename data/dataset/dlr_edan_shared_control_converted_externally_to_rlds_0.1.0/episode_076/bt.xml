<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pear"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="pear" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="pear" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="pear" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="pear" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="pear" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="5" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Pick" grasp_key="std_top" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>