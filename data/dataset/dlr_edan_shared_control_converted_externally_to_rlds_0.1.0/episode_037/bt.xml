<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="die"/>
      <Action ID="DetectObject" target="die" timeout_ms="800"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="die" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="die" tolerance="0.002" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="die" strategy="top" result_key="grasp_die"/>
    <Action ID="GraspAtPose" pose_key="grasp_die" strategy="top" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="die"/>
  </Sequence>
</BehaviorTree>