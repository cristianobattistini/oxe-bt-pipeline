<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cube"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cube" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cube" timeout_ms="800"/>
    <Action ID="MoveAbove" target="cube" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="cube" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="cube"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>