<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="orange"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="orange" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="orange" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="orange" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="orange" strategy="top" result_key="grasp_orange"/>
    <Action ID="ApproachAndAlign" target="orange" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="grasp_orange" strategy="top" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="orange"/>
  </Sequence>
</BehaviorTree>