<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_apple"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="green_apple" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="green_apple" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="800"/>
    <Action ID="MoveAbove" target="green_apple" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="green_apple" strategy="pinch" result_key="grasp_green_apple"/>
    <Action ID="ApproachAndAlign" target="green_apple" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="10" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="RaiseHeld" target="green_apple" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
