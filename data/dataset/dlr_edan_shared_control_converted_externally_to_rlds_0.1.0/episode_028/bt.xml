<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="yellow_ball"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="yellow_ball" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="yellow_ball" timeout_ms="800"/>
    <Action ID="MoveAbove" target="yellow_ball" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="yellow_ball" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.04" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="yellow_ball" strategy="top" result_key="std_top"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="yellow_ball"/>
  </Sequence>
</BehaviorTree>