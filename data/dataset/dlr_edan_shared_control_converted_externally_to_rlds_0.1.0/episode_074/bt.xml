<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cube"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cube" pattern="grid" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cube" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="400"/>
    <Action ID="MoveAbove" target="cube" offset_z="0.05" timeout_ms="1000"/>
    <Action ID="ComputeGraspPose" target="cube" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="cube" tolerance="0.005" timeout_ms="1000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1000"/>
    <Action ID="CloseGripper" force="5" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="cube"/>
  </Sequence>
</BehaviorTree>