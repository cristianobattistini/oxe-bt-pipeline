<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_apple"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="green_apple" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="green_apple" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="green_apple" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="green_apple" strategy="top" result_key="apple_grasp_top"/>
    <Action ID="ApproachAndAlign" target="green_apple" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="apple_grasp_top" strategy="top" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="green_apple"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>