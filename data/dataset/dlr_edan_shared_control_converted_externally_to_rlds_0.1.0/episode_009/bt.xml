<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="glass"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="glass" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="glass" timeout_ms="800"/>
    <Action ID="MoveAbove" target="glass" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="glass" strategy="top" result_key="grasp_glass"/>
    <Action ID="ApproachAndAlign" target="glass" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="GraspAtPose" pose_key="grasp_glass" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="glass"/>
  </Sequence>
</BehaviorTree>