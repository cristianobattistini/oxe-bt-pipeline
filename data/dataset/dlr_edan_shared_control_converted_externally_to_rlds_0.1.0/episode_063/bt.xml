<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="disk"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="disk" pattern="grid" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="disk" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="disk" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="disk" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="disk" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="5" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="disk"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Retreat" distance="0.05" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>