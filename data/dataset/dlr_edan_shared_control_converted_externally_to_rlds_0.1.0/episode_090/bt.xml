<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="banana"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="banana" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="banana" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="banana" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="banana" strategy="top" result_key="grasp_banana"/>
    <Action ID="ApproachAndAlign" target="banana" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="banana"/>
    <Action ID="RaiseHeld" target="banana" distance="0.10" timeout_ms="1200"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>