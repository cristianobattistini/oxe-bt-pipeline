<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="oven_door"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="oven_door" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="oven_door" timeout_ms="800"/>
    <Action ID="MoveAbove" target="oven_door" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="oven_door" strategy="side" result_key="grasp_oven_door"/>
    <Action ID="GraspAtPose" pose_key="grasp_oven_door" strategy="side" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="OpenContainer" target="oven_door" container_type="door" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>