<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="faucet" timeout_ms="800"/>
    <Action ID="MoveAbove" target="faucet" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="faucet" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="faucet" strategy="top" result_key="grasp_faucet"/>
    <Action ID="GraspAtPose" pose_key="grasp_faucet" strategy="top" timeout_ms="1500"/>
    <Action ID="TurnKnob" target="faucet" knob_type="lever" angle_deg="45" direction="open" force_limit="5" timeout_ms="1000"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>