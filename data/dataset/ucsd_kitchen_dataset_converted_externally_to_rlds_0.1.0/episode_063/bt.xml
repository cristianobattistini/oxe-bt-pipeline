<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="oven_door"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="oven_door" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="oven_door" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="oven_door" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="oven_door" strategy="pull" result_key="grasp_oven_door"/>
    <Action ID="GraspAtPose" pose_key="grasp_oven_door" strategy="pull" timeout_ms="1500"/>
    <Action ID="Pull" target="oven_door" distance="0.20" direction_deg="90" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="oven_door"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>