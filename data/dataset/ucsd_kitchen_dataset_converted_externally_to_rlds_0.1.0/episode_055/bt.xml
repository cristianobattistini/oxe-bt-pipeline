<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="faucet_knob"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="faucet_knob" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="faucet_knob" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="faucet_knob" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="faucet_knob" strategy="twist" result_key="knob_twist_pose"/>
    <Action ID="GraspAtPose" pose_key="knob_twist_pose" strategy="twist" timeout_ms="1500"/>
    <Action ID="TurnKnob" target="faucet_knob" knob_type="knob" angle_deg="45" direction="open" force_limit="5" timeout_ms="1500"/>
    <Condition ID="ButtonPressed" target="faucet_water"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>