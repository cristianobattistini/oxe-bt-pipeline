<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="oven_door"/>
      <Action ID="DetectObject" target="oven_door" timeout_ms="800"/>
    </Fallback>
    <Action ID="ApproachAndAlign" target="oven_door" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="oven_door_handle" strategy="side" result_key="grasp_oven_handle"/>
    <Action ID="GraspAtPose" pose_key="grasp_oven_handle" strategy="side" timeout_ms="1000"/>
    <Action ID="Pull" target="oven_door" distance="0.20" direction_deg="180" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="oven_door"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>