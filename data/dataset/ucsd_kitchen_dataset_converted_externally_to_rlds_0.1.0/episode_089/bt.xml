<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="oven_door_handle"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="oven_door_handle" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="oven_door_handle" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="oven_door_handle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="oven_door_handle" strategy="side" force="5" timeout_ms="800"/>
    <Action ID="Pull" target="oven_door_handle" distance="0.10" direction_deg="90" timeout_ms="1200"/>
    <Condition ID="ContainerOpen" target="oven_door"/>
    <Action ID="Release" target="oven_door_handle" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>