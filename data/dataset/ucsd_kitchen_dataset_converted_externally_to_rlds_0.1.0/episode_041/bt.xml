<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bowl"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="bowl" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="bowl" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="bowl" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="bowl" strategy="top" result_key="std_top"/>
    <Action ID="GraspAtPose" pose_key="std_top" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="bowl"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cabinet"/>
      <Action ID="DetectObject" target="cabinet" timeout_ms="800"/>
    </Fallback>
    <Action ID="OpenContainer" target="cabinet" container_type="cabinet" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="cabinet" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="PlaceOnSurface" target="bowl" area_id="cabinet" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>