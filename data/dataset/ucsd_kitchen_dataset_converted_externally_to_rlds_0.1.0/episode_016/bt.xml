<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cabinet_door"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="cabinet_door" pattern="grid" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="cabinet_door" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="cabinet_door" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="cabinet_door" strategy="pull" force="5" timeout_ms="800"/>
    <Action ID="Pull" target="cabinet_door" distance="0.15" direction_deg="90" timeout_ms="1000"/>
    <Condition ID="ContainerOpen" target="cabinet_door"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>