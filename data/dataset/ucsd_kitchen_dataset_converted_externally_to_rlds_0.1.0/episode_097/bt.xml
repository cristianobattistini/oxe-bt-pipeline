<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_box"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="green_box" pattern="grid" max_attempts="3" timeout_ms="1000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="green_box" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="MoveAbove" target="green_box" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="green_box" strategy="top" result_key="grasp_green_box"/>
    <Action ID="GraspAtPose" pose_key="grasp_green_box" strategy="top" timeout_ms="1000"/>
    <Condition ID="ObjectInGripper" target="green_box"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="sink"/>
      <Action ID="DetectObject" target="sink" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="sink" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="PlaceOnSurface" target="green_box" area_id="sink" yaw_deg="0" press_force="5" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>