<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="faucet_knob"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="faucet_knob" pattern="circle" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="faucet_knob" timeout_ms="800"/>
    <Action ID="MoveAbove" target="faucet_knob" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="faucet_knob" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Grasp" target="faucet_knob" strategy="twist" force="5" timeout_ms="800"/>
    <Action ID="TurnKnob" target="faucet_knob" knob_type="knob" angle_deg="90" direction="open" force_limit="5" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.10" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>