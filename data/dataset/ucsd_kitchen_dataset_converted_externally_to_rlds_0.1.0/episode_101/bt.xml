<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="oven_door"/>
      <Action ID="DetectObject" target="oven_door" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="oven_door" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="oven_door" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Grasp" target="oven_door" strategy="side" force="5" timeout_ms="800"/>
    <Action ID="Pull" target="oven_door" distance="0.15" direction_deg="90" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="oven_door"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>