<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="teapot"/>
      <Action ID="DetectObject" target="teapot" timeout_ms="800"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="MoveAbove" target="teapot" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="teapot" strategy="top" result_key="std_top"/>
    <Action ID="ApproachAndAlign" target="teapot" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.10" force_threshold="5" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="stove"/>
      <Action ID="DetectObject" target="stove" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="stove" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="PlaceOnSurface" target="teapot" area_id="stove" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>