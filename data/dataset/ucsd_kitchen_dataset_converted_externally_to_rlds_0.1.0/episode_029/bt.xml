<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_box"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="white_box" pattern="grid" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="white_box" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="white_box" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="white_box" strategy="top" result_key="grasp_white_box"/>
    <Action ID="GraspAtPose" pose_key="grasp_white_box" strategy="top" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="white_box"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="sink"/>
      <Action ID="DetectObject" target="sink" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="sink" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="PlaceDown" target="sink" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>