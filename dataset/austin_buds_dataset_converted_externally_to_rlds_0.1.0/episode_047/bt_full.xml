<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="2000"/>
    <DetectObject target="plate" timeout_ms="2000"/>
    <OpenContainer target="pot" container_type="lid" timeout_ms="2000"/>

    <ApproachAndAlign target="pot" tolerance="0.01" timeout_ms="2000"/>
    <CloseGripper force="20" timeout_ms="1500"/>
    <IsGraspStable/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="1500"/>
    <PlaceAt pose_key="place_on_plate" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.10" timeout_ms="800"/>
    <Retreat distance="0.05" timeout_ms="1000"/>

    <DetectObject target="spatula" timeout_ms="2000"/>
    <ApproachAndAlign target="spatula" tolerance="0.01" timeout_ms="2000"/>
    <CloseGripper force="15" timeout_ms="1500"/>
    <IsGraspStable/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>
    <OpenGripper width="0.10" timeout_ms="800"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
