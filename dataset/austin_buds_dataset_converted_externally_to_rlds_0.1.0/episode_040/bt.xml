<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="3000"/>
    <DetectObject target="lid" timeout_ms="3000"/>
    <MoveAbove target="pot" offset_z="0.05" timeout_ms="3000"/>
    <OpenContainer target="pot" container_type="pot" timeout_ms="3000"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="side" timeout_ms="3000"/>
    <DetectObject target="plate" timeout_ms="3000"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="3000"/>
    <DetectObject target="spatula" timeout_ms="3000"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="3000"/>
    <Retreat distance="0.10" timeout_ms="3000"/>
  </Sequence>
</BehaviorTree>
