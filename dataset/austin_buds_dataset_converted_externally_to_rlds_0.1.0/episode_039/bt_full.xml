<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot_lid" timeout_ms="1000"/>
    <ComputeGraspPose target="pot_lid" strategy="top" result_key="pose_lid_top"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <GraspAtPose pose_key="pose_lid_top" strategy="pinch" timeout_ms="1500"/>
    <RaiseHeld target="pot_lid" distance="0.10" timeout_ms="1000"/>
    <PlaceOnSurface target="pot_lid" area_id="table" yaw_deg="0" press_force="5" timeout_ms="1500"/>
    <OpenGripper width="0.10" timeout_ms="500"/>

    <DetectObject target="pot" timeout_ms="1000"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="pose_pot_side"/>
    <GraspAtPose pose_key="pose_pot_side" strategy="pinch" timeout_ms="2000"/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="1000"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.10" timeout_ms="500"/>
    <Retreat distance="0.05" timeout_ms="800"/>

    <DetectObject target="spatula" timeout_ms="1000"/>
    <ComputeGraspPose target="spatula" strategy="pinch" result_key="pose_spatula_handle"/>
    <GraspAtPose pose_key="pose_spatula_handle" strategy="pinch" timeout_ms="1500"/>
    <ApproachAndAlign target="pot" tolerance="0.02" timeout_ms="2000"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>
    <PlaceOnSurface target="spatula" area_id="table" yaw_deg="0" press_force="5" timeout_ms="1500"/>
    <OpenGripper width="0.10" timeout_ms="500"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
