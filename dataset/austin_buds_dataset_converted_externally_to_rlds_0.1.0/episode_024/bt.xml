<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="2000"/>
    <IsObjectVisible target="pot"/>
    <MoveAbove target="pot" offset_z="0.05" timeout_ms="1500"/>
    <OpenContainer target="pot" container_type="pot" timeout_ms="1500"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="pot_grasp"/>
    <GraspAtPose pose_key="pot_grasp" strategy="side" timeout_ms="2000"/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="1500"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="2000"/>

    <DetectObject target="spatula" timeout_ms="2000"/>
    <ComputeGraspPose target="spatula" strategy="pinch" result_key="tool_grasp"/>
    <GraspAtPose pose_key="tool_grasp" strategy="pinch" timeout_ms="2000"/>
    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>

    <OpenGripper width="0.10" timeout_ms="400"/>
    <Retreat distance="0.10" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
