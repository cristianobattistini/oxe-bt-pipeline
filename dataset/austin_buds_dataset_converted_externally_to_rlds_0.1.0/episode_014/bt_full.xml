<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="pot" pattern="spiral" max_attempts="3" timeout_ms="3000"/>
    <DetectObject target="pot" timeout_ms="2000"/>
    <MoveAbove target="pot" offset_z="0.05" timeout_ms="1500"/>
    <OpenContainer target="pot" container_type="lid" timeout_ms="2000"/>
    <ContainerOpen target="pot"/>
    <ComputeGraspPose target="pot" strategy="top" result_key="pot_grasp"/>
    <GraspAtPose pose_key="pot_grasp" strategy="top" timeout_ms="3000"/>
    <RaiseHeld target="pot" distance="0.10" timeout_ms="1500"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="5" timeout_ms="3000"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <ScanForTarget target="spatula" pattern="spiral" max_attempts="3" timeout_ms="3000"/>
    <DetectObject target="spatula" timeout_ms="2000"/>
    <ComputeGraspPose target="spatula" strategy="pinch" result_key="spatula_grasp"/>
    <GraspAtPose pose_key="spatula_grasp" strategy="pinch" timeout_ms="3000"/>
    <ApproachAndAlign target="pot" tolerance="0.01" timeout_ms="2000"/>
    <PushWithTool target="pot" distance="0.15" direction_deg="180" tool_id="spatula" timeout_ms="2000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
