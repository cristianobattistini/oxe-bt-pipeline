<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="2000"/>
    <OpenContainer target="pot" container_type="pot" timeout_ms="2000"/>

    <DetectObject target="pot" timeout_ms="1500"/>
    <ComputeGraspPose target="pot" strategy="side" result_key="pot_grasp"/>
    <GraspAtPose pose_key="pot_grasp" strategy="pinch" timeout_ms="2000"/>

    <PlaceAt pose_key="place_on_plate" yaw_deg="0" press_force="5" timeout_ms="2000"/>
    <OpenGripper width="0.08" timeout_ms="400"/>
    <Retreat distance="0.10" timeout_ms="1000"/>

    <DetectObject target="spatula" timeout_ms="1500"/>
    <ComputeGraspPose target="spatula" strategy="top" result_key="tool_grasp"/>
    <GraspAtPose pose_key="tool_grasp" strategy="pinch" timeout_ms="1500"/>

    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="3000"/>
    <PlaceDown target="table" timeout_ms="1000"/>
    <OpenGripper width="0.08" timeout_ms="400"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
