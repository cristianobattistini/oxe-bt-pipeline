<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="plate" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="pot" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <ApproachAndAlign target="pot" tolerance="0.01" timeout_ms="3000"/>
    <PlaceOnSurface target="pot" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="3000"/>
    <IsObjectVisible target="pot"/>
  </Sequence>
</BehaviorTree>
