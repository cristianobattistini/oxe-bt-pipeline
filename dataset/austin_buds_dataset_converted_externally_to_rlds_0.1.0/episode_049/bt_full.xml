    <PushWithTool target="pot" distance="0.20" direction_deg="180" tool_id="spatula" timeout_ms="1500"/>
    <PlaceDown target="spatula" timeout_ms="1000"/>
    <OpenGripper width="0.06" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
