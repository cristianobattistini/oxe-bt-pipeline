    <ComputeGraspPose target="pot" strategy="top" result_key="pot_grasp"/>
    <GraspAtPose pose_key="pot_grasp" strategy="pinch" timeout_ms="1500"/>
    <PlaceOnSurface target="plate" area_id="plate" yaw_deg="0" press_force="10" timeout_ms="1500"/>
    <OpenGripper width="0.06" timeout_ms="800"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
