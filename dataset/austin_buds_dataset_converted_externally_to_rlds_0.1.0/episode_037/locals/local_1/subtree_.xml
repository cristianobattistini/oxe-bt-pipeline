<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="1500"/>
    <ApproachAndAlign target="pot" tolerance="0.01" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <ComputeGraspPose target="pot" strategy="side" result_key="pot_grasp"/>
        <GraspAtPose pose_key="pot_grasp" strategy="pinch" timeout_ms="2000"/>
      </Sequence>
    </RetryUntilSuccessful>
    <ObjectInGripper target="pot"/>
    <IsGraspStable/>
  </Sequence>
</BehaviorTree>
