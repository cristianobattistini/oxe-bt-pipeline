<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="drawer_handle" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="drawer_handle" tolerance="0.01" timeout_ms="1500"/>
    <ComputeGraspPose target="drawer_handle" strategy="pull" result_key="grasp_dh"/>
    <PoseAvailable key="grasp_dh"/>
    <Pick grasp_key="grasp_dh" timeout_ms="1500"/>
    <IsGraspStable/>
    <OpenContainer target="kitchen_drawer" container_type="drawer" timeout_ms="1500"/>
    <OpenGripper width="0.06" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
