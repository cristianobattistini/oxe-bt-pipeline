<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="1200"/>
    <DetectObject target="lid" timeout_ms="1200"/>
    <MoveAbove target="lid" offset_z="0.06" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ApproachAndAlign target="lid" tolerance="0.01" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.04" force_threshold="10" timeout_ms="1200"/>
    <CloseGripper force="10" timeout_ms="800"/>
    <ObjectInGripper target="lid"/>
    <MoveDelta axis="z" dist="0.12" timeout_ms="1200"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
