<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="dishwasher_handle"/>
      <Sequence>
        <ScanForTarget target="dishwasher_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
        <DetectObject target="dishwasher_handle" timeout_ms="800"/>
      </Sequence>
    </Fallback>
    <MoveTo target="dishwasher_handle" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ComputeGraspPose target="dishwasher_handle" strategy="pull" result_key="grasp_handle"/>
    <ApproachAndAlign target="dishwasher_handle" tolerance="0.01" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <IsGraspStable/>
    <MoveDelta axis="y" dist="0.2" timeout_ms="1500"/>
    <Wait timeout_ms="400"/>
    <ContainerOpen target="dishwasher"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
