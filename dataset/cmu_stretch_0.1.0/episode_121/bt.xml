<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="lid"/>
      <ScanForTarget target="lid" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <MoveAbove target="pot" offset_z="0.08" timeout_ms="1200"/>
    <ApproachAndAlign target="lid" tolerance="0.005" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <ComputeGraspPose target="lid_handle" strategy="pinch" result_key="lid_grasp"/>
    <RetryUntilSuccessful num_attempts="2">
      <Sequence>
        <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
        <CloseGripper force="20" timeout_ms="800"/>
        <IsGraspStable/>
      </Sequence>
    </RetryUntilSuccessful>
    <Pick grasp_key="lid_grasp" timeout_ms="1200"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="800"/>
    <ObjectInGripper target="lid"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
