<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <Fallback>
          <IsObjectVisible target="drawer_handle"/>
          <Sequence>
            <ScanForTarget target="drawer_handle" pattern="raster" max_attempts="2" timeout_ms="1500"/>
            <DetectObject target="drawer_handle" timeout_ms="1500"/>
            <IsObjectVisible target="drawer_handle"/>
          </Sequence>
        </Fallback>
      </Sequence>
    </RetryUntilSuccessful>
  </Sequence>
</BehaviorTree>
