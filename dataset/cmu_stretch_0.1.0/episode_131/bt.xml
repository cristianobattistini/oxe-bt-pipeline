<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="lid"/>
      <Sequence>
        <ScanForTarget target="lid" pattern="grid" max_attempts="3" timeout_ms="1500"/>
        <DetectObject target="lid" timeout_ms="800"/>
      </Sequence>
    </Fallback>
    <ComputeGraspPose target="lid" strategy="top" result_key="lid_grasp"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <MoveAbove target="lid" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="lid" tolerance="0.01" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1200"/>
    <ObjectInGripper target="lid"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
