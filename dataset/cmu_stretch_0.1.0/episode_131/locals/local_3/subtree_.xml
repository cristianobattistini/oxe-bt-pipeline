<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="lid"/>
      <Sequence>
        <ScanForTarget target="lid" pattern="grid" max_attempts="3" timeout_ms="1500"/>
        <DetectObject target="lid" timeout_ms="800"/>
      </Sequence>
    </Fallback>
    <ApproachAndAlign target="lid" tolerance="0.01" timeout_ms="1500"/>
    <IsAt target="lid"/>
  </Sequence>
</BehaviorTree>
