<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot_lid" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ComputeGraspPose target="pot_lid" strategy="top" result_key="lid_grasp"/>
    <ApproachAndAlign target="pot_lid" tolerance="0.01" timeout_ms="1500"/>
    <Pick grasp_key="lid_grasp" timeout_ms="1200"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1200"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
