<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pot_lid"/>
      <Action ID="DetectObject" target="pot_lid" timeout_ms="1200"/>
      <Action ID="ScanForTarget" target="pot_lid" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="MoveAbove" target="pot_lid" offset_z="0.08" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="ComputeGraspPose" target="pot_lid" strategy="top" result_key="lid_grasp"/>
    <Condition ID="PoseAvailable" key="lid_grasp"/>
    <Action ID="ApproachAndAlign" target="pot_lid" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="lid_grasp" timeout_ms="1200"/>
    <Condition ID="ObjectInGripper" target="pot_lid"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
