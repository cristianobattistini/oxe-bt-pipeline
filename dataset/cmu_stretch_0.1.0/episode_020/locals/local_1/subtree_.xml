<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pot_lid"/>
      <Sequence>
        <DetectObject target="pot_lid" timeout_ms="1200"/>
        <Condition ID="IsObjectVisible" target="pot_lid"/>
      </Sequence>
    </Fallback>
    <ApproachAndAlign target="pot_lid" tolerance="0.01" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="2">
      <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Condition ID="ContactDetected" force_threshold="10"/>
  </Sequence>
</BehaviorTree>
