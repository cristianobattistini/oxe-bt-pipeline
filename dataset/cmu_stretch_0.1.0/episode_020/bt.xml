<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="pot_lid"/>
      <Sequence>
        <DetectObject target="pot_lid" timeout_ms="1200"/>
        <Condition ID="IsObjectVisible" target="pot_lid"/>
      </Sequence>
    </Fallback>
    <MoveAbove target="pot_lid" offset_z="0.06" timeout_ms="1200"/>
    <ComputeGraspPose target="pot_lid" strategy="top" result_key="lid_grasp"/>
    <ApproachAndAlign target="pot_lid" tolerance="0.01" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <MoveDelta axis="z" dist="0.2" timeout_ms="1500"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
