<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="green_bin" timeout_ms="1200"/>
    <IsObjectVisible target="green_bin"/>
    <MoveAbove target="green_bin_lid" offset_z="0.02" timeout_ms="1500"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <ApproachAndAlign target="green_bin_lid" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <OpenContainer target="green_bin" container_type="bin_lid" timeout_ms="1500"/>
    <Wait timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
