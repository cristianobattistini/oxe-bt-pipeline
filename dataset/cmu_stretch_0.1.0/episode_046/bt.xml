<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="pot_lid"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="pot_lid" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>

    <MoveAbove target="pot_lid" offset_z="0.03" timeout_ms="1200"/>
    <OpenGripper width="0.06" timeout_ms="800"/>

    <ComputeGraspPose target="pot_lid" strategy="top" result_key="grasp_lid_top"/>
    <PoseAvailable key="grasp_lid_top"/>
    <ApproachAndAlign target="pot_lid" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="grasp_lid_top" timeout_ms="1200"/>
    <IsGraspStable/>

    <MoveDelta axis="z" dist="0.10" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <ContainerOpen target="pot"/>
  </Sequence>
</BehaviorTree>
