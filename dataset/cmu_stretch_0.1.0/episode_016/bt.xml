<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_bin_lid"/>
      <Action ID="DetectObject" target="green_bin_lid" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveAbove" target="green_bin_lid" offset_z="0.10" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="green_bin_lid" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Action ID="OpenContainer" target="green_bin" container_type="bin_lid" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="green_bin"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
