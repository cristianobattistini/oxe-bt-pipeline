<BehaviorTree ID="MainTree">
  <Fallback>
    <ContainerOpen target="green_bin"/>
    <Sequence>
      <RetryUntilSuccessful num_attempts="3">
        <DetectObject target="green_bin_lid" timeout_ms="1500"/>
      </RetryUntilSuccessful>
      <ApproachAndAlign target="green_bin_lid" tolerance="0.01" timeout_ms="1500"/>
      <SetTCPYaw yaw_deg="90"/>
      <OpenGripper width="0.09" timeout_ms="800"/>
      <ComputeGraspPose target="green_bin_lid" strategy="pull" result_key="lid_grasp"/>
      <Pick grasp_key="lid_grasp" timeout_ms="1500"/>
      <MoveDelta axis="z" dist="0.2" timeout_ms="1500"/>
      <OpenContainer target="green_bin" container_type="bin_lid" timeout_ms="1500"/>
      <Retreat distance="0.1" timeout_ms="1200"/>
      <Wait timeout_ms="500"/>
    </Sequence>
  </Fallback>
</BehaviorTree>
