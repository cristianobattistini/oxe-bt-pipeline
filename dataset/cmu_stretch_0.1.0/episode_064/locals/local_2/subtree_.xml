<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="pot_lid" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="ComputeGraspPose" target="lid_handle" strategy="pinch" result_key="lid_grasp"/>
    <Action ID="ApproachAndAlign" target="lid_handle" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Pick" grasp_key="lid_grasp" timeout_ms="1200"/>
    <Condition ID="ObjectInGripper" target="pot_lid"/>
  </Sequence>
</BehaviorTree>
