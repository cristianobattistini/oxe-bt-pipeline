<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="pot" timeout_ms="1200"/>
    <Action ID="DetectObject" target="pot_lid" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="MoveAbove" target="pot_lid" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="lid_handle" strategy="pinch" result_key="lid_grasp"/>
    <Action ID="ApproachAndAlign" target="lid_handle" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10.0" timeout_ms="800"/>
    <Action ID="Pick" grasp_key="lid_grasp" timeout_ms="1200"/>
    <Condition ID="ObjectInGripper" target="pot_lid"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
