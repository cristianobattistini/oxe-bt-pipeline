<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <Fallback>
      <IsObjectVisible target="drawer_handle"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="drawer_handle" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <MoveTo target="drawer_handle" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="drawer_handle" tolerance="0.005" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <IsGraspStable/>
    <OpenContainer target="drawer_A" container_type="drawer" timeout_ms="1500"/>
    <ContainerOpen target="drawer_A"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
