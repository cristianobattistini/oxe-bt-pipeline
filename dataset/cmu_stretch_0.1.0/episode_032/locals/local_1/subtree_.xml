<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="lid"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="lid" pattern="arc" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="ApproachAndAlign" target="lid_handle" tolerance="0.005" timeout_ms="1500"/>
    <Condition ID="IsAt" target="lid_handle"/>
  </Sequence>
</BehaviorTree>
