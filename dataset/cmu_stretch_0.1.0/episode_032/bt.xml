<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="lid"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="lid" pattern="arc" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="MoveAbove" target="lid" offset_z="0.08" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="lid_handle" strategy="top" result_key="grasp_lid_top"/>
    <Action ID="ApproachAndAlign" target="lid_handle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="800"/>
    <Action ID="Pick" grasp_key="grasp_lid_top" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveDelta" axis="z" dist="0.12" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
