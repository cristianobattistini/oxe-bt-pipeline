<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="drawer_handle"/>
      <Action ID="ScanForTarget" target="drawer_handle" pattern="grid" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="drawer_handle" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="drawer_handle" offset_z="0.05" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Condition ID="IsObjectVisible" target="drawer_handle"/>
  </Sequence>
</BehaviorTree>
