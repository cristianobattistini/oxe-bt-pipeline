<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="dishwasher_handle" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Action ID="MoveTo" target="dishwasher_handle_pregrasp" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="dishwasher_handle" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Condition ID="AtOrientation" yaw_deg="90"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="CloseGripper" force="30" timeout_ms="800"/>
    <Action ID="OpenContainer" target="dishwasher_door" container_type="hinged_door" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="dishwasher_door"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
