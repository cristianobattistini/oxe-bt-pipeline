<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="drawer_handle"/>
      <Action ID="ScanForTarget" target="drawer_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="drawer_handle" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="drawer_handle" strategy="pull" result_key="grasp_drawer"/>
    <Condition ID="PoseAvailable" key="grasp_drawer"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="drawer_handle" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="20" timeout_ms="1500"/>
    <Action ID="MoveDelta" axis="y" dist="0.2" timeout_ms="1500"/>
    <Fallback>
      <Condition ID="ContainerOpen" target="drawer"/>
      <Action ID="OpenContainer" target="drawer" container_type="drawer" timeout_ms="1500"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
