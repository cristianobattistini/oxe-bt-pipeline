<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="dishwasher" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="dishwasher_handle" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <MoveTo target="dishwasher_front" timeout_ms="1500"/>
    <MoveAbove target="dishwasher_handle" offset_z="0.02" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <ComputeGraspPose target="dishwasher_handle" strategy="pull" result_key="handle_grasp"/>
    <PoseAvailable key="handle_grasp"/>
    <ApproachAndAlign target="handle_grasp" tolerance="0.005" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="90"/>
    <OpenContainer target="dishwasher" container_type="hinged_door" timeout_ms="1500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.2" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
