<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="dishwasher_handle"/>
      <Action ID="DetectObject" target="dishwasher_handle" timeout_ms="1200"/>
    </Fallback>
    <Action ID="MoveTo" target="dishwasher_front" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="dishwasher_handle" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="2">
      <Sequence>
        <Action ID="MoveDelta" axis="y" dist="0.1" timeout_ms="800"/>
        <Condition ID="ContainerOpen" target="dishwasher_door"/>
      </Sequence>
    </RetryUntilSuccessful>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
