<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="green_bin" timeout_ms="1200"/>
    <Action ID="DetectObject" target="bin_lid" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="bin_lid" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="bin_lid_front_edge" tolerance="0.01" timeout_ms="1500"/>
    <Condition ID="IsObjectVisible" target="bin_lid"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="400"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Action ID="OpenContainer" target="green_bin" container_type="bin_lid" timeout_ms="1500"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="800"/>
    <Condition ID="ContainerOpen" target="green_bin"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
