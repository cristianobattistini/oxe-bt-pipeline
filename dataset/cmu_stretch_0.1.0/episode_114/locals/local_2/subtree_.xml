<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="bin_lid" timeout_ms="1200"/>
    <Condition ID="IsObjectVisible" target="bin_lid"/>
    <Action ID="ApproachAndAlign" target="bin_lid_front_edge" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="bin_lid"/>
  </Sequence>
</BehaviorTree>
