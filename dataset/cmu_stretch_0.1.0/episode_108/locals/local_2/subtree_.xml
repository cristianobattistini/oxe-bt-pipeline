<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="IsObjectVisible" target="pot_lid"/>
    <Action ID="DetectObject" target="pot_lid" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="pot_lid" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>
