<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="drawer_handle"/>
      <Sequence>
        <ScanForTarget target="drawer_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
        <DetectObject target="drawer_handle" timeout_ms="1200"/>
      </Sequence>
    </Fallback>
    <MoveTo target="drawer_front" timeout_ms="1500"/>
    <ApproachAndAlign target="drawer_handle" tolerance="0.01" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <MoveTo target="handle_grasp_pose" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="1200"/>
    <IsGraspStable/>
    <SetTCPYaw yaw_deg="90"/>
    <MoveDelta axis="x" dist="0.2" timeout_ms="1500"/>
    <ContainerOpen target="drawer"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
