<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Action ID="DetectObject" target="dishwasher_handle" timeout_ms="1200"/>
      <Action ID="ScanForTarget" target="dishwasher_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="dishwasher_handle" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="MoveAbove" target="dishwasher_handle" offset_z="0.02" timeout_ms="800"/>
    <Action ID="MoveTo" target="dishwasher_handle" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="20" timeout_ms="500"/>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <Action ID="MoveDelta" axis="y" dist="0.2" timeout_ms="1200"/>
        <Action ID="Wait" timeout_ms="400"/>
        <Condition ID="ContainerOpen" target="dishwasher"/>
      </Sequence>
    </RetryUntilSuccessful>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
