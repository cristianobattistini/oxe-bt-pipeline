<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="pot_lid" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <MoveAbove target="pot_lid" offset_z="0.05" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="pot_lid" tolerance="0.005" timeout_ms="1500"/>
    <ComputeGraspPose target="pot_lid" strategy="pinch" result_key="lid_grasp"/>
    <Pick grasp_key="lid_grasp" timeout_ms="1500"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1200"/>
    <Retreat distance="0.2" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
