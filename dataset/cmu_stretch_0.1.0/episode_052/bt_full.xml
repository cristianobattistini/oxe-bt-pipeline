<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="green_bin_lid" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <MoveAbove target="green_bin_lid" offset_z="0.1" timeout_ms="1200"/>
    <ApproachAndAlign target="green_bin_lid_handle" tolerance="0.005" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <OpenContainer target="green_bin_lid" container_type="bin_lid" timeout_ms="1500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
