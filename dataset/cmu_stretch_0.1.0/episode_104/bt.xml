<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_bin_lid"/>
      <Action ID="ScanForTarget" target="green_bin_lid" pattern="arc" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="green_bin_lid" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="green_bin_lid" offset_z="0.10" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="green_bin_lid_edge" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="green_bin_lid_edge" strategy="pinch" result_key="lid_grasp"/>
    <Condition ID="PoseAvailable" key="lid_grasp"/>
    <Action ID="Pick" grasp_key="lid_grasp" timeout_ms="1200"/>
    <Action ID="MoveDelta" axis="z" dist="0.10" timeout_ms="1200"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
