<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="dishwasher_handle"/>
      <Action ID="ScanForTarget" target="dishwasher_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="MoveTo" target="dishwasher" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="dishwasher_handle" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Condition ID="AtOrientation" yaw_deg="90"/>
  </Sequence>
</BehaviorTree>
