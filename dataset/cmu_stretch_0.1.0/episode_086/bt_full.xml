<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="pot_lid" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <IsObjectVisible target="pot_lid"/>
    <MoveAbove target="pot" offset_z="0.12" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ComputeGraspPose target="pot_lid_handle" strategy="top" result_key="grasp_lid_top"/>
    <PoseAvailable key="grasp_lid_top"/>
    <SetTCPYaw yaw_deg="90"/>
    <AtOrientation yaw_deg="90"/>
    <ApproachAndAlign target="pot_lid_handle" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="800"/>
    <CloseGripper force="20" timeout_ms="500"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <ObjectInGripper target="pot_lid"/>
  </Sequence>
</BehaviorTree>
