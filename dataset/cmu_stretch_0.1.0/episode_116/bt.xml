<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="drawer_handle" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <MoveTo target="drawer_front" timeout_ms="1500"/>
    <ApproachAndAlign target="drawer_handle" tolerance="0.005" timeout_ms="1500"/>
    <IsObjectVisible target="drawer_handle"/>
    <CloseGripper force="20" timeout_ms="1200"/>
    <OpenContainer target="drawer" container_type="drawer" timeout_ms="2000"/>
    <MoveDelta axis="x" dist="0.2" timeout_ms="1200"/>
    <ContainerOpen target="drawer"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
