<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="lid" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="ApproachAndAlign" target="lid_handle" tolerance="0.01" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Condition ID="IsAt" target="lid_handle"/>
  </Sequence>
</BehaviorTree>
