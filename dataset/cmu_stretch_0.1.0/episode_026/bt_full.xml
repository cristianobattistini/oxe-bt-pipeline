<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="pot_lid" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="pot_lid" timeout_ms="800"/>
    <MoveAbove target="pot_lid" offset_z="0.05" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ComputeGraspPose target="pot_lid" strategy="top" result_key="lid_grasp"/>
    <ApproachAndAlign target="pot_lid" tolerance="0.01" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="5.0" timeout_ms="1200"/>
    <Pick grasp_key="lid_grasp" timeout_ms="1500"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
