<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_bin"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="green_bin" pattern="arc" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="bin_lid" timeout_ms="800"/>
    <Action ID="MoveAbove" target="bin_lid" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="bin_lid" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="OpenContainer" target="green_bin" container_type="bin_lid" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="green_bin"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
