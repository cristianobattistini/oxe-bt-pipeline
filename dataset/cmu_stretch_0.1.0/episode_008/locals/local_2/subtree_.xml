<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_bin"/>
      <Action ID="ScanForTarget" target="green_bin" pattern="arc" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="green_bin" timeout_ms="800"/>
    <Action ID="MoveAbove" target="green_bin" offset_z="0.10" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="ApproachAndAlign" target="bin_lid" tolerance="0.01" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Condition ID="IsAt" target="bin_lid"/>
  </Sequence>
</BehaviorTree>
