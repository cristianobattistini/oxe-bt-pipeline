<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ScanForTarget target="pot_lid" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    <DetectObject target="lid_handle" timeout_ms="800"/>
    <MoveAbove target="pot" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="lid_handle" tolerance="0.01" timeout_ms="1500"/>
    <ComputeGraspPose target="lid_handle" strategy="top" result_key="lid_grasp"/>
    <Pick grasp_key="lid_grasp" timeout_ms="1500"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1200"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
