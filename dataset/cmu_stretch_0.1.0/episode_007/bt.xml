<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="2">
      <ScanForTarget target="green_bin_lid" pattern="line" max_attempts="3" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <MoveAbove target="green_bin_lid" offset_z="0.08" timeout_ms="1500"/>
    <ApproachAndAlign target="green_bin_lid_edge" tolerance="0.01" timeout_ms="1500"/>
    <IsObjectVisible target="green_bin_lid_edge"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <OpenContainer target="green_bin" container_type="bin_lid" timeout_ms="1500"/>
    <ContainerOpen target="green_bin"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
