<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot_lid" timeout_ms="800"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <MoveAbove target="pot_lid" offset_z="0.1" timeout_ms="800"/>
    <ApproachAndAlign target="pot_lid" tolerance="0.01" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="800"/>
    <CloseGripper force="20" timeout_ms="500"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
