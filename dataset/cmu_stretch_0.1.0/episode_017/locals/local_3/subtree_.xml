<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="PoseAvailable" key="grasp_handle"/>
      <Sequence>
        <Fallback>
          <Condition ID="IsObjectVisible" target="drawer_handle"/>
          <RetryUntilSuccessful num_attempts="3">
            <Action ID="DetectObject" target="drawer_handle" timeout_ms="1500"/>
          </RetryUntilSuccessful>
        </Fallback>
        <Action ID="ComputeGraspPose" target="drawer_handle" strategy="pull" result_key="grasp_handle"/>
      </Sequence>
    </Fallback>
    <Condition ID="PoseAvailable" key="grasp_handle"/>
  </Sequence>
</BehaviorTree>
