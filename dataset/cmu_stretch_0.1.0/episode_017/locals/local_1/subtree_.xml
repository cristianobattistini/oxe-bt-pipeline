<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="PoseAvailable" key="grasp_handle"/>
    <Action ID="ApproachAndAlign" target="grasp_handle" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>
