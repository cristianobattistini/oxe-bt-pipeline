<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="drawer_handle"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="DetectObject" target="drawer_handle" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="ComputeGraspPose" target="drawer_handle" strategy="pull" result_key="grasp_handle"/>
    <Condition ID="PoseAvailable" key="grasp_handle"/>
    <Action ID="ApproachAndAlign" target="grasp_handle" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Action ID="OpenContainer" target="drawer_A" container_type="drawer" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="drawer_A"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
