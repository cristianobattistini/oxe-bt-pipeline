<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot" timeout_ms="1200"/>
    <DetectObject target="lid" timeout_ms="1200"/>
    <MoveAbove target="pot" offset_z="0.05" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ComputeGraspPose target="lid" strategy="top" result_key="lid_grasp"/>
    <ApproachAndAlign target="lid" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="lid_grasp" timeout_ms="1200"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="800"/>
    <Retreat distance="0.2" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
