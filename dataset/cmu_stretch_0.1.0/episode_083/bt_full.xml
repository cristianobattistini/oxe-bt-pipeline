<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_bin"/>
      <Sequence>
        <Action ID="ScanForTarget" target="green_bin" pattern="raster" max_attempts="3" timeout_ms="1500"/>
        <Condition ID="IsObjectVisible" target="green_bin"/>
      </Sequence>
    </Fallback>
    <Action ID="MoveAbove" target="green_bin_lid" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="green_bin_lid" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="green_bin_lid" strategy="pinch" result_key="lid_grasp"/>
    <Action ID="Pick" grasp_key="lid_grasp" timeout_ms="1200"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="1200"/>
    <Action ID="OpenContainer" target="green_bin" container_type="bin_lid" timeout_ms="1200"/>
    <Condition ID="ContainerOpen" target="green_bin"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
