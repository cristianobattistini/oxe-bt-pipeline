<BehaviorTree ID="MainTree">
  <Fallback>
    <Condition ID="ContainerOpen" target="green_bin"/>
    <Sequence>
      <Action ID="DetectObject" target="green_bin" timeout_ms="800"/>
      <Condition ID="IsObjectVisible" target="green_bin"/>
      <Action ID="MoveAbove" target="green_bin_lid" offset_z="0.02" timeout_ms="1200"/>
      <Action ID="ApproachAndAlign" target="green_bin_lid_edge" tolerance="0.01" timeout_ms="1200"/>
      <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
      <Action ID="ComputeGraspPose" target="green_bin_lid_edge" strategy="pinch" result_key="lid_grasp"/>
      <Action ID="Pick" grasp_key="lid_grasp" timeout_ms="1500"/>
      <Action ID="OpenContainer" target="green_bin" container_type="bin_lid" timeout_ms="1500"/>
      <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
      <Action ID="Wait" timeout_ms="400"/>
    </Sequence>
  </Fallback>
</BehaviorTree>
