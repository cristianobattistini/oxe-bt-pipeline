<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="lid"/>
      <Action ID="ScanForTarget" target="lid" pattern="grid" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="MoveAbove" target="lid" offset_z="0.06" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="lid_handle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
