<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="drawer_handle" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    <DetectObject target="drawer_handle" timeout_ms="800"/>
    <MoveTo target="pregrasp_drawer" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <AtOrientation yaw_deg="90"/>
    <ApproachAndAlign target="drawer_handle" tolerance="0.01" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <ComputeGraspPose target="drawer_handle" strategy="pull" result_key="grasp_handle"/>
    <PoseAvailable key="grasp_handle"/>
    <Pick grasp_key="grasp_handle" timeout_ms="1500"/>
    <OpenContainer target="drawer" container_type="drawer" timeout_ms="1500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <OpenGripper width="0.08" timeout_ms="400"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
