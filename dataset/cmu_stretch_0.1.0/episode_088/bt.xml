<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <DetectObject target="lid" timeout_ms="1200"/>
    <MoveAbove target="pot" offset_z="0.08" timeout_ms="1500"/>
    <ComputeGraspPose target="lid" strategy="top" result_key="lid_grasp"/>
    <ApproachAndAlign target="lid" tolerance="0.01" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="1200"/>
    <CloseGripper force="10" timeout_ms="1200"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.10" timeout_ms="1200"/>
    <Retreat distance="0.10" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
