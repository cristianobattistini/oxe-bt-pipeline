<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="door_handle"/>
      <Sequence>
        <ScanForTarget target="door_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
        <DetectObject target="door_handle" timeout_ms="1200"/>
      </Sequence>
    </Fallback>
    <MoveTo target="door_handle" timeout_ms="1200"/>
    <ApproachAndAlign target="door_handle" tolerance="0.005" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <ObjectInGripper target="door_handle"/>
  </Sequence>
</BehaviorTree>
