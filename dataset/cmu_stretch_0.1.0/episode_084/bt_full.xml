<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="pot" pattern="arc" max_attempts="3" timeout_ms="1200"/>
    <DetectObject target="lid" timeout_ms="800"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <ComputeGraspPose target="lid_handle" strategy="pinch" result_key="grasp_lid"/>
    <PoseAvailable key="grasp_lid"/>
    <MoveAbove target="lid_handle" offset_z="0.05" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="lid_handle" tolerance="0.01" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="800"/>
    <CloseGripper force="20" timeout_ms="500"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1200"/>
    <ContainerOpen target="pot"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
