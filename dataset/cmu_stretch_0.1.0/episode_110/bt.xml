<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="drawer_handle" pattern="arc" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="drawer_handle" timeout_ms="800"/>
    <IsObjectVisible target="drawer_handle"/>
    <MoveTo target="pregrasp_drawer" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <OpenGripper width="0.08" timeout_ms="400"/>
    <ApproachAndAlign target="drawer_handle" tolerance="0.005" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <OpenContainer target="drawer" container_type="drawer" timeout_ms="1500"/>
    <ContainerOpen target="drawer"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <OpenGripper width="0.08" timeout_ms="400"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
