<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="dishwasher_handle"/>
      <Sequence>
        <Action ID="ScanForTarget" target="dishwasher_handle" pattern="line" max_attempts="3" timeout_ms="1500"/>
        <Condition ID="IsObjectVisible" target="dishwasher_handle"/>
      </Sequence>
    </Fallback>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="dishwasher_handle" tolerance="0.005" timeout_ms="1500"/>
    <Condition ID="IsAt" target="dishwasher_handle"/>
  </Sequence>
</BehaviorTree>
