<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="green_bin" timeout_ms="1500"/>
    <Action ID="DetectObject" target="bin_lid" timeout_ms="1500"/>
    <Action ID="MoveAbove" target="bin_lid" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="bin_lid" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Fallback>
      <Condition ID="ContainerOpen" target="green_bin"/>
      <Sequence>
        <Action ID="OpenContainer" target="green_bin" container_type="bin_lid" timeout_ms="1500"/>
        <Action ID="Wait" timeout_ms="400"/>
        <Condition ID="ContainerOpen" target="green_bin"/>
      </Sequence>
    </Fallback>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
