<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="pot_lid" timeout_ms="1200"/>
    <IsObjectVisible target="pot_lid"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <MoveAbove target="pot_lid" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="lid_handle" tolerance="0.01" timeout_ms="1500"/>
    <CloseGripper force="20" timeout_ms="1200"/>
    <OpenContainer target="pot_lid" container_type="lid" timeout_ms="1500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
