<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="lid" timeout_ms="1500"/>
    <IsObjectVisible target="lid"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <MoveAbove target="pot" offset_z="0.05" timeout_ms="1500"/>
    <ComputeGraspPose target="lid_handle" strategy="pinch" result_key="lid_grasp"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="lid_handle" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10.0" timeout_ms="1500"/>
    <Pick grasp_key="lid_grasp" timeout_ms="1500"/>
    <MoveDelta axis="z" dist="0.2" timeout_ms="1500"/>
    <Retreat distance="0.2" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
