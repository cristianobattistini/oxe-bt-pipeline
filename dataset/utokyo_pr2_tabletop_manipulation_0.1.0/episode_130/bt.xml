<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Sequence>
        <Action ID="ScanForTarget" target="grape" pattern="raster" max_attempts="3" timeout_ms="1200"/>
        <Condition ID="IsObjectVisible" target="grape"/>
      </Sequence>
    </Fallback>
    <Action ID="ComputeGraspPose" target="grape" strategy="pinch" result_key="grasp_grape"/>
    <Action ID="ApproachAndAlign" target="grasp_grape" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="MoveTo" target="plate_center" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
