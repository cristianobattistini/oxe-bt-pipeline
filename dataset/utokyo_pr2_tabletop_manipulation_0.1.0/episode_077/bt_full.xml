<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="grape"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="grape" pattern="raster" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <DetectObject target="grape" timeout_ms="1200"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_grape"/>
    <PoseAvailable key="grasp_grape"/>
    <MoveAbove target="grape" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="grape" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="grasp_grape" timeout_ms="1200"/>
    <IsGraspStable/>
    <MoveAbove target="plate_center" offset_z="0.02" timeout_ms="1200"/>
    <PlaceAt pose_key="plate_center" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
