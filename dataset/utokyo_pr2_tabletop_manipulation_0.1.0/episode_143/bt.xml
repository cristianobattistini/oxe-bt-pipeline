<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="bread"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="bread" pattern="raster" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <DetectObject target="bread" timeout_ms="1200"/>
    <MoveAbove target="bread" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="bread" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ComputeGraspPose target="bread" strategy="pinch" result_key="grasp_bread"/>
    <Pick grasp_key="grasp_bread" timeout_ms="1500"/>
    <ObjectInGripper target="bread"/>
    <MoveAbove target="plate" offset_z="0.02" timeout_ms="1200"/>
    <PlaceAt pose_key="plate_center" yaw_deg="90" press_force="10" timeout_ms="1500"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
