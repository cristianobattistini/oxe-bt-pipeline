<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="1200"/>
    <MoveAbove target="cloth" offset_z="0.03" timeout_ms="1500"/>
    <ApproachAndAlign target="cloth" tolerance="0.01" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="2.0" timeout_ms="1200"/>
    <Repeat num_cycles="2">
      <Push target="cloth_edge" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    </Repeat>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
