<BehaviorTree ID="MainTree">
  <Sequence>
    <IsObjectVisible target="cloth"/>
    <ApproachAndAlign target="cloth" tolerance="0.01" timeout_ms="1200"/>
    <ContactDetected force_threshold="2.0"/>
    <RetryUntilSuccessful num_attempts="2">
      <Push target="cloth_edge" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <ContactDetected force_threshold="2.0"/>
  </Sequence>
</BehaviorTree>