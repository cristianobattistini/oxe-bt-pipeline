<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cloth"/>
      <Action ID="ScanForTarget" target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="cloth" timeout_ms="1200"/>
    <Fallback>
      <Condition ID="AtOrientation" yaw_deg="90"/>
      <Action ID="SetTCPYaw" yaw_deg="90"/>
    </Fallback>
    <Action ID="ApproachAndAlign" target="cloth" tolerance="0.005" timeout_ms="1200"/>
    <Fallback>
      <Condition ID="ContactDetected" force_threshold="5.0"/>
      <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="5.0" timeout_ms="800"/>
    </Fallback>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="Push" target="cloth_edge" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Condition ID="IsObjectVisible" target="cloth"/>
  </Sequence>
</BehaviorTree>