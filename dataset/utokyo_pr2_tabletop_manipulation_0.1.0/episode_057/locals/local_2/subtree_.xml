<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="2">
      <DetectObject target="cloth" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <MoveAbove target="cloth" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <Push target="cloth" distance="0.1" direction_deg="225" timeout_ms="1500"/>
    <MoveDelta axis="z" dist="0.05" timeout_ms="1200"/>
    <RetryUntilSuccessful num_attempts="2">
      <DetectObject target="cloth_folded" timeout_ms="800"/>
    </RetryUntilSuccessful>
  </Sequence>
</BehaviorTree>