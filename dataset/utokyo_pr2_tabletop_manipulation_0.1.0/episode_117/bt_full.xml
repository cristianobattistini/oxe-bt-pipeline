<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <DetectObject target="bread" timeout_ms="800"/>
      <Sequence>
        <ScanForTarget target="bread" pattern="raster" max_attempts="3" timeout_ms="1200"/>
        <DetectObject target="bread" timeout_ms="1200"/>
      </Sequence>
    </Fallback>
    <SetTCPYaw yaw_deg="90"/>
    <MoveAbove target="bread" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="bread" tolerance="0.01" timeout_ms="1200"/>
    <ComputeGraspPose target="bread" strategy="pinch" result_key="bread_grasp"/>
    <PoseAvailable key="bread_grasp"/>
    <RetryUntilSuccessful num_attempts="2">
      <Pick grasp_key="bread_grasp" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <IsGraspStable/>
    <MoveAbove target="bowl" offset_z="0.08" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.04" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
