<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Action ID="ScanForTarget" target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="grape" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="grape" strategy="pinch" result_key="grasp_grape"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="MoveAbove" target="grape" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="grape" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Pick" grasp_key="grasp_grape" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="plate" offset_z="0.02" timeout_ms="1500"/>
    <Action ID="PlaceAt" pose_key="plate_center" yaw_deg="0" press_force="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
