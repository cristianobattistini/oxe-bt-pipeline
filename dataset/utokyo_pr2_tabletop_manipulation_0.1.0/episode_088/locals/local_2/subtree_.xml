<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="grape"/>
    <Action ID="MoveTo" target="plate" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="plate" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="PlaceAt" pose_key="plate_center" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Inverter>
      <Condition ID="ObjectInGripper" target="grape"/>
    </Inverter>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>