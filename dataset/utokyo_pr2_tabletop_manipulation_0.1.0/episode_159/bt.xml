<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="2">
      <DetectObject target="cloth" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <MoveAbove target="cloth" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="cloth" tolerance="0.01" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="3.0" timeout_ms="800"/>
    <ContactDetected force_threshold="3.0"/>
    <Repeat num_cycles="2">
      <Push target="cloth" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    </Repeat>
    <Retreat distance="0.1" timeout_ms="800"/>
    <MoveAbove target="cloth" offset_z="0.08" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
