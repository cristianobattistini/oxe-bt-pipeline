<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="IsObjectVisible" target="cloth"/>
    <Action ID="DetectObject" target="cloth" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cloth" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="cloth_edge" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="cloth_edge" strategy="pinch" result_key="edge_grasp"/>
    <Action ID="Pick" grasp_key="edge_grasp" timeout_ms="1200"/>
    <Action ID="MoveDelta" axis="z" dist="0.05" timeout_ms="800"/>
    <Action ID="MoveDelta" axis="y" dist="0.1" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
