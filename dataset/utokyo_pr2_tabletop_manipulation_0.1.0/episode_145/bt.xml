<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="bread" timeout_ms="800"/>
    <Action ID="DetectObject" target="plate" timeout_ms="800"/>
    <Action ID="MoveAbove" target="bread" offset_z="0.05" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.005" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="ComputeGraspPose" target="bread" strategy="pinch" result_key="bread_grasp"/>
    <Action ID="Pick" grasp_key="bread_grasp" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="plate" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.04" force_threshold="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="400"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
