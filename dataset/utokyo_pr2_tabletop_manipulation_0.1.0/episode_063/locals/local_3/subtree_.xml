<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Action ID="ScanForTarget" target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="grape" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="grape" strategy="pinch" result_key="grasp_pose"/>
    <Condition ID="PoseAvailable" key="grasp_pose"/>
  </Sequence>
</BehaviorTree>