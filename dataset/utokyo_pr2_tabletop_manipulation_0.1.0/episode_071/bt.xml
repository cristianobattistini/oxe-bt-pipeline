<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Sequence>
        <Action ID="ScanForTarget" target="grape" pattern="raster" max_attempts="3" timeout_ms="1200"/>
        <Condition ID="IsObjectVisible" target="grape"/>
      </Sequence>
    </Fallback>
    <Action ID="MoveAbove" target="grape" offset_z="0.05" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="grape" strategy="pinch" result_key="grasp_grape"/>
    <Condition ID="PoseAvailable" key="grasp_grape"/>
    <Action ID="ApproachAndAlign" target="grape" tolerance="0.005" timeout_ms="800"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="800"/>
    <Action ID="CloseGripper" force="10" timeout_ms="500"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="grape"/>
  </Sequence>
</BehaviorTree>
