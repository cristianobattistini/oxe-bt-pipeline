<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cloth"/>
      <Action ID="ScanForTarget" target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="MoveAbove" target="cloth" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="cloth" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="800"/>
    <Repeat num_cycles="2">
      <Action ID="Push" target="cloth_edge" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    </Repeat>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
