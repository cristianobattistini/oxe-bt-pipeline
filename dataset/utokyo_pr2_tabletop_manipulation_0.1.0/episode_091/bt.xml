<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.06" timeout_ms="800"/>
    <Fallback>
      <DetectObject target="grape" timeout_ms="1200"/>
      <ScanForTarget target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <MoveAbove target="grape" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="grape" tolerance="0.0" timeout_ms="1500"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_pose_grape"/>
    <Pick grasp_key="grasp_pose_grape" timeout_ms="1500"/>
    <ObjectInGripper target="grape"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
