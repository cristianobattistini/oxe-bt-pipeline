<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="grape" pattern="raster" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <DetectObject target="grape" timeout_ms="800"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_grape"/>
    <MoveAbove target="grape" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="grasp_grape" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <CloseGripper force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
