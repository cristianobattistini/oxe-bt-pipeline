<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <Condition ID="IsObjectVisible" target="grape"/>
        <Action ID="ScanForTarget" target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
        <Action ID="DetectObject" target="grape" timeout_ms="1200"/>
      </Fallback>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="grape" offset_z="0.02" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="grape" strategy="pinch" result_key="grasp_grape"/>
    <Condition ID="PoseAvailable" key="grasp_grape"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="grasp_grape" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Action ID="Pick" grasp_key="grasp_grape" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Condition ID="ObjectInGripper" target="grape"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
