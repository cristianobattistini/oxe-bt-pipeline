<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="bread"/>
    <Action ID="DetectObject" target="plate" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="plate" offset_z="0.02" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="plate" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
