<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="plate" timeout_ms="1200"/>
    <Decorator ID="RetryUntilSuccessful" num_attempts="2">
      <Action ID="ApproachAndAlign" target="plate" tolerance="0.005" timeout_ms="1200"/>
    </Decorator>
    <Action ID="Wait" timeout_ms="400"/>
    <Condition ID="IsAt" target="plate"/>
  </Sequence>
</BehaviorTree>