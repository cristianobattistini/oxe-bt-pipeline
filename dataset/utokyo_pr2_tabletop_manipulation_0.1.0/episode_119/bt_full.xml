<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="grape"/>
      <Sequence>
        <ScanForTarget target="grape" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
        <DetectObject target="grape" timeout_ms="1200"/>
      </Sequence>
    </Fallback>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <MoveAbove target="grape" offset_z="0.02" timeout_ms="1200"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_grape"/>
    <PoseAvailable key="grasp_grape"/>
    <ApproachAndAlign target="grape" tolerance="0.005" timeout_ms="1500"/>
    <Pick grasp_key="grasp_grape" timeout_ms="1500"/>
    <ObjectInGripper target="grape"/>
    <MoveAbove target="plate" offset_z="0.02" timeout_ms="1200"/>
    <PlaceAt pose_key="plate_center" yaw_deg="0" press_force="10.0" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
