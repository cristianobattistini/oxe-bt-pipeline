<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="bread" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="bread" offset_z="0.08" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="bread" strategy="pinch" result_key="bread_grasp"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="30" timeout_ms="800"/>
    <Action ID="Pick" grasp_key="bread_grasp" timeout_ms="1200"/>
    <Condition ID="ObjectInGripper" target="bread"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="800"/>
    <Action ID="MoveAbove" target="plate_center" offset_z="0.12" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
