<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="cloth" timeout_ms="1200"/>
    <MoveAbove target="cloth" offset_z="0.05" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="90"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <Repeat num_cycles="2">
      <Sequence>
        <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1200"/>
        <Push target="cloth" distance="0.1" direction_deg="180" timeout_ms="1200"/>
        <Wait timeout_ms="400"/>
        <Retreat distance="0.05" timeout_ms="800"/>
      </Sequence>
    </Repeat>
    <MoveAbove target="cloth" offset_z="0.10" timeout_ms="1500"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
