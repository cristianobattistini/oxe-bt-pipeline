<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="grape"/>
      <Sequence>
        <ScanForTarget target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
        <DetectObject target="grape" timeout_ms="1200"/>
      </Sequence>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="plate"/>
      <DetectObject target="plate" timeout_ms="1200"/>
    </Fallback>
    <OpenGripper width="0.06" timeout_ms="500"/>
    <MoveAbove target="grape" offset_z="0.02" timeout_ms="1500"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grape_grasp"/>
    <Pick grasp_key="grape_grasp" timeout_ms="1200"/>
    <ObjectInGripper target="grape"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1200"/>
    <MoveAbove target="plate" offset_z="0.02" timeout_ms="1500"/>
    <PlaceAt pose_key="plate_center" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
