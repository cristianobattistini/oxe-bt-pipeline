<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Fallback>
      <IsObjectVisible target="grape"/>
      <Sequence>
        <ScanForTarget target="grape" pattern="raster" max_attempts="3" timeout_ms="1200"/>
        <DetectObject target="grape" timeout_ms="800"/>
      </Sequence>
    </Fallback>
    <MoveAbove target="grape" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="grape" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <MoveAbove target="plate" offset_z="0.02" timeout_ms="1200"/>
    <PlaceAt pose_key="plate_center" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
