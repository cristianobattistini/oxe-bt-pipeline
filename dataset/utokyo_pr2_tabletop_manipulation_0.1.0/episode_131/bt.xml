<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="plate" timeout_ms="800"/>
    </RetryUntilSuccessful>

    <Fallback>
      <Condition ID="ObjectInGripper" target="bread"/>
      <Sequence>
        <RetryUntilSuccessful num_attempts="3">
          <Action ID="DetectObject" target="bread" timeout_ms="800"/>
        </RetryUntilSuccessful>
        <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
        <Action ID="MoveAbove" target="bread" offset_z="0.05" timeout_ms="1200"/>
        <Action ID="ApproachAndAlign" target="bread" tolerance="0.005" timeout_ms="1200"/>
        <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10.0" timeout_ms="1200"/>
        <Action ID="CloseGripper" force="10" timeout_ms="800"/>
        <Condition ID="ObjectInGripper" target="bread"/>
      </Sequence>
    </Fallback>

    <Action ID="MoveAbove" target="plate" offset_z="0.06" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="plate" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.04" force_threshold="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
