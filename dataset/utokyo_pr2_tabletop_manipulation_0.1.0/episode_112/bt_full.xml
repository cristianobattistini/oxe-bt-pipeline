<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="grape"/>
      <Sequence>
        <ScanForTarget target="grape" pattern="raster" max_attempts="3" timeout_ms="1200"/>
        <DetectObject target="grape" timeout_ms="800"/>
      </Sequence>
    </Fallback>
    <MoveAbove target="grape" offset_z="0.06" timeout_ms="1200"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_grape"/>
    <PoseAvailable key="grasp_grape"/>
    <ApproachAndAlign target="grape" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <RetryUntilSuccessful num_attempts="2">
      <Pick grasp_key="grasp_grape" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <ObjectInGripper target="grape"/>
  </Sequence>
</BehaviorTree>
