<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bread"/>
      <Action ID="ScanForTarget" target="bread" pattern="grid" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="ComputeGraspPose" target="bread" strategy="pinch" result_key="bread_grasp"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="bread_grasp" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>