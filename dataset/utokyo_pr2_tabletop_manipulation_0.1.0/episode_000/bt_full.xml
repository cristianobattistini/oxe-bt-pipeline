<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="800"/>
    <IsObjectVisible target="cloth"/>
    <MoveAbove target="cloth" offset_z="0.02" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="cloth" tolerance="0.01" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <Push target="cloth_edge" distance="0.2" direction_deg="225" timeout_ms="1500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>

