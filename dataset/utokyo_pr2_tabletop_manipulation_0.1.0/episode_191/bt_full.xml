<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="bread"/>
      <ScanForTarget target="bread" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      <DetectObject target="bread" timeout_ms="1200"/>
    </Fallback>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <MoveAbove target="bread" offset_z="0.05" timeout_ms="1200"/>
    <ComputeGraspPose target="bread" strategy="top" result_key="bread_grasp"/>
    <ApproachAndAlign target="bread" tolerance="0.01" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <Pick grasp_key="bread_grasp" timeout_ms="1500"/>
    <IsGraspStable/>
    <ObjectInGripper target="bread"/>
    <MoveAbove target="plate" offset_z="0.08" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
