<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="cloth" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <MoveAbove target="cloth" offset_z="0.08" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="5.0" timeout_ms="1500"/>
    <ApproachAndAlign target="cloth_edge" tolerance="0.005" timeout_ms="1200"/>
    <Push target="cloth_edge" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    <MoveAbove target="cloth" offset_z="0.10" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
