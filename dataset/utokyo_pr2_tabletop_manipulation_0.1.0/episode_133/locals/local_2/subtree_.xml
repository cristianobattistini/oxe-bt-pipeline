<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="bread"/>
      <DetectObject target="bread" timeout_ms="1200"/>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="plate"/>
      <DetectObject target="plate" timeout_ms="1200"/>
    </Fallback>
    <ApproachAndAlign target="bread" tolerance="0.01" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <Push target="bread" distance="0.1" direction_deg="90" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>