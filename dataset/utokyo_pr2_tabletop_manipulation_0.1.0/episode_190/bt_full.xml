<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="cloth" timeout_ms="1200"/>
    <ComputeGraspPose target="cloth_edge" strategy="pinch" result_key="grasp_edge"/>
    <MoveAbove target="grasp_edge" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="grasp_edge" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="5.0" timeout_ms="1200"/>
    <CloseGripper force="10" timeout_ms="800"/>
    <IsGraspStable/>
    <Pick grasp_key="grasp_edge" timeout_ms="1200"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1200"/>
    <SetBlackboard key="fold_target" value="cloth_midline_pose"/>
    <MoveTo target="fold_target" timeout_ms="1500"/>
    <PlaceAt pose_key="fold_target" yaw_deg="0" press_force="10.0"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
