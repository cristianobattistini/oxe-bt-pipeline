<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="cloth" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <MoveAbove target="cloth" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.01" force_threshold="10" timeout_ms="1200"/>
    <Repeat num_cycles="2">
      <Push target="cloth" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    </Repeat>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
