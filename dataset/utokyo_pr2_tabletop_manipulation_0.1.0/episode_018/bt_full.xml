<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bread"/>
      <Action ID="ScanForTarget" target="bread" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="MoveAbove" target="bread" offset_z="0.05" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="bread" strategy="pinch" result_key="bread_grasp"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Pick" grasp_key="bread_grasp" timeout_ms="1200"/>
    <Condition ID="ObjectInGripper" target="bread"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
