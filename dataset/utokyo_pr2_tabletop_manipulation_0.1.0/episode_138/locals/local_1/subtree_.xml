<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <Condition ID="IsObjectVisible" target="cloth"/>
        <Action ID="ApproachAndAlign" target="cloth_edge" tolerance="0.005" timeout_ms="1200"/>
        <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="800"/>
        <Condition ID="ContactDetected" force_threshold="10"/>
      </Sequence>
    </RetryUntilSuccessful>
  </Sequence>
</BehaviorTree>