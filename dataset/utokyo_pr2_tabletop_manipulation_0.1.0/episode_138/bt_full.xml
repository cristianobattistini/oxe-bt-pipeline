<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="cloth" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="cloth" offset_z="0.10" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="cloth_edge" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="800"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Action ID="Push" target="cloth" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
