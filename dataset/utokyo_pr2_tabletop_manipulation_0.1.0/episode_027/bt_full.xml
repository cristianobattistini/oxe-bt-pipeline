<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="cloth" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <MoveAbove target="cloth" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="cloth" tolerance="0.01" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <ComputeGraspPose target="cloth" strategy="pinch" result_key="grasp_cloth_edge"/>
    <Pick grasp_key="grasp_cloth_edge" timeout_ms="1200"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.05" timeout_ms="1200"/>
    <MoveDelta axis="x" dist="0.1" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <Push target="cloth" distance="0.05" direction_deg="180" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
