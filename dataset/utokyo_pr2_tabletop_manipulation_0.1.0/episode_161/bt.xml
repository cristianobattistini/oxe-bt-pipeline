<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Fallback>
      <IsObjectVisible target="cloth"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <MoveAbove target="cloth" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <CloseGripper force="10" timeout_ms="800"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <PlaceAt pose_key="fold_midpoint" yaw_deg="90" press_force="10" timeout_ms="1500"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <Push target="cloth" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
