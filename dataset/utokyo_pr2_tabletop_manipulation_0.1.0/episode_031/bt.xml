<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Action ID="ScanForTarget" target="grape" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="grape" timeout_ms="800"/>
    <Action ID="MoveAbove" target="grape" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="grape" strategy="pinch" result_key="grasp_grape"/>
    <Action ID="ApproachAndAlign" target="grape" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5.0" timeout_ms="800"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="grape"/>
    <Action ID="Pick" grasp_key="grasp_grape" timeout_ms="800"/>
    <Action ID="MoveAbove" target="plate" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5.0" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
