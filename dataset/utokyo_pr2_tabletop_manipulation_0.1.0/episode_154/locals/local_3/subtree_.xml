<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bread"/>
      <Action ID="ScanForTarget" target="bread" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="bread" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Condition ID="AtOrientation" yaw_deg="90"/>
  </Sequence>
</BehaviorTree>