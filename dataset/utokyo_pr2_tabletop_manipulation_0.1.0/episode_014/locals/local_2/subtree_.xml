<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="cloth" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Condition ID="IsObjectVisible" target="cloth"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="cloth_edge" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="5.0" timeout_ms="1200"/>
    <Action ID="Push" target="cloth" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
    <Action ID="MoveAbove" target="cloth" offset_z="0.05" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>