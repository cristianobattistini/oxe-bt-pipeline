<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cloth"/>
      <Action ID="ScanForTarget" target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="cloth" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="cloth_edge" strategy="pinch" result_key="cloth_grasp"/>
    <Action ID="MoveAbove" target="cloth_grasp" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="cloth_grasp" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="Pick" grasp_key="cloth_grasp" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveDelta" axis="z" dist="0.05" timeout_ms="1200"/>
    <Action ID="MoveTo" target="fold_anchor" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <Action ID="Push" target="cloth_edge" distance="0.2" direction_deg="180" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
