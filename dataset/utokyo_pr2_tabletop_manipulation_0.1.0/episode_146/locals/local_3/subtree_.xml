<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="PoseAvailable" key="cloth_grasp"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="ApproachAndAlign" target="cloth_grasp" tolerance="0.01" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Condition ID="IsAt" target="cloth_grasp"/>
    <Condition ID="AtOrientation" yaw_deg="90"/>
  </Sequence>
</BehaviorTree>