<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <DetectObject target="bread" timeout_ms="1200"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="bread" pattern="raster" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <MoveAbove target="bread" offset_z="0.06" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="bread" tolerance="0.005" timeout_ms="1500"/>
    <ComputeGraspPose target="bread" strategy="pinch" result_key="bread_grasp"/>
    <PoseAvailable key="bread_grasp"/>
    <Pick grasp_key="bread_grasp" timeout_ms="1200"/>
    <IsGraspStable/>
    <Fallback>
      <DetectObject target="plate" timeout_ms="1200"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="plate" pattern="line" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <MoveAbove target="plate" offset_z="0.06" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10.0" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
