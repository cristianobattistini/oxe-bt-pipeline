<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="cloth"/>
      <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <MoveAbove target="cloth" offset_z="0.08" timeout_ms="1200"/>
    <ApproachAndAlign target="cloth_edge" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="800"/>
    <Push target="cloth_edge" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    <Wait timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
