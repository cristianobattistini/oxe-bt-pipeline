<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible">
        <IsObjectVisible target="cloth"/>
      </Condition>
      <Action ID="ScanForTarget">
        <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
      </Action>
    </Fallback>
    <Action ID="DetectObject">
      <DetectObject target="cloth" timeout_ms="800"/>
    </Action>
    <Action ID="SetTCPYaw">
      <SetTCPYaw yaw_deg="90"/>
    </Action>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="ApproachAndAlign">
        <ApproachAndAlign target="cloth_edge" tolerance="0.01" timeout_ms="1200"/>
      </Action>
    </RetryUntilSuccessful>
    <Condition ID="AtOrientation">
      <AtOrientation yaw_deg="90"/>
    </Condition>
    <Condition ID="IsAt">
      <IsAt target="cloth_edge"/>
    </Condition>
  </Sequence>
</BehaviorTree>