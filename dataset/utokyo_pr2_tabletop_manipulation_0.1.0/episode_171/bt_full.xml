<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <DetectObject target="bread" timeout_ms="1200"/>
      <ScanForTarget target="bread" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <MoveAbove target="bread" offset_z="0.03" timeout_ms="1500"/>
    <ApproachAndAlign target="bread" tolerance="0.01" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="5.0" timeout_ms="1200"/>
    <CloseGripper force="10" timeout_ms="800"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Fallback>
      <IsObjectVisible target="plate"/>
      <DetectObject target="plate" timeout_ms="1200"/>
    </Fallback>
    <MoveAbove target="plate" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="plate" tolerance="0.02" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
