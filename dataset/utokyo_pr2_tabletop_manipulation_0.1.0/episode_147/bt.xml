<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="cloth" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <MoveAbove target="cloth" offset_z="0.05" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="45"/>
    <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="5.0" timeout_ms="800"/>
    <Repeat num_cycles="2">
      <Sequence>
        <Push target="cloth_edge" distance="0.1" direction_deg="225" timeout_ms="800"/>
        <Wait timeout_ms="400"/>
      </Sequence>
    </Repeat>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
