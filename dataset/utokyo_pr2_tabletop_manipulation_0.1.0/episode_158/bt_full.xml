<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="45"/>
    <MoveAbove target="cloth_edge" offset_z="0.03" timeout_ms="1200"/>
    <IsObjectVisible target="cloth"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="5.0" timeout_ms="1500"/>
    <Push target="cloth_edge" distance="0.1" direction_deg="135" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
