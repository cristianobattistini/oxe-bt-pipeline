<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="grape"/>
      <ScanForTarget target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <MoveAbove target="grape" offset_z="0.02" timeout_ms="800"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_grape"/>
    <ApproachAndAlign target="grape" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="grasp_grape" timeout_ms="1200"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <MoveTo target="plate" timeout_ms="1200"/>
    <MoveAbove target="plate" offset_z="0.02" timeout_ms="800"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
