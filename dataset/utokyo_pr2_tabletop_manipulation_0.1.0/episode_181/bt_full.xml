<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="bread"/>
      <DetectObject target="bread" timeout_ms="1200"/>
    </Fallback>
    <MoveAbove target="bread" offset_z="0.05" timeout_ms="1200"/>
    <ComputeGraspPose target="bread" strategy="side" result_key="bread_grasp"/>
    <ApproachAndAlign target="bread" tolerance="0.01" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="1200"/>
    <ObjectInGripper target="bread"/>
    <Fallback>
      <IsObjectVisible target="plate"/>
      <DetectObject target="plate" timeout_ms="1200"/>
    </Fallback>
    <MoveTo target="plate" timeout_ms="1500"/>
    <MoveAbove target="plate" offset_z="0.05" timeout_ms="1200"/>
    <SetBlackboard key="plate_center" value="plate_center"/>
    <PlaceAt pose_key="plate_center" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
