<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="grape"/>
      <ScanForTarget target="grape" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <DetectObject target="grape" timeout_ms="800"/>
    <MoveAbove target="grape" offset_z="0.03" timeout_ms="1200"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_grape"/>
    <RetryUntilSuccessful num_attempts="3">
      <ApproachAndAlign target="grape" tolerance="0.005" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <CloseGripper force="10" timeout_ms="800"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <MoveAbove target="plate" offset_z="0.05" timeout_ms="1200"/>
    <SetBlackboard key="plate_center_pose" value="plate_center"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
