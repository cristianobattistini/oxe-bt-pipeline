<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <MoveAbove target="cloth" offset_z="0.03" timeout_ms="1500"/>
    <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1500"/>
    <ComputeGraspPose target="cloth" strategy="pinch" result_key="cloth_grasp"/>
    <Pick grasp_key="cloth_grasp" timeout_ms="1500"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="800"/>
    <SetBlackboard key="fold_pose" value="fold_over_center"/>
    <PlaceAt pose_key="fold_pose" yaw_deg="0" press_force="10.0" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
