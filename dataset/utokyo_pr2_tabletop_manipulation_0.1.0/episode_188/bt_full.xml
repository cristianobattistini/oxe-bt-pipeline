<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    <IsObjectVisible target="grape"/>
    <OpenGripper width="0.06" timeout_ms="800"/>
    <MoveAbove target="grape_bowl" offset_z="0.08" timeout_ms="1500"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_grape"/>
    <PoseAvailable key="grasp_grape"/>
    <ApproachAndAlign target="grape" tolerance="0.01" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="800"/>
    <CloseGripper force="10" timeout_ms="800"/>
    <IsGraspStable/>
    <ObjectInGripper target="grape"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
