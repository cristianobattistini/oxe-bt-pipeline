<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="bread" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="MoveAbove" target="bread" offset_z="0.05" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="bread" strategy="pinch" result_key="grasp_bread"/>
    <Action ID="Pick" grasp_key="grasp_bread" timeout_ms="1500"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="plate" offset_z="0.08" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
