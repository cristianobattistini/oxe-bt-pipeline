<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="1500"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <MoveAbove target="cloth_edge" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="cloth_edge" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <CloseGripper force="10" timeout_ms="800"/>
    <MoveDelta axis="z" dist="0.05" timeout_ms="1200"/>
    <MoveDelta axis="y" dist="0.15" timeout_ms="1500"/>
    <MoveDelta axis="z" dist="-0.05" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <WipeArea area_id="cloth" pattern="line" passes="1" timeout_ms="1500"/>
    <Retreat distance="0.1" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
