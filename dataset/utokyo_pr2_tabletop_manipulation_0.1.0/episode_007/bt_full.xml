<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="1200"/>
    <MoveAbove target="cloth" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <ComputeGraspPose target="cloth" strategy="pinch" result_key="cloth_grasp"/>
    <Pick grasp_key="cloth_grasp" timeout_ms="1500"/>
    <MoveDelta axis="z" dist="0.10" timeout_ms="1200"/>
    <MoveTo target="fold_prep" timeout_ms="1500"/>
    <PlaceAt pose_key="fold_pose" yaw_deg="90" press_force="10" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.06" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
