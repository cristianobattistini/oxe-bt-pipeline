<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="cloth"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <AtOrientation yaw_deg="90"/>
  </Sequence>
</BehaviorTree>