<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="1200"/>
    <MoveAbove target="cloth" offset_z="0.03" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <Condition ID="ContactDetected" force_threshold="10"/>
    <Push target="cloth_edge" distance="0.1" direction_deg="270" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
