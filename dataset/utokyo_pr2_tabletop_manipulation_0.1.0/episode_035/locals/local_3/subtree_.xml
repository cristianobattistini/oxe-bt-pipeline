<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="cloth"/>
      <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <DetectObject target="cloth" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="90"/>
    <RetryUntilSuccessful num_attempts="3">
      <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <IsAt target="cloth"/>
    <AtOrientation yaw_deg="90"/>
  </Sequence>
</BehaviorTree>