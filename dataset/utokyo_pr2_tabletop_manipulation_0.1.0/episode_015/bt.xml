<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <Condition ID="IsObjectVisible" target="cloth"/>
        <Action ID="ScanForTarget" target="cloth" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </Fallback>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="cloth" offset_z="0.06" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="cloth" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <Action ID="Push" target="cloth_left_edge" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
