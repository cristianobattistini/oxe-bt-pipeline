<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <MoveAbove target="cloth" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <ComputeGraspPose target="cloth" strategy="pinch" result_key="cloth_grasp"/>
    <Pick grasp_key="cloth_grasp" timeout_ms="1500"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="800"/>
    <MoveDelta axis="y" dist="0.1" timeout_ms="800"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
