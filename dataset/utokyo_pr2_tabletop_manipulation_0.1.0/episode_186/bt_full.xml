<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bread"/>
      <Action ID="ScanForTarget" target="bread" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="bread" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="bread" strategy="side" result_key="bread_grasp"/>
    <Action ID="MoveAbove" target="bread" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="bread_grasp" timeout_ms="1200"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="800"/>
    <Action ID="MoveTo" target="plate_center" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <Action ID="PlaceAt" pose_key="plate_center" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
