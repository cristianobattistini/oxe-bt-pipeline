<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="grape" timeout_ms="1200"/>
    <OpenGripper width="0.06" timeout_ms="800"/>
    <MoveAbove target="grape" offset_z="0.05" timeout_ms="800"/>
    <ComputeGraspPose target="grape" strategy="pinch" result_key="grasp_grape"/>
    <PoseAvailable key="grasp_grape"/>
    <ApproachAndAlign target="grape" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="800"/>
    <Pick grasp_key="grasp_grape" timeout_ms="1200"/>
    <IsGraspStable/>
    <ObjectInGripper target="grape"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
