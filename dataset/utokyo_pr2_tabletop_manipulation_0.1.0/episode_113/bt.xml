<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="cloth" timeout_ms="800"/>
    <MoveAbove target="cloth_edge" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="cloth_edge" tolerance="0.005" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <ContactDetected force_threshold="10"/>
    <Push target="cloth_edge" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    <Retreat distance="0.05" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
