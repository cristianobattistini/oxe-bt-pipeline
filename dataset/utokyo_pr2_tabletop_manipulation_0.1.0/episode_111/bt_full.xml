<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cloth"/>
      <Action ID="ScanForTarget" target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="cloth" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="cloth" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="cloth" strategy="pinch" result_key="cloth_grasp"/>
    <Condition ID="PoseAvailable" key="cloth_grasp"/>
    <Action ID="ApproachAndAlign" target="cloth" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Pick" grasp_key="cloth_grasp" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="MoveDelta" axis="x" dist="0.1" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10.0" timeout_ms="1500"/>
    <Action ID="PlaceAt" pose_key="fold_pose_A" yaw_deg="90" press_force="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
