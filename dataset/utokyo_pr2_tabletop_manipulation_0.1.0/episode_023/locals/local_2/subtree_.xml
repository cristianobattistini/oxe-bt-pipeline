<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="cloth" timeout_ms="1500"/>
    <Condition ID="IsObjectVisible" target="cloth"/>
    <Action ID="Push" target="cloth" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
