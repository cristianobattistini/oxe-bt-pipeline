<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cloth"/>
      <Action ID="ScanForTarget" target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="cloth" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="MoveAbove" target="cloth" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="cloth" tolerance="0.01" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Condition ID="ContactDetected" force_threshold="10"/>
  </Sequence>
</BehaviorTree>
