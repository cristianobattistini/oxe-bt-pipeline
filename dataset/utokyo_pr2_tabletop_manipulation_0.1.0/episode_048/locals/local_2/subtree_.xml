<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="cloth"/>
      <Action ID="ScanForTarget" target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="cloth" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="cloth" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="SetTCPYaw" yaw_deg="0"/>
    <Action ID="Push" target="cloth" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    <Action ID="Wait" timeout_ms="400"/>
    <Condition ID="IsObjectVisible" target="cloth"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>