<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bread"/>
      <ScanForTarget target="bread" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <DetectObject target="bread" timeout_ms="1200"/>
    <MoveAbove target="bread" offset_z="0.06" timeout_ms="1200"/>
    <ComputeGraspPose target="bread" strategy="pinch" result_key="grasp_bread"/>
    <ApproachAndAlign target="bread" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <Pick grasp_key="grasp_bread" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <MoveDelta axis="z" dist="0.1" timeout_ms="800"/>
    <MoveAbove target="plate" offset_z="0.08" timeout_ms="1200"/>
    <PlaceAt pose_key="plate_center" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
