<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="cloth" timeout_ms="800"/>
    <MoveAbove target="cloth" offset_z="0.03" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="cloth_edge" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10.0" timeout_ms="800"/>
    <Push target="cloth" distance="0.2" direction_deg="180" timeout_ms="1500"/>
    <SetBlackboard key="fold_state" value="creased"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
