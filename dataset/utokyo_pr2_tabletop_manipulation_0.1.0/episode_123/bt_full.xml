<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Sequence>
        <Action ID="ScanForTarget" target="grape" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
        <Condition ID="IsObjectVisible" target="grape"/>
      </Sequence>
    </Fallback>
    <Action ID="MoveAbove" target="grape" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="grape" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="grape" strategy="pinch" result_key="grasp_grape"/>
    <Condition ID="PoseAvailable" key="grasp_grape"/>
    <Action ID="Pick" grasp_key="grasp_grape" timeout_ms="1500"/>
    <Condition ID="ObjectInGripper" target="grape"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
