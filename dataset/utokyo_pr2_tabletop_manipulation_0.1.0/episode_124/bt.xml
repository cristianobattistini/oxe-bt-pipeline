<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Action ID="ScanForTarget" target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="grape" timeout_ms="800"/>
    <Action ID="MoveAbove" target="grape" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="grape" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="ObjectInGripper" target="grape"/>
    <Action ID="MoveDelta" axis="z" dist="0.1" timeout_ms="800"/>
    <Action ID="MoveTo" target="plate_center" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
