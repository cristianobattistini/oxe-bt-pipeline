    </Fallback>
    <Fallback>
      <Action ID="DetectObject" target="plate" timeout_ms="800"/>
      <Action ID="ScanForTarget" target="plate" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
