<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Action ID="DetectObject" target="bread" timeout_ms="800"/>
      <Action ID="ScanForTarget" target="bread" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="ApproachAndAlign" target="bread" tolerance="0.005" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Action ID="SetTCPYaw" yaw_deg="225"/>
    <Condition ID="AtOrientation" yaw_deg="225"/>
  </Sequence>
</BehaviorTree>
