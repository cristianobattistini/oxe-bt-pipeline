<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="bread"/>
      <ScanForTarget target="bread" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <DetectObject target="bread" timeout_ms="1200"/>
    <ComputeGraspPose target="bread" strategy="pinch" result_key="bread_grasp"/>
    <MoveAbove target="bread" offset_z="0.03" timeout_ms="1500"/>
    <ApproachAndAlign target="bread" tolerance="0.005" timeout_ms="1500"/>
    <CloseGripper force="20" timeout_ms="1200"/>
    <IsGraspStable/>
    <MoveDelta axis="z" dist="0.05" timeout_ms="1200"/>
    <DetectObject target="plate" timeout_ms="1200"/>
    <MoveAbove target="plate" offset_z="0.05" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.1" force_threshold="10" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
