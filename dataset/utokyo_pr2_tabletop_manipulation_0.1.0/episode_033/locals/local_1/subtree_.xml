<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="cloth"/>
      <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <DetectObject target="cloth" timeout_ms="1200"/>
    <RetryUntilSuccessful num_attempts="2">
      <ApproachAndAlign target="cloth" tolerance="0.005" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <IsAt target="cloth"/>
  </Sequence>
</BehaviorTree>