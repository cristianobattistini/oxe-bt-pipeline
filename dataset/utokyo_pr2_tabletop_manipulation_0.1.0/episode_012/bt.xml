<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Action ID="ScanForTarget" target="grape" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="grape" timeout_ms="800"/>
    <Action ID="MoveAbove" target="grape" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="grape" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10.0" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="plate"/>
      <Action ID="ScanForTarget" target="plate" pattern="grid" max_attempts="2" timeout_ms="1200"/>
    </Fallback>
    <Action ID="MoveAbove" target="plate" offset_z="0.08" timeout_ms="1200"/>
    <Action ID="PlaceAt" pose_key="plate_center" yaw_deg="0" press_force="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
