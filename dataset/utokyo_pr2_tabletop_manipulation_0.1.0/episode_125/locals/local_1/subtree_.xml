<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="DetectObject" target="bread" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Action ID="Push" target="bread" distance="0.1" direction_deg="180" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="DetectObject" target="bread_on_plate" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>