<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Action ID="ScanForTarget" target="grape" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="MoveAbove" target="grape" offset_z="0.06" timeout_ms="1200"/>
    <Timeout timeout_ms="1500">
      <Action ID="ApproachAndAlign" target="grape" tolerance="0.01" timeout_ms="1200"/>
    </Timeout>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <Action ID="CloseGripper" force="10" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
