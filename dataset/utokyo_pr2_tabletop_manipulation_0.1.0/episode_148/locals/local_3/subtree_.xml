<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="grape"/>
      <Action ID="ScanForTarget" target="grape" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="ApproachAndAlign" target="grape" tolerance="0.005" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Action ID="Wait" timeout_ms="400"/>
    <Condition ID="IsAt" target="grape"/>
  </Sequence>
</BehaviorTree>