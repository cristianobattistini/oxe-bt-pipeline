<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <DetectObject target="cloth" timeout_ms="1200"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="cloth" pattern="raster" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <MoveAbove target="cloth" offset_z="0.05" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <ApproachAndAlign target="cloth" tolerance="0.01" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1500"/>
    <ContactDetected force_threshold="10"/>
  </Sequence>
</BehaviorTree>