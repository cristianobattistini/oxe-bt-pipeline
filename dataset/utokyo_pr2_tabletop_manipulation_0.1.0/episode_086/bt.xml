<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="cloth" timeout_ms="1200"/>
    <Condition ID="IsObjectVisible" target="cloth"/>
    <Action ID="MoveAbove" target="cloth" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="ApproachAndAlign" target="cloth" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10.0" timeout_ms="1200"/>
    <Condition ID="ContactDetected" force_threshold="10.0"/>
    <Action ID="Push" target="cloth_edge" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    <Action ID="Wait" timeout_ms="400"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
