<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="bread" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="MoveAbove" target="bread" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="bread" strategy="side" result_key="bread_grasp"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="bread_grasp" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="plate" offset_z="0.07" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
