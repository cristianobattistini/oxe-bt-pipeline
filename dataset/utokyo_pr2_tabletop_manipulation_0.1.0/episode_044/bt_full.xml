<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="bread" timeout_ms="1200"/>
    <Action ID="DetectObject" target="plate" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="bread" strategy="pinch" result_key="bread_grasp"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="bread_grasp" timeout_ms="1500"/>
    <Condition ID="ObjectInGripper" target="bread"/>
    <Action ID="MoveTo" target="plate_center" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.06" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
