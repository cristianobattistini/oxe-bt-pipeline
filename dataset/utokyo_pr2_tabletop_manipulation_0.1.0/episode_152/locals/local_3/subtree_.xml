<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="IsObjectVisible" target="grape"/>
    <Condition ID="AtOrientation" yaw_deg="0"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="ApproachAndAlign" target="grape" tolerance="0.005" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Condition ID="IsAt" target="grape"/>
  </Sequence>
</BehaviorTree>