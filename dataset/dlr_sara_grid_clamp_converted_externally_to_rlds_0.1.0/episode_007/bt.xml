<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="grid_clamp" timeout_ms="1500"/>
    <MoveAbove target="grid_clamp" offset_z="0.05" timeout_ms="1500"/>
    <ComputeGraspPose target="grid_clamp" strategy="top" result_key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="top" timeout_ms="2000"/>
    <RaiseHeld target="grid_clamp" distance="0.10" timeout_ms="1000"/>
    <ApproachAndAlign target="placement_slot" tolerance="0.01" timeout_ms="1500"/>
    <PlaceDown target="grid_clamp" timeout_ms="1500"/>
    <OpenGripper width="0.04" timeout_ms="800"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
