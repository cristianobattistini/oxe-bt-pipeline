<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="grid_clamp" timeout_ms="1000"/>
    <MoveAbove target="grid_clamp" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="grid_clamp" tolerance="0.01" timeout_ms="2000"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="2000"/>
    <PlaceOnSurface target="grid_clamp" area_id="board" yaw_deg="0" press_force="10" timeout_ms="1500"/>
    <OpenGripper width="0.04" timeout_ms="400"/>
    <Retreat distance="0.10" timeout_ms="800"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
