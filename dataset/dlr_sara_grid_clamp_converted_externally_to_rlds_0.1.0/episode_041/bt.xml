<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="clamp"/>
    <Action ID="DetectObject" target="grid_clamp_fixture" timeout_ms="1500"/>
    <Action ID="MoveAbove" target="grid_clamp_fixture" offset_z="0.05" timeout_ms="2000"/>
    <Action ID="ApproachAndAlign" target="grid_clamp_fixture" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1500"/>
    <Condition ID="ContactDetected" force_threshold="10"/>
    <Action ID="PlaceDown" target="grid_clamp_fixture" timeout_ms="1000"/>
    <Action ID="OpenGripper" width="0.04" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
