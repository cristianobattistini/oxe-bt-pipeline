<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="placement_grid" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="0"/>
    <ApproachAndAlign target="placement_grid" tolerance="0.005" timeout_ms="2000"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="2000"/>
    <PlaceOnSurface target="grid_clamp" area_id="board" yaw_deg="0" press_force="10" timeout_ms="2000"/>
    <OpenGripper width="0.04" timeout_ms="800"/>
    <MoveDelta axis="z" dist="0.05" timeout_ms="1500"/>
    <Retreat distance="0.10" timeout_ms="1500"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
