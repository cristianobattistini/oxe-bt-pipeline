<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="ObjectInGripper" target="clamp"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="MoveAbove" target="place_goal" offset_z="0.05" timeout_ms="2000"/>
    <Action ID="ApproachAndAlign" target="place_goal" tolerance="0.005" timeout_ms="3000"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.10" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
