<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
      <Action ID="ScanForTarget" target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Condition ID="IsObjectVisible" target="t_block"/>
    <Action ID="SetTCPYaw" yaw_deg="270"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="270" timeout_ms="1200"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>