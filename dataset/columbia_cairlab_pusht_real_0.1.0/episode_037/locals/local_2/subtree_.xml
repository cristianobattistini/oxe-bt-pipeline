<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="ScanForTarget" target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="target_T"/>
      <Action ID="ScanForTarget" target="target_T" pattern="grid" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="Push" target="t_block" distance="0.2" direction_deg="90" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Condition ID="IsAt" target="target_T"/>
  </Sequence>
</BehaviorTree>