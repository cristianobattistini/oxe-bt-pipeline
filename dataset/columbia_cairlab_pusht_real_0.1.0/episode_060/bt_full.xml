<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="t_block" timeout_ms="800"/>
    <DetectObject target="target_goal" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.01" force_threshold="10" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <Push target="t_block" distance="0.1" direction_deg="90" timeout_ms="1500"/>
        <Wait timeout_ms="400"/>
        <IsAt target="target_goal"/>
      </Sequence>
    </RetryUntilSuccessful>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
