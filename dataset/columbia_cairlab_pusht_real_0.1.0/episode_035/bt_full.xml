<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="ScanForTarget" target="t_block" pattern="line" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="t_block" timeout_ms="1200"/>

    <Fallback>
      <Condition ID="IsObjectVisible" target="target_slot"/>
      <Action ID="ScanForTarget" target="target_slot" pattern="line" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="target_slot" timeout_ms="1200"/>

    <Action ID="MoveAbove" target="t_block" offset_z="0.02" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="180"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.01" force_threshold="10" timeout_ms="800"/>
    <Action ID="Push" target="t_block" distance="0.2" direction_deg="180" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
