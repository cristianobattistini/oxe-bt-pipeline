<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <DetectObject target="target_T" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="800"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <Push target="t_block" distance="0.1" direction_deg="180" timeout_ms="1200"/>
        <Push target="t_block" distance="0.1" direction_deg="90" timeout_ms="1200"/>
        <Push target="t_block" distance="0.05" direction_deg="225" timeout_ms="1200"/>
        <IsAt target="target_T"/>
      </Sequence>
    </RetryUntilSuccessful>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
