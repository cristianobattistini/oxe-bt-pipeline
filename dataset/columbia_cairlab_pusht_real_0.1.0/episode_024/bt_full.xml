<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="T_block" timeout_ms="800"/>
    <Action ID="DetectObject" target="T_goal" timeout_ms="800"/>
    <Action ID="MoveAbove" target="T_block" offset_z="0.02" timeout_ms="800"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="T_block" tolerance="0.005" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <Action ID="Push" target="T_block" distance="0.1" direction_deg="180" timeout_ms="800"/>
        <Action ID="ApproachAndAlign" target="T_block" tolerance="0.005" timeout_ms="800"/>
        <Action ID="Push" target="T_block" distance="0.1" direction_deg="180" timeout_ms="800"/>
        <Condition ID="IsAt" target="T_goal"/>
      </Sequence>
    </RetryUntilSuccessful>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
