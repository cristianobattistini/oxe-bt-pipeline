<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="t_block" timeout_ms="800"/>
    <DetectObject target="target_T" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="45"/>
    <Repeat num_cycles="3">
      <Sequence>
        <Push target="t_block" distance="0.1" direction_deg="45" timeout_ms="800"/>
        <DetectObject target="t_block" timeout_ms="500"/>
        <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
      </Sequence>
    </Repeat>
    <Wait timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>

