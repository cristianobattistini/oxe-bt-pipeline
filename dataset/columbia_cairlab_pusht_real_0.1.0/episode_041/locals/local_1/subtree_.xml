<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <Action ID="DetectObject" target="t_block" timeout_ms="1200"/>
        <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </Fallback>
    </RetryUntilSuccessful>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Condition ID="AtOrientation" yaw_deg="90"/>
  </Sequence>
</BehaviorTree>