<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <Condition ID="IsObjectVisible" target="t_block"/>
        <Action ID="DetectObject" target="t_block" timeout_ms="1200"/>
      </Fallback>
    </RetryUntilSuccessful>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Fallback>
      <Condition ID="AtOrientation" yaw_deg="90"/>
      <Action ID="SetTCPYaw" yaw_deg="90"/>
    </Fallback>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="0" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="target_T" tolerance="0.02" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>