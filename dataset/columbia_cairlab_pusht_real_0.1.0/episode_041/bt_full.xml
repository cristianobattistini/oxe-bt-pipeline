<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <Action ID="DetectObject" target="t_block" timeout_ms="1200"/>
        <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </Fallback>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <Action ID="DetectObject" target="target_T" timeout_ms="1200"/>
        <Action ID="ScanForTarget" target="target_T" pattern="grid" max_attempts="3" timeout_ms="1500"/>
      </Fallback>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="45" timeout_ms="1500"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="0" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="target_T" tolerance="0.02" timeout_ms="1200"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
