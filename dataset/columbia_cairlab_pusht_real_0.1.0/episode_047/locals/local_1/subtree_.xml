<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <DetectObject target="t_block" timeout_ms="800"/>
        <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </Fallback>
    </RetryUntilSuccessful>
    <MoveAbove target="t_block" offset_z="0.05" timeout_ms="800"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="0"/>
    <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="800"/>
    <IsObjectVisible target="t_block"/>
  </Sequence>
</BehaviorTree>
