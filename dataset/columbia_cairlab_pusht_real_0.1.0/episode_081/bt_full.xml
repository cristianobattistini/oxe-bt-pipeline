<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="400"/>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <ScanForTarget target="goal" pattern="grid" max_attempts="3" timeout_ms="400"/>
    </RetryUntilSuccessful>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="90"/>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="400"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <Repeat num_cycles="3">
      <Push target="t_block" distance="0.1" direction_deg="225" timeout_ms="400"/>
    </Repeat>
    <Retreat distance="0.1" timeout_ms="400"/>
    <IsAt target="goal"/>
  </Sequence>
</BehaviorTree>
