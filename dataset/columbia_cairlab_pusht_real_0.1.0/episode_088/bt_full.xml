<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="goal_target"/>
      <ScanForTarget target="goal_target" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="0"/>
    <Push target="t_block" distance="0.2" direction_deg="90" timeout_ms="1500"/>
    <ApproachAndAlign target="goal_target" tolerance="0.01" timeout_ms="1500"/>
    <Push target="t_block" distance="0.05" direction_deg="90" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
