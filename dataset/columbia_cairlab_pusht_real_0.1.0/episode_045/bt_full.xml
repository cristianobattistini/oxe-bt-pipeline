<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <DetectObject target="t_target" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <Push target="t_target" distance="0.2" direction_deg="270" timeout_ms="1500"/>
    <Wait timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
