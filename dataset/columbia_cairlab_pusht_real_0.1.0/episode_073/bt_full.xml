<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="t_block" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="goal_T_outline" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="800"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <Push target="t_block" distance="0.1" direction_deg="180" timeout_ms="1500"/>
    <Retreat distance="0.05" timeout_ms="500"/>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="270"/>
    <Push target="t_block" distance="0.1" direction_deg="270" timeout_ms="1500"/>
    <Retreat distance="0.05" timeout_ms="500"/>
    <ApproachAndAlign target="goal_T_outline" tolerance="0.01" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="180"/>
    <Push target="t_block" distance="0.05" direction_deg="180" timeout_ms="1200"/>
    <Retreat distance="0.05" timeout_ms="500"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
