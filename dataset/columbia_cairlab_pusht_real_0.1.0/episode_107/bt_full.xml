<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <ScanForTarget target="T_block" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <DetectObject target="target_goal" timeout_ms="800"/>
    <MoveAbove target="T_block" offset_z="0.02" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="135"/>
    <Repeat num_cycles="3">
      <Sequence>
        <ApproachAndAlign target="T_block" tolerance="0.005" timeout_ms="800"/>
        <Push target="T_block" distance="0.1" direction_deg="135" timeout_ms="1200"/>
      </Sequence>
    </Repeat>
    <DetectObject target="T_block" timeout_ms="800"/>
    <PlaceAt pose_key="target_goal" yaw_deg="135" press_force="10.0" timeout_ms="800"/>
    <IsAt target="target_goal"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
