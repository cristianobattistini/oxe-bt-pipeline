<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <DetectObject target="t_block" timeout_ms="800"/>
      <ScanForTarget target="t_block" pattern="line" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Fallback>
      <DetectObject target="goal_T" timeout_ms="800"/>
      <ScanForTarget target="goal_T" pattern="line" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.01" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <Repeat num_cycles="3">
      <Sequence>
        <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="1200"/>
        <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="800"/>
      </Sequence>
    </Repeat>
    <ApproachAndAlign target="goal_T" tolerance="0.005" timeout_ms="800"/>
    <IsAt target="goal_T"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
