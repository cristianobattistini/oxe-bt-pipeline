<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Action ID="DetectObject" target="t_block" timeout_ms="1200"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="t_block" pattern="line" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="MoveAbove" target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="SetBlackboard" key="push_dir" value="left_to_target"/>
    <Repeat num_cycles="3">
      <Action ID="Push" target="t_block" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    </Repeat>
    <Action ID="DetectObject" target="target_outline" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="target_outline" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Push" target="t_block" distance="0.05" direction_deg="180" timeout_ms="800"/>
    <Condition ID="IsAt" target="goal_region"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
