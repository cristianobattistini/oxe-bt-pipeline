<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Action ID="DetectObject" target="t_block" timeout_ms="1200"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="t_block" pattern="line" max_attempts="3" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <Repeat num_cycles="3">
      <Action ID="Push" target="t_block" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    </Repeat>
    <Condition ID="IsObjectVisible" target="t_block"/>
  </Sequence>
</BehaviorTree>