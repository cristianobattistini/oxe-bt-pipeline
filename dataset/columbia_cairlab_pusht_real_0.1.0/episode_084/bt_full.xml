<BehaviorTree ID="MainTree">
  <Fallback>
    <Condition ID="IsAt" target="t_block_goal"/>
    <Sequence>
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="800"/>
      <DetectObject target="t_block" timeout_ms="800"/>
      <DetectObject target="t_block_goal" timeout_ms="800"/>
      <SetBlackboard key="push_direction" value="east"/>
      <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1200"/>
      <SetTCPYaw yaw_deg="90"/>
      <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
      <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
      <RetryUntilSuccessful num_attempts="3">
        <Sequence>
          <Push target="t_block" distance="0.1" direction_deg="90" timeout_ms="800"/>
          <DetectObject target="t_block_goal" timeout_ms="800"/>
          <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
        </Sequence>
      </RetryUntilSuccessful>
      <Push target="t_block" distance="0.05" direction_deg="90" timeout_ms="800"/>
      <Retreat distance="0.1" timeout_ms="800"/>
    </Sequence>
  </Fallback>
</BehaviorTree>
