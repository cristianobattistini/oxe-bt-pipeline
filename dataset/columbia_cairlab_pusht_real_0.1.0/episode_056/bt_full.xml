<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="goal_T_outline" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <Push target="t_block" distance="0.2" direction_deg="90" timeout_ms="1500"/>
    <ApproachAndAlign target="goal_T_outline" tolerance="0.01" timeout_ms="1200"/>
    <Push target="t_block" distance="0.05" direction_deg="90" timeout_ms="800"/>
    <IsAt target="goal_T_outline"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
