<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
        <Action ID="DetectObject" target="goal_T" timeout_ms="800"/>
      </Sequence>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="t_block" offset_z="0.02" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="Push" target="t_block" distance="0.2" direction_deg="45" timeout_ms="1200"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="45" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="goal_T" tolerance="0.02" timeout_ms="800"/>
    <Condition ID="IsAt" target="goal_T"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
