<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="t_block" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
    <Action ID="MoveAbove" target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.01" force_threshold="5.0" timeout_ms="800"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="45" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.05" timeout_ms="800"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="90" timeout_ms="1500"/>
    <Condition ID="IsAt" target="goal_T"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
