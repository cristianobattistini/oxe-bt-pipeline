<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="target_pose"/>
      <ScanForTarget target="target_pose" pattern="grid" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="0"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <Repeat num_cycles="3">
      <Push target="t_block" distance="0.1" direction_deg="45" timeout_ms="1200"/>
    </Repeat>
    <ApproachAndAlign target="target_pose" tolerance="0.005" timeout_ms="1200"/>
    <Repeat num_cycles="2">
      <Push target="t_block" distance="0.05" direction_deg="45" timeout_ms="800"/>
    </Repeat>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
