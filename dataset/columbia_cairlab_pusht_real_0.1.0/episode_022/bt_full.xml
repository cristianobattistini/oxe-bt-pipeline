<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="target_zone"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="target_zone" pattern="grid" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="MoveAbove" target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Repeat num_cycles="3">
      <Action ID="Push" target="t_block" distance="0.1" direction_deg="90" timeout_ms="1200"/>
    </Repeat>
    <Action ID="ApproachAndAlign" target="target_zone" tolerance="0.02" timeout_ms="1200"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
