<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="goal_region"/>
      <ScanForTarget target="goal_region" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <MoveAbove target="t_block" offset_z="0.02" timeout_ms="800"/>
        <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
        <SetTCPYaw yaw_deg="0"/>
        <Push target="t_block" distance="0.2" direction_deg="0" timeout_ms="1500"/>
        <IsAt target="goal_region"/>
      </Sequence>
    </RetryUntilSuccessful>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
