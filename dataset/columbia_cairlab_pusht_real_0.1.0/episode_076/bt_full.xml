<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="t_block" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="target_zone" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.01" force_threshold="10" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <Push target="t_block" distance="0.2" direction_deg="0" timeout_ms="1500"/>
    <ApproachAndAlign target="target_zone" tolerance="0.01" timeout_ms="1500"/>
    <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="1200"/>
    <IsAt target="target_zone"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
