<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="t_block" timeout_ms="1200"/>
    <DetectObject target="target_zone" timeout_ms="1200"/>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <Repeat num_cycles="3">
      <Push target="t_block" distance="0.1" direction_deg="225" timeout_ms="1500"/>
    </Repeat>
    <Fallback>
      <IsAt target="target_zone"/>
      <Sequence>
        <ApproachAndAlign target="target_zone" tolerance="0.01" timeout_ms="1200"/>
        <Push target="t_block" distance="0.05" direction_deg="225" timeout_ms="800"/>
        <IsAt target="target_zone"/>
      </Sequence>
    </Fallback>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
