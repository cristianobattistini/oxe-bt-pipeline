<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="800"/>
    </Fallback>
    <Fallback>
      <Condition ID="AtOrientation" yaw_deg="90"/>
      <Action ID="SetTCPYaw" yaw_deg="90"/>
    </Fallback>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="Push" target="t_block" distance="0.1" direction_deg="135" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Condition ID="IsObjectVisible" target="t_block"/>
  </Sequence>
</BehaviorTree>