<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Sequence>
        <Condition ID="IsObjectVisible" target="t_block"/>
        <Condition ID="IsObjectVisible" target="target_T"/>
      </Sequence>
      <Sequence>
        <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="800"/>
        <Action ID="ScanForTarget" target="target_T" pattern="spiral" max_attempts="3" timeout_ms="800"/>
      </Sequence>
    </Fallback>

    <Action ID="MoveAbove" target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="MoveTo" target="t_block_contact" timeout_ms="800"/>

    <Repeat num_cycles="2">
      <Action ID="Push" target="t_block" distance="0.1" direction_deg="135" timeout_ms="1200"/>
    </Repeat>

    <Action ID="ApproachAndAlign" target="target_T" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="MoveTo" target="target_T" timeout_ms="1200"/>

    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
