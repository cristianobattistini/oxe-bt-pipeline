<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <DetectObject target="t_block" timeout_ms="800"/>
    <DetectObject target="goal_marker" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <Repeat num_cycles="3">
      <Sequence>
        <Push target="t_block" distance="0.1" direction_deg="45" timeout_ms="1500"/>
        <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
      </Sequence>
    </Repeat>
    <Fallback>
      <Condition ID="IsAt" target="goal_marker"/>
      <Sequence>
        <Push target="t_block" distance="0.05" direction_deg="45" timeout_ms="1500"/>
        <Condition ID="IsAt" target="goal_marker"/>
      </Sequence>
    </Fallback>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
