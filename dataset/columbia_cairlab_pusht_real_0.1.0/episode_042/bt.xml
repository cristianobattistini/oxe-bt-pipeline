<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="goal_region"/>
      <ScanForTarget target="goal_region" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="800"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <Push target="t_block" distance="0.2" direction_deg="90" timeout_ms="1500"/>
    <DetectObject target="t_block" timeout_ms="500"/>
    <Fallback>
      <IsAt target="goal_region"/>
      <Sequence>
        <Push target="t_block" distance="0.1" direction_deg="90" timeout_ms="1200"/>
        <DetectObject target="goal_region" timeout_ms="500"/>
      </Sequence>
    </Fallback>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
