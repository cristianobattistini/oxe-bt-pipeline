<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <IsObjectVisible target="t_block"/>
        <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
      </Fallback>
    </RetryUntilSuccessful>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="800"/>
    <Push target="t_block" distance="0.05" direction_deg="90" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
