<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Fallback>
        <IsObjectVisible target="t_block"/>
        <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
      </Fallback>
    </RetryUntilSuccessful>
    <DetectObject target="goal_region" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.01" force_threshold="10" timeout_ms="1200"/>
    <Repeat num_cycles="3">
      <Sequence>
        <Push target="t_block" distance="0.05" direction_deg="90" timeout_ms="1200"/>
        <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="800"/>
      </Sequence>
    </Repeat>
    <ApproachAndAlign target="goal_region" tolerance="0.005" timeout_ms="1200"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
