<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="goal_marker"/>
      <Action ID="ScanForTarget" target="goal_marker" pattern="raster" max_attempts="2" timeout_ms="1200"/>
    </Fallback>
    <Action ID="MoveAbove" target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="1.0" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="Push" target="t_block" distance="0.2" direction_deg="0" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
