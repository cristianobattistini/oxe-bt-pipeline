<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Sequence>
        <DetectObject target="t_block" timeout_ms="800"/>
        <DetectObject target="target_T" timeout_ms="800"/>
      </Sequence>
      <Sequence>
        <RetryUntilSuccessful num_attempts="3">
          <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
        </RetryUntilSuccessful>
        <RetryUntilSuccessful num_attempts="3">
          <ScanForTarget target="target_T" pattern="raster" max_attempts="3" timeout_ms="1500"/>
        </RetryUntilSuccessful>
      </Sequence>
    </Fallback>

    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="800"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="135"/>

    <Repeat num_cycles="3">
      <Sequence>
        <Push target="t_block" distance="0.1" direction_deg="135" timeout_ms="1200"/>
        <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
      </Sequence>
    </Repeat>

    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
