<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <DetectObject target="t_block" timeout_ms="800"/>
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Fallback>
      <DetectObject target="target_circle" timeout_ms="800"/>
      <ScanForTarget target="target_circle" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="0"/>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <LowerUntilContact speed="normal" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
        <Repeat num_cycles="3">
          <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="1200"/>
        </Repeat>
        <Retreat distance="0.1" timeout_ms="800"/>
        <IsAt target="block_at_target"/>
      </Sequence>
    </RetryUntilSuccessful>
  </Sequence>
</BehaviorTree>
