<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="ScanForTarget" target="t_block" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="MoveAbove" target="t_block" offset_z="0.05" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="800"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Condition ID="AtOrientation" yaw_deg="90"/>
    <Action ID="Push" target="t_block" distance="0.2" direction_deg="225" timeout_ms="1500"/>
    <Condition ID="IsObjectVisible" target="goal_T"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
