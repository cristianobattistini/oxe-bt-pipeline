<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <RetryUntilSuccessful num_attempts="3">
        <DetectObject target="t_block" timeout_ms="800"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="target_goal"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="target_goal" pattern="grid" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <Repeat num_cycles="3">
      <Sequence>
        <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
        <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="1500"/>
        <Wait timeout_ms="400"/>
      </Sequence>
    </Repeat>
    <IsAt target="target_goal"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
