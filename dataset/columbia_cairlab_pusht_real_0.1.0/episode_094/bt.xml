<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="target_goal"/>
      <ScanForTarget target="target_goal" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="0"/>
    <ComputeGraspPose target="t_block" strategy="push" result_key="prepush_pose"/>
    <PoseAvailable key="prepush_pose"/>
    <PlaceAt pose_key="prepush_pose" yaw_deg="0" press_force="10.0" timeout_ms="800"/>
    <LowerUntilContact speed="slow" max_depth="0.01" force_threshold="5.0" timeout_ms="800"/>
    <Repeat num_cycles="2">
      <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="1200"/>
    </Repeat>
    <IsAt target="target_goal"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
