<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="target_area"/>
      <ScanForTarget target="target_area" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="0"/>
    <Repeat num_cycles="3">
      <Sequence>
        <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="1500"/>
        <Wait timeout_ms="400"/>
      </Sequence>
    </Repeat>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
