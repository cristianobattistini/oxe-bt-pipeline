<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="target_pose" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.01" force_threshold="10" timeout_ms="1200"/>
    <Action ID="Push" target="t_block" distance="0.2" direction_deg="0" timeout_ms="1500"/>
    <Fallback>
      <Condition ID="IsAt" target="target_pose"/>
      <Action ID="Push" target="t_block" distance="0.05" direction_deg="0" timeout_ms="800"/>
    </Fallback>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
