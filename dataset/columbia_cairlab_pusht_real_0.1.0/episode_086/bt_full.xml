<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    <ScanForTarget target="goal_target" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    <DetectObject target="t_block" timeout_ms="800"/>
    <DetectObject target="goal_target" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="225"/>
    <Push target="t_block" distance="0.2" direction_deg="45" timeout_ms="1500"/>
    <Push target="t_block" distance="0.1" direction_deg="90" timeout_ms="1200"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
