<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Fallback>
      <Condition ID="IsObjectVisible" target="target_T"/>
      <ScanForTarget target="target_T" pattern="grid" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1500"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="2.0" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="0"/>
    <Push target="t_block" distance="0.2" direction_deg="0" timeout_ms="1500"/>
    <ApproachAndAlign target="target_T" tolerance="0.01" timeout_ms="1200"/>
    <Condition ID="IsAt" target="target_T"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
