<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1500"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <RetryUntilSuccessful num_attempts="2">
      <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="2.0" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Condition ID="ContactDetected" force_threshold="2.0"/>
  </Sequence>
</BehaviorTree>
