<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible ID="IsObjectVisible" target="t_block"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <ApproachAndAlign ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <SetTCPYaw ID="SetTCPYaw" yaw_deg="90"/>
    <LowerUntilContact ID="LowerUntilContact" speed="slow" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
