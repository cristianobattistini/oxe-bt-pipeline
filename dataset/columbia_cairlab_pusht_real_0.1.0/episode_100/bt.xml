<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>

    <Fallback>
      <Condition ID="IsObjectVisible" target="green_target"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="green_target" pattern="grid" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>

    <Action ID="ComputeGraspPose" target="t_block" strategy="push" result_key="push_pose"/>
    <Action ID="MoveAbove" target="t_block" offset_z="0.03" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="1200"/>

    <Action ID="Push" target="t_block" distance="0.2" direction_deg="180" timeout_ms="1500"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="180" timeout_ms="1500"/>

    <Condition ID="IsAt" target="green_target"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
