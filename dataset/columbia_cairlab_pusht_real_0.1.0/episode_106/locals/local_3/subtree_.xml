<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="800"/>
      <DetectObject target="t_block" timeout_ms="1200"/>
    </Fallback>
    <MoveTo target="t_block" timeout_ms="1200"/>
    <RetryUntilSuccessful num_attempts="2">
      <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    </RetryUntilSuccessful>
  </Sequence>
</BehaviorTree>
