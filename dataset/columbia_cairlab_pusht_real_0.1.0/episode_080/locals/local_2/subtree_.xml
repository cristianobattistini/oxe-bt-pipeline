<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="t_block" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Fallback>
      <IsObjectVisible target="goal"/>
      <ScanForTarget target="goal" pattern="line" max_attempts="3" timeout_ms="800"/>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <AtOrientation yaw_deg="90"/>
    <Push target="t_block" distance="0.2" direction_deg="180" timeout_ms="1500"/>
    <IsAt target="goal"/>
  </Sequence>
</BehaviorTree>
