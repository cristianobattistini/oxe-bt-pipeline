<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
    <Action ID="MoveAbove" target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="2">
      <Repeat num_cycles="2">
        <Action ID="Push" target="t_block" distance="0.2" direction_deg="180" timeout_ms="1500"/>
      </Repeat>
    </RetryUntilSuccessful>
    <Condition ID="IsObjectVisible" target="t_block"/>
  </Sequence>
</BehaviorTree>
