<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
    <Action ID="ScanForTarget" target="target_marker" pattern="grid" max_attempts="3" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="0"/>
    <Action ID="Push" target="t_block" distance="0.2" direction_deg="0" timeout_ms="1500"/>
    <Action ID="Push" target="t_block" distance="0.05" direction_deg="90" timeout_ms="800"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="0" timeout_ms="1200"/>
    <Condition ID="IsAt" target="target_marker"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
