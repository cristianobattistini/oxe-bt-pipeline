<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="t_block" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="target_T" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="t_block" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Push" target="t_block" distance="0.2" direction_deg="180" timeout_ms="1500"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="90" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="target_T" tolerance="0.01" timeout_ms="1200"/>
    <Condition ID="IsAt" target="target_T"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>

