<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="SetBlackboard" key="object" value="t_block"/>
    <Action ID="SetBlackboard" key="goal" value="goal_region"/>

    <Fallback>
      <Condition ID="IsObjectVisible" target="t_block"/>
      <Action ID="ScanForTarget" target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>

    <Action ID="DetectObject" target="goal_region" timeout_ms="800"/>

    <Action ID="MoveTo" target="prepush_pose" timeout_ms="800"/>
    <Condition ID="IsAt" target="prepush_pose"/>

    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1200"/>

    <Action ID="SetTCPYaw" yaw_deg="0"/>
    <Action ID="Push" target="t_block" distance="0.2" direction_deg="0" timeout_ms="1500"/>

    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="Push" target="t_block" distance="0.1" direction_deg="90" timeout_ms="1200"/>

    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="MoveTo" target="home" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
