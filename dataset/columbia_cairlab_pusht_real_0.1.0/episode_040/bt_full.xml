<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="t_block" timeout_ms="1500"/>
    <DetectObject target="target_T" timeout_ms="1500"/>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1500"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <Repeat num_cycles="3">
      <Push target="t_block" distance="0.1" direction_deg="180" timeout_ms="1200"/>
    </Repeat>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="0"/>
    <Repeat num_cycles="2">
      <Push target="t_block" distance="0.05" direction_deg="90" timeout_ms="1200"/>
    </Repeat>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
