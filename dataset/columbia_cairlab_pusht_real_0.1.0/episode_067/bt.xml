<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="t_block" timeout_ms="800"/>
    <DetectObject target="target_zone" timeout_ms="800"/>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="800"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <IsObjectVisible target="t_block"/>
    <Repeat num_cycles="2">
      <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="1200"/>
    </Repeat>
    <IsAt target="target_zone"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
