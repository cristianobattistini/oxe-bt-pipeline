<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="t_block" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="goal_marker" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <MoveAbove target="t_block" offset_z="0.03" timeout_ms="1500"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="0"/>
    <Push target="t_block" distance="0.1" direction_deg="0" timeout_ms="1500"/>
    <ApproachAndAlign target="goal_marker" tolerance="0.02" timeout_ms="1200"/>
    <IsAt target="goal_marker"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
