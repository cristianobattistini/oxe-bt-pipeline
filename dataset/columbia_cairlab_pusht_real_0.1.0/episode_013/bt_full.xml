<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="t_block" timeout_ms="1200"/>
    <Action ID="DetectObject" target="goal_slot" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="t_block" offset_z="0.03" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="45"/>
    <Repeat num_cycles="3">
      <Action ID="Push" target="t_block" distance="0.1" direction_deg="45" timeout_ms="1500"/>
    </Repeat>
    <Action ID="MoveAbove" target="goal_slot" offset_z="0.04" timeout_ms="1200"/>
    <Action ID="Retreat" distance="0.2" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
