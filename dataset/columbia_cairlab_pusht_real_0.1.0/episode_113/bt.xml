<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="block_T"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="block_T" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <MoveAbove target="block_T" offset_z="0.02" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="block_T" tolerance="0.005" timeout_ms="1200"/>
    <Push target="block_T" distance="0.1" direction_deg="90" timeout_ms="1200"/>
    <Push target="block_T" distance="0.1" direction_deg="45" timeout_ms="1200"/>
    <Push target="block_T" distance="0.05" direction_deg="0" timeout_ms="1200"/>
    <ApproachAndAlign target="target_goal_T" tolerance="0.005" timeout_ms="1200"/>
    <DetectObject target="target_goal_T" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
