<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="t_block" timeout_ms="1200"/>
    <Action ID="DetectObject" target="target_goal" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.01" force_threshold="10" timeout_ms="800"/>
    <Repeat num_cycles="3">
      <Action ID="Push" target="t_block" distance="0.1" direction_deg="270" timeout_ms="1200"/>
    </Repeat>
    <Action ID="ApproachAndAlign" target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <Repeat num_cycles="3">
      <Action ID="Push" target="t_block" distance="0.1" direction_deg="0" timeout_ms="1200"/>
    </Repeat>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>

