<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="800"/>
    </Fallback>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
    <IsAt target="t_block"/>
  </Sequence>
</BehaviorTree>
