<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <DetectObject target="goal_target" timeout_ms="800"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <MoveTo target="prepush_pose" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.01" force_threshold="5.0" timeout_ms="800"/>
    <Push target="t_block" distance="0.2" direction_deg="90" timeout_ms="1200"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
