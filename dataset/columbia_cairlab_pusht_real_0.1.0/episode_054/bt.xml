<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <Fallback>
      <Sequence>
        <DetectObject target="t_block" timeout_ms="800"/>
        <IsObjectVisible target="t_block"/>
      </Sequence>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="t_block" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="800"/>
    <ApproachAndAlign target="t_block" tolerance="0.01" timeout_ms="800"/>
    <IsObjectVisible target="t_block"/>
    <SetTCPYaw yaw_deg="225"/>
    <Push target="t_block" distance="0.2" direction_deg="225" timeout_ms="1200"/>
    <Push target="t_block" distance="0.1" direction_deg="225" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
