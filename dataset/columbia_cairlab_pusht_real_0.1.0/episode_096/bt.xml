<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="t_block"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="t_block" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <DetectObject target="t_block" timeout_ms="1200"/>
    <MoveAbove target="t_block" offset_z="0.02" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="t_block" tolerance="0.005" timeout_ms="1500"/>
    <Push target="t_block" distance="0.2" direction_deg="180" timeout_ms="1500"/>
    <Wait timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
