<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="fridge_handle"/>
      <RetryUntilSuccessful num_attempts="3">
        <DetectObject target="fridge_handle" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <ApproachAndAlign target="fridge_handle" tolerance="0.01" timeout_ms="1500"/>
    <IsAt target="fridge_handle"/>
  </Sequence>
</BehaviorTree>
