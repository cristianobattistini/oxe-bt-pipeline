<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="fridge_door" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Action ID="ScanForTarget" target="fridge_handle" pattern="raster" max_attempts="3" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="fridge_handle" strategy="pull" result_key="grasp_handle"/>
    <Action ID="ApproachAndAlign" target="fridge_handle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="CloseGripper" force="20" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="OpenContainer" target="fridge_door" container_type="hinged_door" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="fridge_door"/>
    <Action ID="Retreat" distance="0.2" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
