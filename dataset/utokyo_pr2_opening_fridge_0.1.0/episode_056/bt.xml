<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="fridge_handle"/>
      <Action ID="ScanForTarget" target="fridge_handle" pattern="arc" max_attempts="3" timeout_ms="800"/>
    </Fallback>
    <Action ID="MoveTo" target="fridge_front" timeout_ms="1500"/>
    <Action ID="MoveAbove" target="fridge_handle_pregrasp" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="fridge_handle" strategy="pull" result_key="grasp_handle"/>
    <Action ID="Pick" grasp_key="grasp_handle" timeout_ms="1200"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="OpenContainer" target="fridge_door" container_type="hinged_door" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Action ID="Wait" timeout_ms="400"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.2" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
