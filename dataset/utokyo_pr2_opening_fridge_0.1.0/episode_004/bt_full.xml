<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="fridge_handle"/>
      <Action ID="ScanForTarget" target="fridge_handle" pattern="arc" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="DetectObject" target="fridge_handle" timeout_ms="1200"/>
    <Action ID="MoveTo" target="fridge_front" timeout_ms="1500"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="fridge_handle" strategy="pull" result_key="handle_grasp"/>
    <Action ID="ApproachAndAlign" target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Action ID="OpenContainer" target="fridge" container_type="hinged_door" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="fridge"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.2" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
