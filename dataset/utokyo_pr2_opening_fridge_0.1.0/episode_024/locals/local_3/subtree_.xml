<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="fridge_handle"/>
      <ScanForTarget target="fridge_handle" pattern="arc" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <DetectObject target="fridge_handle" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <MoveTo target="fridge_handle" timeout_ms="1500"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="90"/>
    <AtOrientation yaw_deg="90"/>
  </Sequence>
</BehaviorTree>
