<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ScanForTarget target="fridge_handle" pattern="arc" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="fridge_handle" timeout_ms="800"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.01" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="fridge_handle_grasp"/>
    <Pick grasp_key="fridge_handle_grasp" timeout_ms="1500"/>
    <IsGraspStable/>
    <OpenContainer target="fridge_door" container_type="hinged_door" timeout_ms="2000"/>
    <Wait timeout_ms="400"/>
    <ContainerOpen target="fridge_door"/>
    <Retreat distance="0.2" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
