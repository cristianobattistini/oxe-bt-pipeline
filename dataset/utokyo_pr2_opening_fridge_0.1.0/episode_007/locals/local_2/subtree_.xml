<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="PoseAvailable" key="grasp_handle"/>
    <Condition ID="IsObjectVisible" target="fridge_handle"/>
    <Action ID="ApproachAndAlign" target="fridge_handle" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="grasp_handle" timeout_ms="1500"/>
    <Condition ID="ObjectInGripper" target="fridge_handle"/>
  </Sequence>
</BehaviorTree>
