<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="fridge" timeout_ms="1200"/>
    <MoveTo target="fridge_front" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <Fallback>
      <Sequence>
        <Condition ID="ContainerOpen" target="fridge"/>
      </Sequence>
      <OpenContainer target="fridge" container_type="hinged_door" timeout_ms="1500"/>
    </Fallback>
    <Retreat distance="0.2" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
