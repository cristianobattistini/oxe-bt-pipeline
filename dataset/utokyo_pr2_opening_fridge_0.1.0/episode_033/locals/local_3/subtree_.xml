<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Sequence>
        <Condition ID="IsObjectVisible" target="fridge_handle"/>
      </Sequence>
      <DetectObject target="fridge_handle" timeout_ms="1200"/>
    </Fallback>
    <SetTCPYaw yaw_deg="90"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    <Condition ID="AtOrientation" yaw_deg="90"/>
  </Sequence>
</BehaviorTree>
