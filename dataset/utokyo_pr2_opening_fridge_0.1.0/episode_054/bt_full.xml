<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="fridge_door" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="fridge_handle" timeout_ms="800"/>
    <MoveTo target="fridge_front" timeout_ms="1500"/>
    <SetTCPYaw yaw_deg="90"/>
    <AtOrientation yaw_deg="90"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="handle_grasp"/>
    <PoseAvailable key="handle_grasp"/>
    <Pick grasp_key="handle_grasp" timeout_ms="1200"/>
    <OpenContainer target="fridge_door" container_type="hinged_door" timeout_ms="1500"/>
    <ContainerOpen target="fridge_door"/>
    <Retreat distance="0.2" timeout_ms="800"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
