<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="fridge" timeout_ms="1200"/>
    <IsObjectVisible target="fridge"/>
    <MoveTo target="fridge" timeout_ms="1500"/>
    <DetectObject target="fridge_handle" timeout_ms="1200"/>
    <IsObjectVisible target="fridge_handle"/>
    <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="handle_grasp"/>
    <PoseAvailable key="handle_grasp"/>
    <SetTCPYaw yaw_deg="90"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.01" timeout_ms="1500"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <OpenContainer target="fridge" container_type="hinged_door" timeout_ms="1500"/>
    <ContainerOpen target="fridge"/>
    <OpenGripper width="0.06" timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
