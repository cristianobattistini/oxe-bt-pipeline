<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <PoseAvailable key="handle_grasp"/>
      <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="handle_grasp"/>
    </Fallback>
    <Timeout timeout_ms="1500">
      <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1500"/>
    </Timeout>
    <SetTCPYaw yaw_deg="90"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <RetryUntilSuccessful num_attempts="2">
      <Pick grasp_key="handle_grasp" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <ObjectInGripper target="fridge_handle"/>
  </Sequence>
</BehaviorTree>
