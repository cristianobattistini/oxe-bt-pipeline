<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="fridge_handle"/>
      <Action ID="ScanForTarget" target="fridge_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="MoveAbove" target="fridge_handle" offset_z="0.03" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Action ID="SetTCPYaw" yaw_deg="90"/>
    <Action ID="OpenContainer" target="fridge_door" container_type="hinged_door" timeout_ms="1500"/>
    <Condition ID="ContainerOpen" target="fridge_door"/>
    <Action ID="Retreat" distance="0.2" timeout_ms="800"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
