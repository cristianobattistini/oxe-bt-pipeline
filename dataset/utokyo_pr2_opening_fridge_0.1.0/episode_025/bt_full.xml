<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="fridge_door" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <Action ID="MoveTo" target="fridge_front" timeout_ms="1200"/>
    <Action ID="DetectObject" target="fridge_handle" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="fridge_handle" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="ComputeGraspPose" target="fridge_handle" strategy="pull" result_key="grasp_handle"/>
    <Action ID="Pick" grasp_key="grasp_handle" timeout_ms="1200"/>
    <Condition ID="IsGraspStable"/>
    <Action ID="OpenContainer" target="fridge_door" container_type="hinged_door" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Condition ID="ContainerOpen" target="fridge_door"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
