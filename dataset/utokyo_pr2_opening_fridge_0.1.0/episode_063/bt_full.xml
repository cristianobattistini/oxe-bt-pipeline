<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="fridge_handle" timeout_ms="1500"/>
    <Fallback>
      <IsAt target="fridge_front"/>
      <MoveTo target="fridge_front" timeout_ms="1500"/>
    </Fallback>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="grasp_handle"/>
    <MoveAbove target="fridge_handle" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1500"/>
    <CloseGripper force="20" timeout_ms="1200"/>
    <OpenContainer target="fridge_door" container_type="hinged_door" timeout_ms="1500"/>
    <ContainerOpen target="fridge_door"/>
    <Retreat distance="0.2" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
