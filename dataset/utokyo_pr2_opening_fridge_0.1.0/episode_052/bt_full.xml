<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="fridge_handle"/>
      <Sequence>
        <ScanForTarget target="fridge_handle" pattern="raster" max_attempts="3" timeout_ms="1200"/>
        <DetectObject target="fridge_handle" timeout_ms="800"/>
      </Sequence>
    </Fallback>
    <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="handle_grasp"/>
    <PoseAvailable key="handle_grasp"/>
    <MoveAbove target="fridge_handle" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="handle_grasp" tolerance="0.01" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="90"/>
    <OpenContainer target="fridge_door" container_type="hinged_door" timeout_ms="1500"/>
    <ContainerOpen target="fridge_door"/>
    <Retreat distance="0.2" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
