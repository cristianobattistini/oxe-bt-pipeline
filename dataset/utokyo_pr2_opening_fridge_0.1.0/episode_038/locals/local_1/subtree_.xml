<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="fridge_handle"/>
      <DetectObject target="fridge_handle" timeout_ms="800"/>
    </Fallback>
    <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="grasp_handle"/>
    <RetryUntilSuccessful num_attempts="2">
      <Pick grasp_key="grasp_handle" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <IsGraspStable/>
    <ObjectInGripper target="fridge_handle"/>
  </Sequence>
</BehaviorTree>
