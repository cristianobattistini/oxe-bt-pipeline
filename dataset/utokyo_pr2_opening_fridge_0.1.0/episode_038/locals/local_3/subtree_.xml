<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <DetectObject target="fridge_handle" timeout_ms="800"/>
      <ScanForTarget target="fridge_handle" pattern="arc" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <MoveTo target="fridge_handle_pregrasp" timeout_ms="1200"/>
    <RetryUntilSuccessful num_attempts="3">
      <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <IsAt target="fridge_handle"/>
  </Sequence>
</BehaviorTree>
