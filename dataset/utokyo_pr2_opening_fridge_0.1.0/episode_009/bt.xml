<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Fallback>
      <DetectObject target="fridge_handle" timeout_ms="800"/>
      <ScanForTarget target="fridge_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <MoveTo target="fridge_handle" timeout_ms="1500"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.01" timeout_ms="1200"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <SetTCPYaw yaw_deg="90"/>
    <Fallback>
      <ContainerOpen target="fridge_door"/>
      <RetryUntilSuccessful num_attempts="3">
        <OpenContainer target="fridge_door" container_type="hinged_door" timeout_ms="2000"/>
      </RetryUntilSuccessful>
    </Fallback>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
