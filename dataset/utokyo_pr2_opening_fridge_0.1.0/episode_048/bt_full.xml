<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="ContainerOpen" target="fridge_door"/>
      <Sequence>
        <ScanForTarget target="fridge_handle" pattern="line" max_attempts="3" timeout_ms="1500"/>
        <DetectObject target="fridge_handle" timeout_ms="1200"/>
        <OpenGripper width="0.09" timeout_ms="500"/>
        <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1500"/>
        <SetTCPYaw yaw_deg="90"/>
        <CloseGripper force="20" timeout_ms="800"/>
        <OpenContainer target="fridge_door" container_type="hinged_door" timeout_ms="2000"/>
        <OpenGripper width="0.09" timeout_ms="500"/>
        <Retreat distance="0.1" timeout_ms="1200"/>
      </Sequence>
    </Fallback>
  </Sequence>
</BehaviorTree>
