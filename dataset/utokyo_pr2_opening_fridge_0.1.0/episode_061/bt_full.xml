<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsAt target="fridge_base"/>
      <MoveTo target="fridge_base" timeout_ms="1500"/>
    </Fallback>
    <Fallback>
      <IsObjectVisible target="fridge_handle"/>
      <RetryUntilSuccessful num_attempts="3">
        <ScanForTarget target="fridge_handle" pattern="arc" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="handle_grasp"/>
    <SetTCPYaw yaw_deg="90"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1500"/>
    <PoseAvailable key="handle_grasp"/>
    <Pick grasp_key="handle_grasp" timeout_ms="1500"/>
    <IsGraspStable/>
    <OpenContainer target="fridge_door" container_type="hinged_door" timeout_ms="2000"/>
    <ContainerOpen target="fridge_door"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <Retreat distance="0.2" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
