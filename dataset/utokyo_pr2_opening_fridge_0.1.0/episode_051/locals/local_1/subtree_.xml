<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="fridge_handle"/>
      <ScanForTarget target="fridge_handle" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.005" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="2">
      <CloseGripper force="20" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <ObjectInGripper target="fridge_handle"/>
  </Sequence>
</BehaviorTree>
