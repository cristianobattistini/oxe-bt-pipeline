<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="fridge_handle"/>
      <ScanForTarget target="fridge_handle" pattern="arc" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <DetectObject target="fridge_handle" timeout_ms="1200"/>
    <MoveTo target="fridge_handle" timeout_ms="1500"/>
    <ApproachAndAlign target="fridge_handle" tolerance="0.01" timeout_ms="1200"/>
    <CloseGripper force="30" timeout_ms="800"/>
    <IsGraspStable/>
    <SetTCPYaw yaw_deg="90"/>
    <OpenContainer target="fridge" container_type="hinged_door" timeout_ms="1500"/>
    <ContainerOpen target="fridge"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
