<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="fridge_handle" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <IsObjectVisible target="fridge_handle"/>
    <MoveTo target="fridge_handle_pregrasp" timeout_ms="1500"/>
    <Timeout timeout_ms="1500">
      <ApproachAndAlign target="fridge_handle" tolerance="0.01" timeout_ms="1500"/>
    </Timeout>
    <SetTCPYaw yaw_deg="90"/>
    <ComputeGraspPose target="fridge_handle" strategy="pull" result_key="grasp_handle"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <OpenContainer target="fridge_door" container_type="hinged_door" timeout_ms="2000"/>
    <ContainerOpen target="fridge_door"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
