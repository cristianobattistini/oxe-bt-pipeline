<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsAt" target="goal"/>
      <RetryUntilSuccessful num_attempts="3">
        <Timeout timeout_ms="5000">
          <Action ID="NavigateToNamed" location_id="goal" yaw_deg="0" timeout_ms="5000"/>
        </Timeout>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="ApproachAndAlign" target="goal" tolerance="0.02" timeout_ms="2000"/>
    <Condition ID="IsAt" target="goal"/>
  </Sequence>
</BehaviorTree>
