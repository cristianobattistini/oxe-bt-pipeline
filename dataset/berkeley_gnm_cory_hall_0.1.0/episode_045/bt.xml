<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="goal_marker"/>
      <Action ID="ScanForTarget" target="goal_marker" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
    </Fallback>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="NavigateToNamed" location_id="goal" yaw_deg="0" timeout_ms="5000"/>
    </RetryUntilSuccessful>
    <Condition ID="IsAt" target="goal"/>
    <Action ID="Wait" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
