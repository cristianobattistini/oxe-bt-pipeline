<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="ObjectInGripper" target="green_bottle"/>
      <Sequence>
        <Action ID="DetectObject" target="green_bottle" timeout_ms="2000"/>
        <Action ID="ApproachAndAlign" target="green_bottle" tolerance="0.01" timeout_ms="2000"/>
        <Action ID="CloseGripper" force="20" timeout_ms="1000"/>
        <Condition ID="IsGraspStable"/>
        <Action ID="RaiseHeld" target="green_bottle" distance="0.10" timeout_ms="1500"/>
      </Sequence>
    </Fallback>
    <Sequence>
      <Action ID="MoveAbove" target="place_on_table" offset_z="0.10" timeout_ms="2000"/>
      <Action ID="LowerUntilContact" speed="slow" max_depth="0.08" force_threshold="5" timeout_ms="2000"/>
      <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
      <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
      <Action ID="Wait" timeout_ms="500"/>
    </Sequence>
  </Sequence>
</BehaviorTree>
