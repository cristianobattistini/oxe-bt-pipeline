<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="cocacola_can" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <Action ID="ApproachAndAlign" target="cocacola_can" tolerance="0.01" timeout_ms="3000"/>
    <Action ID="ComputeGraspPose" target="cocacola_can" strategy="side" result_key="goal_pose"/>
    <Condition ID="PoseAvailable" key="goal_pose"/>
  </Sequence>
</BehaviorTree>