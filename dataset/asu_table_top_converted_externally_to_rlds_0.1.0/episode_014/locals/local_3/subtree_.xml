<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <RetryUntilSuccessful num_attempts="3">
        <DetectObject target="maroon_square" timeout_ms="1500"/>
      </RetryUntilSuccessful>
      <ScanForTarget target="maroon_square" pattern="spiral" max_attempts="3" timeout_ms="3000"/>
    </Fallback>
    <ApproachAndAlign target="maroon_square" tolerance="0.01" timeout_ms="2000"/>
    <Push target="maroon_square" distance="0.30" direction_deg="0" timeout_ms="3000"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <Wait timeout_ms="500"/>
    <IsObjectVisible target="maroon_square"/>
  </Sequence>
</BehaviorTree>