<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="maroon_object"/>
      <Action ID="ScanForTarget" target="maroon_object" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
    </Fallback>
    <Action ID="ApproachAndAlign" target="maroon_object" tolerance="0.01" timeout_ms="3000"/>
    <Action ID="Push" target="maroon_object" distance="0.20" direction_deg="0" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
