<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.08" timeout_ms="1000"/>
    <DetectObject target="white_box" timeout_ms="2000"/>
    <RetryUntilSuccessful num_attempts="3">
      <Sequence>
        <MoveAbove target="white_box" offset_z="0.10" timeout_ms="3000"/>
        <ApproachAndAlign target="white_box" tolerance="0.01" timeout_ms="3000"/>
        <ComputeGraspPose target="white_box" strategy="top" result_key="goal_pose"/>
        <PoseAvailable key="goal_pose"/>
        <GraspAtPose pose_key="goal_pose" strategy="top" timeout_ms="2000"/>
      </Sequence>
    </RetryUntilSuccessful>
    <IsGraspStable/>
    <ObjectInGripper target="white_box"/>
    <RaiseHeld target="white_box" distance="0.10" timeout_ms="2000"/>
    <HoldObject target="white_box" duration_ms="1000"/>
    <Retreat distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
