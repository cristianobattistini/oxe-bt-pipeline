<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="brown_object" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Action ID="ApproachAndAlign" target="brown_object" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="ComputeGraspPose" target="brown_object" strategy="top" result_key="goal_pose"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <Action ID="CloseGripper" force="20" timeout_ms="1000"/>
    <Condition ID="IsGraspStable"/>
    <Condition ID="ObjectInGripper" target="brown_object"/>
    <Action ID="RaiseHeld" target="brown_object" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>
