<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="red_object" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <OpenGripper width="0.10" timeout_ms="800"/>
    <ApproachAndAlign target="red_object" tolerance="0.01" timeout_ms="1500"/>
    <IsObjectVisible target="red_object"/>
    <Push target="red_object" distance="0.20" direction_deg="120" timeout_ms="2000"/>
    <Wait timeout_ms="500"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <IsObjectVisible target="red_object"/>
  </Sequence>
</BehaviorTree>