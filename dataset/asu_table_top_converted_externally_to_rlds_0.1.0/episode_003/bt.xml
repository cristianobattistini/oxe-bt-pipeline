<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="brown_object"/>
      <Action ID="ScanForTarget" target="brown_object" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
    </Fallback>
    <Action ID="ApproachAndAlign" target="brown_object" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="Push" target="brown_object" distance="0.10" direction_deg="270" timeout_ms="1500"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
