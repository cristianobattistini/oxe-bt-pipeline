<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="red_can"/>
      <Sequence>
        <ScanForTarget target="red_can" pattern="spiral" max_attempts="3" timeout_ms="4000"/>
        <DetectObject target="red_can" timeout_ms="2000"/>
      </Sequence>
    </Fallback>
    <OpenGripper width="0.06" timeout_ms="1000"/>
    <ApproachAndAlign target="red_can" tolerance="0.01" timeout_ms="3000"/>
    <ComputeGraspPose target="red_can" strategy="side" result_key="goal_pose"/>
    <PoseAvailable key="goal_pose"/>
    <GraspAtPose pose_key="goal_pose" strategy="pinch" timeout_ms="2000"/>
    <CloseGripper force="20" timeout_ms="1000"/>
    <IsGraspStable/>
    <RaiseHeld target="red_can" distance="0.10" timeout_ms="1500"/>
    <ObjectInGripper target="red_can"/>
    <HoldObject target="red_can" duration_ms="1000"/>
  </Sequence>
</BehaviorTree>
