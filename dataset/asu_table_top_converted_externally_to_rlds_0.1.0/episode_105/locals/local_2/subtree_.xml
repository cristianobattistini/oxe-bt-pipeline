<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="bread"/>
      <Action ID="ScanForTarget" target="bread" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
    </Fallback>
    <Action ID="DetectObject" target="bread" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="Push" target="bread" distance="0.15" direction_deg="90" timeout_ms="2000"/>
    <Condition ID="IsObjectVisible" target="bread"/>
    <Action ID="Retreat" distance="0.10" timeout_ms="1500"/>
  </Sequence>
</BehaviorTree>