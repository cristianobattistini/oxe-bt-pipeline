<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="red_object" timeout_ms="2000"/>
    <MoveAbove target="red_object" offset_z="0.08" timeout_ms="2000"/>
    <ApproachAndAlign target="red_object" tolerance="0.01" timeout_ms="1500"/>
    <OpenGripper width="0.06" timeout_ms="800"/>
    <ComputeGraspPose target="red_object" strategy="pinch" result_key="grasp_red"/>
    <GraspAtPose pose_key="grasp_red" strategy="pinch" timeout_ms="1500"/>
    <CloseGripper force="30" timeout_ms="800"/>
    <ObjectInGripper target="red_object"/>
    <RaiseHeld target="red_object" distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
