<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="PoseAvailable" key="goal_pose"/>
    <Action ID="ApproachAndAlign" target="green_glass_bottle" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="GraspAtPose" pose_key="goal_pose" strategy="side" timeout_ms="2000"/>
    <Action ID="CloseGripper" force="20" timeout_ms="1500"/>
    <Condition ID="IsGraspStable"/>
  </Sequence>
</BehaviorTree>