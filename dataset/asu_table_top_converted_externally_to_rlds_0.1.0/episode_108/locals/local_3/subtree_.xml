<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="bread" timeout_ms="1000"/>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="bread" offset_z="0.05" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="ApproachAndAlign" target="bread" tolerance="0.01" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Condition ID="IsObjectVisible" target="bread"/>
  </Sequence>
</BehaviorTree>