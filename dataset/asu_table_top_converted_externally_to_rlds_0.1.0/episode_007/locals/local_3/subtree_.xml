<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_carton"/>
      <Action ID="ScanForTarget" target="white_carton" pattern="spiral" max_attempts="3" timeout_ms="2000"/>
    </Fallback>
    <Action ID="DetectObject" target="white_carton" timeout_ms="1500"/>
    <Action ID="MoveAbove" target="white_carton" offset_z="0.05" timeout_ms="2000"/>
    <Action ID="ApproachAndAlign" target="white_carton" tolerance="0.01" timeout_ms="2000"/>
    <Condition ID="IsAt" target="white_carton"/>
  </Sequence>
</BehaviorTree>