<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="white_box" timeout_ms="2000"/>
    <ApproachAndAlign target="white_box" tolerance="0.01" timeout_ms="3000"/>
    <ComputeGraspPose target="white_box" strategy="top" result_key="grasp_pose"/>
    <GraspAtPose pose_key="grasp_pose" strategy="top" timeout_ms="2000"/>
    <RaiseHeld target="white_box" distance="0.10" timeout_ms="1500"/>
    <MoveToXY x="0.3" y="0.2" yaw_deg="0" timeout_ms="3000"/>
    <PlaceDown target="white_box" timeout_ms="2000"/>
    <Retreat distance="0.15" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>
