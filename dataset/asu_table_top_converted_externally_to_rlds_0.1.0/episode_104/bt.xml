<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="green_glass_bottle"/>
      <Action ID="ScanForTarget" target="green_glass_bottle" pattern="spiral" max_attempts="3" timeout_ms="3000"/>
    </Fallback>
    <Action ID="DetectObject" target="green_glass_bottle" timeout_ms="2000"/>
    <Action ID="OpenGripper" width="0.08" timeout_ms="1000"/>
    <Action ID="MoveAbove" target="green_glass_bottle" offset_z="0.05" timeout_ms="2000"/>
    <Action ID="ApproachAndAlign" target="green_glass_bottle" tolerance="0.01" timeout_ms="3000"/>
    <Action ID="ComputeGraspPose" target="green_glass_bottle" strategy="side" result_key="bottle_grasp"/>
    <Condition ID="PoseAvailable" key="bottle_grasp"/>
    <Action ID="GraspAtPose" pose_key="bottle_grasp" strategy="side" timeout_ms="3000"/>
    <Action ID="CloseGripper" force="40" timeout_ms="1500"/>
    <Action ID="RaiseHeld" target="green_glass_bottle" distance="0.10" timeout_ms="1500"/>
    <Action ID="HoldObject" target="green_glass_bottle" duration_ms="3000"/>
  </Sequence>
</BehaviorTree>
