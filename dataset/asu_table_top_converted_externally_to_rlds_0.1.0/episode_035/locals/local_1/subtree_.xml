<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="maroon_square" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Action ID="ApproachAndAlign" target="maroon_square" tolerance="0.01" timeout_ms="2000"/>
    <Action ID="ComputeGraspPose" target="maroon_square" strategy="top" result_key="goal_pose"/>
    <Condition ID="PoseAvailable" key="goal_pose"/>
  </Sequence>
</BehaviorTree>