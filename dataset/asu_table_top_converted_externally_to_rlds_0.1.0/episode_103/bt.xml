<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <ObjectInGripper target="red_can"/>
      <Sequence>
        <DetectObject target="red_can" timeout_ms="1500"/>
        <ComputeGraspPose target="red_can" strategy="top" result_key="goal_pose"/>
        <GraspAtPose pose_key="goal_pose" strategy="top" timeout_ms="2000"/>
        <IsGraspStable/>
      </Sequence>
    </Fallback>
    <ApproachAndAlign target="table" tolerance="0.01" timeout_ms="1500"/>
    <PlaceOnSurface target="red_can" area_id="table" yaw_deg="0" press_force="5" timeout_ms="2000"/>
    <OpenGripper width="0.06" timeout_ms="800"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
