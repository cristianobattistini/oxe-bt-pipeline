<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="pepsi_can"/>
      <Sequence>
        <ScanForTarget target="pepsi_can" pattern="line" max_attempts="3" timeout_ms="2000"/>
        <DetectObject target="pepsi_can" timeout_ms="1500"/>
      </Sequence>
    </Fallback>
    <ApproachAndAlign target="pepsi_can" tolerance="0.01" timeout_ms="2000"/>
    <OpenGripper width="0.10" timeout_ms="500"/>
    <Push target="pepsi_can" distance="0.20" direction_deg="90" timeout_ms="1500"/>
    <Retreat distance="0.10" timeout_ms="800"/>
    <Wait timeout_ms="500"/>
    <Inverter>
      <ObjectInGripper target="pepsi_can"/>
    </Inverter>
  </Sequence>
</BehaviorTree>