<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="milk_box" timeout_ms="2000"/>
    </RetryUntilSuccessful>
    <ApproachAndAlign target="milk_box" tolerance="0.01" timeout_ms="3000"/>
    <OpenGripper width="0.10" timeout_ms="1000"/>
    <Push target="milk_box" distance="0.15" direction_deg="0" timeout_ms="2000"/>
    <Inverter>
      <ObjectInGripper target="milk_box"/>
    </Inverter>
    <Wait timeout_ms="500"/>
    <Retreat distance="0.10" timeout_ms="1000"/>
  </Sequence>
</BehaviorTree>