<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <IsObjectVisible target="white_plate"/>
      <DetectObject target="white_plate" timeout_ms="800"/>
    </Fallback>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <ComputeGraspPose target="white_plate" strategy="top" result_key="white_grasp"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="white_grasp" timeout_ms="1200"/>
    <IsGraspStable/>
    <Fallback>
      <IsObjectVisible target="red_plate"/>
      <DetectObject target="red_plate" timeout_ms="800"/>
    </Fallback>
    <MoveAbove target="red_plate" offset_z="0.03" timeout_ms="1200"/>
    <LowerUntilContact speed="normal" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
