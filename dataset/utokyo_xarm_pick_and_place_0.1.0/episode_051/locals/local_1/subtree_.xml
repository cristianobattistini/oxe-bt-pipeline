<BehaviorTree ID="MainTree">
    <Sequence>
        <Fallback>
            <Action ID="DetectObject" target="white_plate" timeout_ms="800"/>
            <Action ID="ScanForTarget" target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
        </Fallback>
        <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
        <Action ID="MoveDelta" axis="z" dist="0.05" timeout_ms="1200"/>
        <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.01" timeout_ms="1500"/>
        <RetryUntilSuccessful num_attempts="2">
            <Action ID="Pick" grasp_key="white_plate_grasp" timeout_ms="1500"/>
        </RetryUntilSuccessful>
        <Condition ID="IsGraspStable"/>
        <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    </Sequence>
</BehaviorTree>