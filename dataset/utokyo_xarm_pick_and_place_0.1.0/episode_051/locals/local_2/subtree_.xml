<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Action ID="DetectObject" target="red_plate" timeout_ms="800"/>
      <Action ID="ScanForTarget" target="red_plate" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="MoveAbove" target="red_plate" offset_z="0.08" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="red_plate" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Inverter>
      <Condition ID="ObjectInGripper" target="white_plate"/>
    </Inverter>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>