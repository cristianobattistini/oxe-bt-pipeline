<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="white_plate" timeout_ms="800"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <MoveAbove target="white_plate" offset_z="0.02" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="pinch" result_key="white_plate_grasp"/>
    <ApproachAndAlign target="white_plate" tolerance="0.01" timeout_ms="1200"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="800"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <DetectObject target="red_plate" timeout_ms="800"/>
    <MoveAbove target="red_plate" offset_z="0.03" timeout_ms="1200"/>
    <PlaceAt pose_key="red_plate_center" yaw_deg="0" press_force="10" timeout_ms="800"/>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
