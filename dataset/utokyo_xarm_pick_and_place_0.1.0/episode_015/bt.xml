<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <DetectObject target="white_plate" timeout_ms="800"/>
    <DetectObject target="red_plate" timeout_ms="800"/>
    <MoveAbove target="white_plate" offset_z="0.02" timeout_ms="1200"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="side" result_key="white_plate_grasp"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="1500"/>
    <IsGraspStable/>
    <MoveAbove target="red_plate" offset_z="0.02" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10.0" timeout_ms="1200"/>
    <OpenGripper width="0.08" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
