<BehaviorTree ID="MainTree">
    <Sequence>
        <RetryUntilSuccessful num_attempts="3">
            <DetectObject target="red_plate" timeout_ms="800"/>
        </RetryUntilSuccessful>
        <MoveAbove target="red_plate" offset_z="0.02" timeout_ms="1200"/>
        <ApproachAndAlign target="red_plate" tolerance="0.005" timeout_ms="1200"/>
        <Timeout timeout_ms="1200">
            <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10.0" timeout_ms="1200"/>
        </Timeout>
        <ContactDetected force_threshold="10.0"/>
        <OpenGripper width="0.08" timeout_ms="500"/>
        <Retreat distance="0.1" timeout_ms="800"/>
    </Sequence>
</BehaviorTree>