<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="3">
      <ScanForTarget target="white_plate" pattern="raster" max_attempts="3" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <DetectObject target="white_plate" timeout_ms="1500"/>
    <MoveAbove target="white_plate" offset_z="0.05" timeout_ms="1500"/>
    <ComputeGraspPose target="white_plate" strategy="top" result_key="wp_grasp"/>
    <ApproachAndAlign target="white_plate" tolerance="0.01" timeout_ms="1500"/>
    <Pick grasp_key="wp_grasp" timeout_ms="1500"/>
    <IsGraspStable/>
    <MoveAbove target="red_plate" offset_z="0.08" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1500"/>
    <PlaceAt pose_key="red_plate_center" yaw_deg="0" press_force="10" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
