<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_plate"/>
      <Action ID="ScanForTarget" target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="white_plate" strategy="suction" result_key="white_plate_grasp"/>
    <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.01" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="white_plate_grasp" timeout_ms="1200"/>
    <Condition ID="ObjectInGripper" target="white_plate"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_plate"/>
      <Action ID="ScanForTarget" target="red_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Action ID="MoveAbove" target="red_plate" offset_z="0.06" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="red_plate" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
