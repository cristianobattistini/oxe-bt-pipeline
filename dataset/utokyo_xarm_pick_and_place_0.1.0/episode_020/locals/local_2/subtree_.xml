<BehaviorTree ID="MainTree">
  <Sequence>
    <Condition ID="IsAt" target="red_plate"/>
    <Action ID="ApproachAndAlign" target="red_plate" tolerance="0.01" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5.0" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Condition ID="ContactDetected" force_threshold="5.0"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>