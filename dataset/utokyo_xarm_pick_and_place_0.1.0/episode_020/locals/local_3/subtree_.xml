<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_plate"/>
      <Sequence>
        <Action ID="ScanForTarget" target="white_plate" pattern="raster" max_attempts="3" timeout_ms="1200"/>
        <Action ID="DetectObject" target="white_plate" timeout_ms="1200"/>
      </Sequence>
    </Fallback>
    <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.005" timeout_ms="1500"/>
    <Condition ID="AtOrientation" yaw_deg="0"/>
  </Sequence>
</BehaviorTree>