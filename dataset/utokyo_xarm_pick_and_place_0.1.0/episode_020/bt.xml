<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_plate"/>
      <Sequence>
        <Action ID="ScanForTarget" target="white_plate" pattern="raster" max_attempts="3" timeout_ms="1200"/>
        <Action ID="DetectObject" target="white_plate" timeout_ms="1200"/>
      </Sequence>
    </Fallback>

    <Action ID="ComputeGraspPose" target="white_plate" strategy="top" result_key="white_plate_grasp"/>
    <Action ID="MoveAbove" target="white_plate" offset_z="0.07" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="Pick" grasp_key="white_plate_grasp" timeout_ms="1500"/>
    <Condition ID="ObjectInGripper" target="white_plate"/>

    <Action ID="MoveAbove" target="red_plate" offset_z="0.08" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="5.0" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
