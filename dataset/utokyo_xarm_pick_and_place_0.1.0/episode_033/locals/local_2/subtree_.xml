<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_plate"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="red_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="MoveAbove" target="red_plate" offset_z="0.04" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="red_plate" tolerance="0.02" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <Condition ID="ContactDetected" force_threshold="10"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>