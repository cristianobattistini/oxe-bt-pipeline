<BehaviorTree ID="MainTree">
    <Sequence>
        <Fallback>
            <Condition ID="IsObjectVisible" target="white_plate"/>
            <Action ID="ScanForTarget" target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
        </Fallback>
        <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
        <Action ID="MoveAbove" target="white_plate" offset_z="0.03" timeout_ms="1500"/>
        <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.01" timeout_ms="1200"/>
        <Action ID="ComputeGraspPose" target="white_plate" strategy="top" result_key="white_grasp"/>
        <Condition ID="PoseAvailable" key="white_grasp"/>
    </Sequence>
</BehaviorTree>