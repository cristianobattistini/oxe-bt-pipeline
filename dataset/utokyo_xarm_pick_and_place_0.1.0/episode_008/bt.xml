<BehaviorTree ID="MainTree">
  <Sequence>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="white_plate" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <MoveAbove target="white_plate" offset_z="0.05" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="pinch" result_key="white_grasp"/>
    <ApproachAndAlign target="white_plate" tolerance="0.01" timeout_ms="1500"/>
    <CloseGripper force="20" timeout_ms="800"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="2">
      <DetectObject target="red_plate" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <MoveAbove target="red_plate" offset_z="0.06" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
