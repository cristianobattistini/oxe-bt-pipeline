<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsGraspStable"/>
      <RetryUntilSuccessful num_attempts="2">
        <Sequence>
          <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
          <Action ID="MoveAbove" target="white_plate" offset_z="0.05" timeout_ms="1500"/>
          <Action ID="ComputeGraspPose" target="white_plate" strategy="top" result_key="grasp_white_plate"/>
          <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.005" timeout_ms="1200"/>
          <Action ID="CloseGripper" force="20" timeout_ms="800"/>
          <Condition ID="IsGraspStable"/>
        </Sequence>
      </RetryUntilSuccessful>
    </Fallback>
    <Condition ID="ObjectInGripper" target="white_plate"/>
  </Sequence>
</BehaviorTree>