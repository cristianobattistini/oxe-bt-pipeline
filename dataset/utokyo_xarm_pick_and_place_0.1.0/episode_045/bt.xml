<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="DetectObject" target="white_plate" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="white_plate" offset_z="0.05" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="white_plate" strategy="top" result_key="grasp_white_plate"/>
    <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="CloseGripper" force="20" timeout_ms="800"/>
    <Condition ID="IsGraspStable"/>
    <Condition ID="ObjectInGripper" target="white_plate"/>
    <Action ID="MoveAbove" target="white_plate" offset_z="0.06" timeout_ms="1200"/>
    <Action ID="DetectObject" target="red_plate" timeout_ms="1200"/>
    <Action ID="MoveAbove" target="red_plate" offset_z="0.06" timeout_ms="1500"/>
    <Action ID="SetBlackboard" key="place_pose" value="red_plate_center"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <Action ID="PlaceAt" pose_key="place_pose" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
