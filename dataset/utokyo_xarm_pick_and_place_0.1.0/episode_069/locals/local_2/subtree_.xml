<BehaviorTree ID="MainTree">
    <Sequence>
        <RetryUntilSuccessful num_attempts="3">
            <DetectObject target="red_plate" timeout_ms="1200"/>
        </RetryUntilSuccessful>
        <MoveAbove target="red_plate" offset_z="0.1" timeout_ms="1200"/>
        <ApproachAndAlign target="red_plate" tolerance="0.005" timeout_ms="1200"/>
        <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
        <OpenGripper width="0.09" timeout_ms="800"/>
        <Retreat distance="0.1" timeout_ms="800"/>
        <DetectObject target="white_plate" timeout_ms="1200"/>
    </Sequence>
</BehaviorTree>