<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <DetectObject target="white_plate" timeout_ms="800"/>
    <DetectObject target="red_plate" timeout_ms="800"/>
    <MoveAbove target="white_plate" offset_z="0.03" timeout_ms="1200"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="suction" result_key="grasp_white"/>
    <Pick grasp_key="grasp_white" timeout_ms="1200"/>
    <IsGraspStable/>
    <MoveAbove target="red_plate" offset_z="0.04" timeout_ms="1500"/>
    <ApproachAndAlign target="red_plate" tolerance="0.01" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
