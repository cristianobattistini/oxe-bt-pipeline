<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <DetectObject target="white_plate" timeout_ms="800"/>
    <ComputeGraspPose target="white_plate" strategy="suction" result_key="white_plate_grasp"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1500"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="1200"/>
    <IsGraspStable/>
    <MoveAbove target="white_plate" offset_z="0.1" timeout_ms="800"/>
    <DetectObject target="red_plate" timeout_ms="800"/>
    <MoveTo target="red_plate_center" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="800"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
