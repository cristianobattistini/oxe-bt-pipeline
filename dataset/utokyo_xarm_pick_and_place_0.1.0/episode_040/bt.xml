<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Action ID="DetectObject" target="white_plate" timeout_ms="1200"/>
      <Action ID="ScanForTarget" target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Condition ID="IsObjectVisible" target="white_plate"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="MoveAbove" target="white_plate" offset_z="0.03" timeout_ms="1500"/>
    <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.005" timeout_ms="1500"/>
    <Action ID="ComputeGraspPose" target="white_plate" strategy="suction" result_key="white_plate_grasp"/>
    <RetryUntilSuccessful num_attempts="2">
      <Action ID="Pick" grasp_key="white_plate_grasp" timeout_ms="1500"/>
    </RetryUntilSuccessful>
    <Condition ID="IsGraspStable"/>
    <Condition ID="ObjectInGripper" target="white_plate"/>
    <Fallback>
      <Action ID="DetectObject" target="red_plate" timeout_ms="1200"/>
      <Action ID="ScanForTarget" target="red_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <Condition ID="IsObjectVisible" target="red_plate"/>
    <Action ID="MoveAbove" target="red_plate" offset_z="0.03" timeout_ms="1500"/>
    <Action ID="SetBlackboard" key="place_pose" value="red_plate_center"/>
    <Condition ID="PoseAvailable" key="place_pose"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.04" force_threshold="10.0" timeout_ms="1200"/>
    <Action ID="PlaceAt" pose_key="place_pose" yaw_deg="0" press_force="10" timeout_ms="1500"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="1200"/>
    <Action ID="Wait" timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
