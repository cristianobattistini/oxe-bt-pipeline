<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_plate"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="white_plate" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="MoveAbove" target="white_plate" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="ComputeGraspPose" target="white_plate" strategy="side" result_key="white_plate_grasp"/>
    <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Pick" grasp_key="white_plate_grasp" timeout_ms="1500"/>
    <Condition ID="ObjectInGripper" target="white_plate"/>
    <Action ID="MoveTo" target="above_red_plate" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <Action ID="PlaceAt" pose_key="red_plate_center" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
