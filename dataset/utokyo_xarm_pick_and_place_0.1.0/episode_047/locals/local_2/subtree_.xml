<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_plate"/>
      <RetryUntilSuccessful num_attempts="3">
        <Action ID="ScanForTarget" target="red_plate" pattern="raster" max_attempts="3" timeout_ms="1200"/>
      </RetryUntilSuccessful>
    </Fallback>
    <Action ID="MoveTo" target="above_red_plate" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="above_red_plate" tolerance="0.005" timeout_ms="1200"/>
    <Condition ID="IsAt" target="above_red_plate"/>
  </Sequence>
</BehaviorTree>