<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <DetectObject target="white_plate" timeout_ms="1200"/>
      <ScanForTarget target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <ComputeGraspPose target="white_plate" strategy="pinch" result_key="white_plate_grasp"/>
    <PoseAvailable key="white_plate_grasp"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1500"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="1500"/>
    <ObjectInGripper target="white_plate"/>
    <Fallback>
      <DetectObject target="red_plate" timeout_ms="1200"/>
      <ScanForTarget target="red_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <SetBlackboard key="on_red_plate_pose" value="red_plate_top"/>
    <PoseAvailable key="on_red_plate_pose"/>
    <MoveAbove target="red_plate" offset_z="0.05" timeout_ms="1200"/>
    <SetTCPYaw yaw_deg="0"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
