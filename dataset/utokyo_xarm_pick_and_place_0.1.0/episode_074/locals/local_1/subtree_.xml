<BehaviorTree ID="MainTree">
    <Sequence>
        <Fallback>
            <DetectObject target="white_plate" timeout_ms="1200"/>
            <ScanForTarget target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
        </Fallback>
        <ComputeGraspPose target="white_plate" strategy="pinch" result_key="white_plate_grasp"/>
        <PoseAvailable key="white_plate_grasp"/>
        <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1500"/>
        <RetryUntilSuccessful num_attempts="2">
            <Pick grasp_key="white_plate_grasp" timeout_ms="1500"/>
        </RetryUntilSuccessful>
        <ObjectInGripper target="white_plate"/>
    </Sequence>
</BehaviorTree>