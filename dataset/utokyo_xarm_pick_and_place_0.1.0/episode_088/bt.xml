<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="white_plate"/>
      <ScanForTarget target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <DetectObject target="white_plate" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="top" result_key="white_plate_grasp"/>
    <MoveAbove target="white_plate" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="1200"/>
    <IsGraspStable/>
    <ObjectInGripper target="white_plate"/>
    <MoveAbove target="red_plate" offset_z="0.05" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
