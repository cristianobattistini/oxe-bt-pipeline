<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="400"/>
    <Fallback>
      <IsObjectVisible target="white_plate"/>
      <ScanForTarget target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <DetectObject target="white_plate" timeout_ms="800"/>
    <ComputeGraspPose target="white_plate" strategy="top" result_key="grasp_white_plate"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <MoveAbove target="white_plate" offset_z="0.02" timeout_ms="800"/>
    <CloseGripper force="30" timeout_ms="800"/>
    <Pick grasp_key="grasp_white_plate" timeout_ms="1200"/>
    <IsGraspStable/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Fallback>
      <IsObjectVisible target="red_plate"/>
      <ScanForTarget target="red_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    </Fallback>
    <DetectObject target="red_plate" timeout_ms="800"/>
    <MoveAbove target="red_plate" offset_z="0.02" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
