<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="white_plate" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <MoveAbove target="white_plate" offset_z="0.02" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="side" result_key="white_plate_grasp"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="1200"/>
    <IsGraspStable/>
    <ObjectInGripper target="white_plate"/>
    <Retreat distance="0.1" timeout_ms="800"/>

    <DetectObject target="red_plate" timeout_ms="1200"/>
    <SetBlackboard key="red_plate_top" value="center_pose"/>
    <MoveAbove target="red_plate" offset_z="0.02" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="1200"/>
    <PlaceAt pose_key="red_plate_top" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>

