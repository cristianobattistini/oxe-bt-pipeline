<BehaviorTree ID="MainTree">
    <Sequence>
        <RetryUntilSuccessful num_attempts="3">
            <DetectObject target="white_plate" timeout_ms="1200"/>
        </RetryUntilSuccessful>
        <OpenGripper width="0.09" timeout_ms="800"/>
        <MoveAbove target="white_plate" offset_z="0.05" timeout_ms="1200"/>
        <ComputeGraspPose target="white_plate" strategy="top" result_key="white_plate_grasp"/>
        <ApproachAndAlign target="white_plate" tolerance="0.01" timeout_ms="1200"/>
        <RetryUntilSuccessful num_attempts="2">
            <Pick grasp_key="white_plate_grasp" timeout_ms="1500"/>
        </RetryUntilSuccessful>
        <IsGraspStable/>
    </Sequence>
</BehaviorTree>