<BehaviorTree ID="MainTree">
    <Sequence>
        <Action ID="DetectObject" target="red_plate" timeout_ms="800"/>
        <Action ID="MoveAbove" target="red_plate" offset_z="0.06" timeout_ms="1200"/>
        <Action ID="ApproachAndAlign" target="red_plate" tolerance="0.005" timeout_ms="1200"/>
        <Action ID="PlaceAt" pose_key="place_pose" yaw_deg="0" press_force="10" timeout_ms="1200"/>
        <Condition ID="ContactDetected" force_threshold="10"/>
        <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
        <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    </Sequence>
</BehaviorTree>