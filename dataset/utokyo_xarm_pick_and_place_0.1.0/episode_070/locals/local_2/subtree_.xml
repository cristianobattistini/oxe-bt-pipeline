<BehaviorTree ID="MainTree">
    <Sequence>
        <RetryUntilSuccessful num_attempts="3">
            <Action ID="DetectObject" target="red_plate" timeout_ms="1500"/>
        </RetryUntilSuccessful>
        <Action ID="ApproachAndAlign" target="red_plate" tolerance="0.01" timeout_ms="1200"/>
        <Action ID="PlaceAt" pose_key="red_plate_top" yaw_deg="0" press_force="10" timeout_ms="1200"/>
        <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
        <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
        <Condition ID="ContactDetected" force_threshold="10"/>
    </Sequence>
</BehaviorTree>