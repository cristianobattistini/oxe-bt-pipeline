<BehaviorTree ID="MainTree">
    <Sequence>
        <RetryUntilSuccessful num_attempts="3">
            <Fallback>
                <IsObjectVisible target="white_plate"/>
                <ScanForTarget target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
            </Fallback>
        </RetryUntilSuccessful>
        <DetectObject target="white_plate" timeout_ms="1200"/>
        <MoveAbove target="white_plate" offset_z="0.08" timeout_ms="1200"/>
        <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
        <LowerUntilContact speed="slow" max_depth="0.04" force_threshold="10" timeout_ms="1200"/>
        <CloseGripper force="20" timeout_ms="1200"/>
        <ObjectInGripper target="white_plate"/>
        <Retreat distance="0.1" timeout_ms="1200"/>
    </Sequence>
</BehaviorTree>