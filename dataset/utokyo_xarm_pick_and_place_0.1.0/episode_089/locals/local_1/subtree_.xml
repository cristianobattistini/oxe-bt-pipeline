<BehaviorTree ID="MainTree">
  <Sequence>
    <ScanForTarget target="red_plate" pattern="grid" max_attempts="3" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="red_plate" timeout_ms="800"/>
    </RetryUntilSuccessful>
    <ApproachAndAlign target="red_plate" tolerance="0.01" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1500"/>
    <ContactDetected force_threshold="10"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>