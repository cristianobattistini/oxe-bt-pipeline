<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <ScanForTarget target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1500"/>
    <DetectObject target="white_plate" timeout_ms="800"/>
    <ComputeGraspPose target="white_plate" strategy="top" result_key="white_plate_grasp"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="1200"/>
    <IsGraspStable/>
    <ScanForTarget target="red_plate" pattern="grid" max_attempts="3" timeout_ms="1500"/>
