<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="white_plate" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <MoveAbove target="white_plate" offset_z="0.02" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="top" result_key="grasp_white_plate"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="grasp_white_plate" timeout_ms="1500"/>
    <RetryUntilSuccessful num_attempts="3">
      <DetectObject target="red_plate" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <MoveAbove target="red_plate" offset_z="0.03" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="1200"/>
    <PlaceAt pose_key="red_plate_surface" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
