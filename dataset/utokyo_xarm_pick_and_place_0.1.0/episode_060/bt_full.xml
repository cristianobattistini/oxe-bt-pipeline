<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <DetectObject target="white_plate" timeout_ms="1200"/>
    <IsObjectVisible target="white_plate"/>
    <MoveAbove target="white_plate" offset_z="0.03" timeout_ms="1200"/>
    <ApproachAndAlign target="white_plate" tolerance="0.01" timeout_ms="1200"/>
    <IsObjectVisible target="white_plate"/>
    <ComputeGraspPose target="white_plate" strategy="pinch" result_key="grasp_white_plate"/>
    <Pick grasp_key="grasp_white_plate" timeout_ms="1500"/>
    <ObjectInGripper target="white_plate"/>
    <IsGraspStable/>
    <DetectObject target="red_plate" timeout_ms="1200"/>
    <MoveAbove target="red_plate" offset_z="0.03" timeout_ms="1200"/>
    <PlaceAt pose_key="red_plate_pose" yaw_deg="0" press_force="10" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10" timeout_ms="800"/>
    <OpenGripper width="0.08" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
