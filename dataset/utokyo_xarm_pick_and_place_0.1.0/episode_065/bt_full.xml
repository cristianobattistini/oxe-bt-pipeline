<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <DetectObject target="white_plate" timeout_ms="1200"/>
    <IsObjectVisible target="white_plate"/>
    <MoveAbove target="white_plate" offset_z="0.02" timeout_ms="1500"/>
    <ComputeGraspPose target="white_plate" strategy="pinch" result_key="grasp_white"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1500"/>
    <Pick grasp_key="grasp_white" timeout_ms="1200"/>
    <IsGraspStable/>
    <DetectObject target="red_plate" timeout_ms="1200"/>
    <MoveAbove target="red_plate" offset_z="0.03" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.02" force_threshold="10.0" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
