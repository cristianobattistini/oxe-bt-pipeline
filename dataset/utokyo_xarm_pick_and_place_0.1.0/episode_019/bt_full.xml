<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="white_plate" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="white_plate" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="ComputeGraspPose" target="white_plate" strategy="pinch" result_key="white_plate_grasp"/>
    <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="Pick" grasp_key="white_plate_grasp" timeout_ms="1500"/>
    <Condition ID="IsGraspStable"/>
    <RetryUntilSuccessful num_attempts="3">
      <Action ID="DetectObject" target="red_plate" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <Action ID="MoveAbove" target="red_plate" offset_z="0.05" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.03" force_threshold="5.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="500"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
