<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <DetectObject target="white_plate" timeout_ms="1200"/>
    <MoveAbove target="white_plate" offset_z="0.05" timeout_ms="1500"/>
    <ComputeGraspPose target="white_plate" strategy="side" result_key="grasp_white_plate"/>
    <ApproachAndAlign target="white_plate" tolerance="0.005" timeout_ms="1200"/>
    <Pick grasp_key="grasp_white_plate" timeout_ms="1500"/>
    <IsGraspStable/>
    <DetectObject target="red_plate" timeout_ms="1200"/>
    <SetBlackboard key="place_on_red" value="red_plate_top"/>
    <PoseAvailable key="place_on_red"/>
    <MoveAbove target="red_plate" offset_z="0.05" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    <PlaceAt pose_key="place_on_red" yaw_deg="0" press_force="10" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="500"/>
  </Sequence>
</BehaviorTree>
