<BehaviorTree ID="MainTree">
  <Sequence>
    <SetBlackboard key="task_goal" value="place_white_plate_on_red_plate"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Fallback>
      <IsObjectVisible target="white_plate"/>
      <ScanForTarget target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <DetectObject target="white_plate" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="top" result_key="white_plate_grasp"/>
    <MoveAbove target="white_plate" offset_z="0.05" timeout_ms="1500"/>
    <ApproachAndAlign target="white_plate" tolerance="0.01" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="1200"/>
    <IsGraspStable/>
    <ObjectInGripper target="white_plate"/>
    <Fallback>
      <IsObjectVisible target="red_plate"/>
      <ScanForTarget target="red_plate" pattern="grid" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <DetectObject target="red_plate" timeout_ms="1200"/>
    <SetBlackboard key="place_pose" value="red_plate_center"/>
    <MoveAbove target="red_plate" offset_z="0.06" timeout_ms="1500"/>
    <LowerUntilContact speed="slow" max_depth="0.03" force_threshold="10" timeout_ms="800"/>
    <PlaceAt pose_key="place_pose" yaw_deg="0" press_force="10" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
    <Wait timeout_ms="400"/>
  </Sequence>
</BehaviorTree>
