<BehaviorTree ID="MainTree">
  <Sequence>
    <DetectObject target="red_plate" timeout_ms="800"/>
    <MoveAbove target="red_plate" offset_z="0.06" timeout_ms="1200"/>
    <ApproachAndAlign target="red_plate" tolerance="0.01" timeout_ms="1200"/>
    <RetryUntilSuccessful num_attempts="3">
      <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10" timeout_ms="1200"/>
    </RetryUntilSuccessful>
    <PlaceAt pose_key="red_plate_center" yaw_deg="0" press_force="10" timeout_ms="1500"/>
    <OpenGripper width="0.06" timeout_ms="500"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>