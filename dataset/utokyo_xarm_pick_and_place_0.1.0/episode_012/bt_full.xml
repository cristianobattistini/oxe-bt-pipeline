<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <DetectObject target="white_plate" timeout_ms="1200"/>
    <MoveAbove target="white_plate" offset_z="0.05" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="top" result_key="grasp_white_plate"/>
    <ApproachAndAlign target="white_plate" tolerance="0.01" timeout_ms="1200"/>
    <Pick grasp_key="grasp_white_plate" timeout_ms="1200"/>
    <IsGraspStable/>
    <DetectObject target="red_plate" timeout_ms="1200"/>
    <MoveAbove target="red_plate" offset_z="0.05" timeout_ms="1200"/>
    <SetBlackboard key="place_pose" value="red_plate_center"/>
    <PlaceAt pose_key="place_pose" yaw_deg="0" press_force="10.0" timeout_ms="1200"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
