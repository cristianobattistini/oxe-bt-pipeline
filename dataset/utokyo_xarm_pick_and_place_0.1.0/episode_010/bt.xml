<BehaviorTree ID="MainTree">
  <Sequence>
    <Fallback>
      <Condition ID="IsObjectVisible" target="white_plate"/>
      <Action ID="ScanForTarget" target="white_plate" pattern="spiral" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="DetectObject" target="white_plate" timeout_ms="800"/>
    <Action ID="ComputeGraspPose" target="white_plate" strategy="top" result_key="white_grasp"/>
    <Condition ID="PoseAvailable" key="white_grasp"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="MoveAbove" target="white_plate" offset_z="0.06" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.01" timeout_ms="1200"/>
    <Action ID="Pick" grasp_key="white_grasp" timeout_ms="1200"/>
    <Condition ID="ObjectInGripper" target="white_plate"/>
    <Fallback>
      <Condition ID="IsObjectVisible" target="red_plate"/>
      <Action ID="ScanForTarget" target="red_plate" pattern="grid" max_attempts="3" timeout_ms="1200"/>
    </Fallback>
    <Action ID="SetBlackboard" key="red_plate_pose" value="red_plate_center"/>
    <Action ID="MoveAbove" target="red_plate" offset_z="0.06" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="5.0" timeout_ms="800"/>
    <Action ID="PlaceAt" pose_key="red_plate_pose" yaw_deg="0" press_force="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
  </Sequence>
</BehaviorTree>
