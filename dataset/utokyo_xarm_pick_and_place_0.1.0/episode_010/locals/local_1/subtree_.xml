<BehaviorTree ID="MainTree">
    <Sequence>
        <Condition ID="PoseAvailable" key="white_grasp"/>
        <Action ID="OpenGripper" width="0.09" timeout_ms="800"/>
        <Action ID="MoveAbove" target="white_plate" offset_z="0.06" timeout_ms="1200"/>
        <Action ID="ApproachAndAlign" target="white_plate" tolerance="0.01" timeout_ms="1200"/>
        <RetryUntilSuccessful num_attempts="3">
            <Action ID="Pick" grasp_key="white_grasp" timeout_ms="1200"/>
        </RetryUntilSuccessful>
        <Condition ID="ObjectInGripper" target="white_plate"/>
    </Sequence>
</BehaviorTree>