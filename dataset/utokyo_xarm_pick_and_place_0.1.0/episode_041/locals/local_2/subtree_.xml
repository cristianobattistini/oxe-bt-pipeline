<BehaviorTree ID="MainTree">
  <Sequence>
    <Action ID="DetectObject" target="red_plate" timeout_ms="1200"/>
    <Condition ID="IsObjectVisible" target="red_plate"/>
    <Action ID="MoveAbove" target="red_plate" offset_z="0.02" timeout_ms="1200"/>
    <Action ID="ApproachAndAlign" target="red_plate" tolerance="0.005" timeout_ms="1200"/>
    <Action ID="LowerUntilContact" speed="slow" max_depth="0.02" force_threshold="10.0" timeout_ms="1200"/>
    <Condition ID="ContactDetected" force_threshold="10.0"/>
    <Action ID="PlaceAt" pose_key="red_plate_center" yaw_deg="0" press_force="10.0" timeout_ms="1200"/>
    <Action ID="OpenGripper" width="0.09" timeout_ms="400"/>
    <Action ID="Retreat" distance="0.1" timeout_ms="800"/>
    <Action ID="Wait" timeout_ms="400"/>
  </Sequence>
</BehaviorTree>