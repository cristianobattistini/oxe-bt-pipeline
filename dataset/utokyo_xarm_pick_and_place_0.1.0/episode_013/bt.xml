<BehaviorTree ID="MainTree">
  <Sequence>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <DetectObject target="white_plate" timeout_ms="1200"/>
    <ComputeGraspPose target="white_plate" strategy="pinch" result_key="white_plate_grasp"/>
    <MoveAbove target="white_plate" offset_z="0.05" timeout_ms="1200"/>
    <ApproachAndAlign target="white_plate" tolerance="0.01" timeout_ms="1500"/>
    <Pick grasp_key="white_plate_grasp" timeout_ms="1500"/>

    <DetectObject target="red_plate" timeout_ms="1200"/>
    <SetBlackboard key="place_pose_key" value="red_plate_center"/>
    <MoveAbove target="red_plate" offset_z="0.05" timeout_ms="1200"/>
    <LowerUntilContact speed="slow" max_depth="0.05" force_threshold="10.0" timeout_ms="1200"/>
    <PlaceAt pose_key="red_plate_center" yaw_deg="0" press_force="10.0" timeout_ms="1500"/>
    <OpenGripper width="0.09" timeout_ms="800"/>
    <Retreat distance="0.1" timeout_ms="1200"/>
  </Sequence>
</BehaviorTree>
